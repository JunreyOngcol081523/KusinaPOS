<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="KusinaPOS.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:KusinaPOS.Converters"
    xmlns:local="clr-namespace:KusinaPOS">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:BoolToStatusConverter x:Key="BoolToStatusConverter" />
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <converters:UnitToBoolConverter x:Key="UnitToBoolConverter" />
            <converters:ImageSourceConverter x:Key="ImageSourceConverter" />
            <converters:StockColorConverter x:Key="StockColorConverter" />
            <converters:EnumToStringConverter x:Key="EnumToStringConverter" />
            <converters:NullToTrueConverter x:Key="NullToTrueConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
