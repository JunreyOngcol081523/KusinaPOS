<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             x:Class="KusinaPOS.Views.MenuItemIngredientsPage"
             xmlns:viewmodel="clr-namespace:KusinaPOS.ViewModel"
             xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
             xmlns:editors="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
             xmlns:behaviors="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             BackgroundColor="{StaticResource BackgroundDark}">


    <Grid RowDefinitions="Auto,*" 
          Padding="20"
          RowSpacing="15">
        <syncfusion:SfBusyIndicator
                        IsRunning="{Binding IsBusy}"
                        AnimationType="CircularMaterial"
                        BackgroundColor="#80000000"
                        InputTransparent="False"/>
        <!-- Header with Back Button -->
        <!-- Top Header -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto,Auto" Margin="0,0,0,8">
            <ImageButton Grid.Column="0"
                    Margin="0,0,15,0"
                    WidthRequest="10"
                    HeightRequest="10"
                    Command="{Binding GoBackCommand}"
                    Source="arrowback.png"
                    BackgroundColor="Transparent">
            </ImageButton>
            <Label Grid.Column="1" 
                   Text="{Binding StoreName, StringFormat='Reports - {0}'}"
                   FontSize="15" 
                   FontAttributes="Bold"
                   TextColor="{StaticResource TextPrimary}"
                   VerticalOptions="Center" />

            <Label Grid.Column="2" 
                   Text="{Binding CurrentDateTime}" 
                   FontSize="12"
                   TextColor="{StaticResource TextSecondary}"
                   VerticalOptions="Center"
                   Margin="0,0,15,0" />

            <HorizontalStackLayout Grid.Column="3" Spacing="8" VerticalOptions="Center">
                <Label Text="{Binding LoggedInUserName}" 
                       FontSize="12"
                       TextColor="{StaticResource TextSecondary}"
                       VerticalOptions="Center" />
                <Border StrokeShape="RoundRectangle 15"
                        WidthRequest="30"
                        HeightRequest="30"
                        BackgroundColor="{StaticResource Primary}">
                    <Label Text="âš™" 
                           FontSize="16"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           TextColor="White" />
                </Border>
            </HorizontalStackLayout>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1" 
              ColumnDefinitions="*,*"
              ColumnSpacing="15">

            <!-- Left Side - Menu Items List -->
            <Border Grid.Column="0"
                    BackgroundColor="{StaticResource SurfaceDark}"
                    Stroke="{StaticResource Gray200}"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 10"
                    Padding="8">

                <Grid RowDefinitions="Auto,Auto,*,Auto"
                      RowSpacing="15">

                    <CollectionView 
                                Grid.Row="0"
                                ItemsSource="{Binding Categories}"
                                SelectionMode="None"
                                ItemsLayout="HorizontalList">

                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Button
                                     HorizontalOptions="Fill"
                                    Text="{Binding Name}"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MenuItemIngredientsViewModel}},
                                                      Path=SelectCategoryCommand}"
                                    CommandParameter="{Binding .}" Margin="5,5,10,5"/>

                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>


                    <!-- Search Bar -->
                    <Border Grid.Row="1"
                            BackgroundColor="{StaticResource Gray100}"
                            StrokeThickness="0"
                            StrokeShape="RoundRectangle 5"
                            Padding="10">
                        <SearchBar 
                                   Placeholder="{Binding SelectedCategoryName, StringFormat='Search from: {0}'}"
                                   PlaceholderColor="{StaticResource Gray500}"
                                   TextColor="{StaticResource TextPrimary}"
                                   BackgroundColor="Transparent"
                                   Text="{Binding SearchText}"/>

                    </Border>

                    <!-- Menu Items List -->

                    <CollectionView Grid.Row="2" ItemsSource="{Binding FilteredMenuItems}"
                                       SelectionMode="Single"
                                       SelectedItem="{Binding SelectedMenuItem}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border BackgroundColor="Transparent"
                                            StrokeThickness="0"
                                            Padding="0,0,0,8">
                                    <Grid ColumnDefinitions="80,*"
                                              Style="{StaticResource IngredientItemStyle}"
                                              ColumnSpacing="15">

                                        <!-- Menu Image -->
                                        <Border Grid.Column="0"
                                                    Style="{StaticResource RoundedImageContainerStyle}"
                                                    StrokeShape="RoundRectangle 8"
                                                    WidthRequest="80"
                                                    HeightRequest="80">
                                            <Image Source="{Binding ImagePath, Converter={StaticResource ImageSourceConverter}}"
                                                       Aspect="AspectFill"
                                                       />
                                        </Border>

                                        <!-- Menu Details -->
                                        <VerticalStackLayout Grid.Column="1"
                                                                Spacing="4">
                                            <Label Text="Menu/Item:"
                                                       TextColor="{StaticResource Gray500}"
                                                       FontSize="10"/>
                                            <Label Text="{Binding Name}"
                                                       TextColor="{StaticResource TextPrimary}"
                                                       FontSize="14"
                                                       FontAttributes="Bold"/>
                                            <Label TextColor="{StaticResource TextPrimary}"
                                                       FontSize="12">
                                                <Label.FormattedText>
                                                    <FormattedString>
                                                        <Span Text="Price: "/>
                                                        <Span Text="{Binding Price, StringFormat='{0:C2}'}"
                                                                  TextColor="{StaticResource Primary}"
                                                                  FontAttributes="Bold"/>
                                                    </FormattedString>
                                                </Label.FormattedText>
                                            </Label>
                                            <Label Text="Main Ingredients:"
                                                       TextColor="{StaticResource Gray500}"
                                                       FontSize="10"
                                                       Margin="0,4,0,0"/>
                                            <Label Text="{Binding IngredientsText}"
                                                       TextColor="{StaticResource TextPrimary}"
                                                       FontSize="11"/>

                                        </VerticalStackLayout>
                                    </Grid>

                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                </Grid>
            </Border>

            <!-- Right Side - Inventory Items -->
            <Border Grid.Column="1"
                    BackgroundColor="{StaticResource SurfaceDark}"
                    Stroke="{StaticResource Gray200}"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 10"
                    Padding="15">

                <Grid RowDefinitions="Auto,Auto,Auto,*,Auto"
                      RowSpacing="15">

                    <!-- Title -->
                    <Label Grid.Row="0"
                           Text="{Binding SelectedMenuItemName, StringFormat='Ingredients for {0}'}"
                           TextColor="{StaticResource TextPrimary}"
                           FontSize="18"
                           FontAttributes="Bold"/>

                    <!-- Search Bar with Add Button -->
                    <Grid Grid.Row="1" 
                          ColumnDefinitions="*,Auto"
                          ColumnSpacing="10">
                        <Border Grid.Column="0"
                                BackgroundColor="{StaticResource Gray100}"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 5"
                                Padding="10">
                            <Grid ColumnDefinitions="Auto,*">
                                <Image Grid.Column="0"
                                       Source="search_icon.png"
                                       WidthRequest="16"
                                       HeightRequest="16"
                                       VerticalOptions="Center"
                                       Margin="0,0,8,0"/>
                                <editors:SfAutocomplete Grid.Column="1"
                                       Placeholder="Search"
                                       DisplayMemberPath="Name"
                                       SelectedValuePath="Id"
                                       PlaceholderColor="{StaticResource Gray500}"
                                       TextColor="{StaticResource TextPrimary}"
                                       BackgroundColor="Transparent"
                                       ItemsSource="{Binding InventoryItems}"
                                       SelectedItem="{Binding SelectedInventoryItem}"/>
                            </Grid>
                        </Border>
                        <Button Grid.Column="1"
                                Text="ADD"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="White"
                                FontSize="12"
                                FontAttributes="Bold"
                                CornerRadius="5"
                                Padding="20,8"
                                Command="{Binding AddInventoryItemServingCommand}"/>
                    </Grid>

                    <!-- Table Header -->
                    <Grid Grid.Row="2"
                          ColumnDefinitions="*,*,*,*"
                          Padding="10,8"
                          BackgroundColor="{StaticResource Gray100}">

                        <Label Grid.Column="0" 
                               Text="Name" 
                               TextColor="{StaticResource White}" 
                               FontSize="11" 
                               HorizontalTextAlignment="Center"
                               FontAttributes="Bold"/>
                        <Label Grid.Column="1" 
                               Text="Unit" 
                               TextColor="{StaticResource White}" 
                               FontSize="11" 
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"/>

                        <Label Grid.Column="2" 
                               Text="Qty per Serving" 
                               TextColor="{StaticResource White}" 
                               FontSize="11" 
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"/>
                        <Label Grid.Column="3" 
                               Text="Action" 
                               TextColor="{StaticResource White}" 
                               FontSize="11" 
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"/>
                    </Grid>

                    <!-- Inventory Items List -->

                    <CollectionView Grid.Row="3" ItemsSource="{Binding MenuItemIngredients}" VerticalOptions="Fill">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="*,*,*,*"
                                          Padding="10,12"
                                          BackgroundColor="{StaticResource BackgroundDark}">

                                    <Label Grid.Column="0" 
                                               HorizontalTextAlignment="Center"
                                               Text="{Binding InventoryItemName}" 
                                               TextColor="{StaticResource TextPrimary}" 
                                               FontSize="12"
                                               VerticalOptions="Center"/>

                                    <Label Grid.Column="1" 
                                               Text="{Binding UnitOfMeasurement}" 
                                               TextColor="{StaticResource TextPrimary}" 
                                               FontSize="12"
                                               VerticalOptions="Center"
                                               HorizontalTextAlignment="Center"/>

                                    <Border Grid.Column="2"
                                                BackgroundColor="{StaticResource Gray100}"
                                                StrokeThickness="1"
                                                Stroke="{StaticResource Gray300}"
                                                StrokeShape="RoundRectangle 5"
                                                Padding="8,4"
                                                HorizontalOptions="Center"
                                                VerticalOptions="Center">
                                        <Entry x:Name="QtyPerServe" 
                                               Text="{Binding QuantityPerMenu, Mode=TwoWay, StringFormat='{0:N2}'}"
                                                   TextColor="{StaticResource TextPrimary}"
                                                   FontSize="12"
                                                   Keyboard="Numeric"                                                   
                                                   HorizontalTextAlignment="Center">

                                        </Entry>
                                    </Border>

                                    <HorizontalStackLayout Grid.Column="3" Spacing="5" HorizontalOptions="Center">
                                        <ImageButton 
                                                HeightRequest="20"
                                                WidthRequest="20"
                                                Source="check.png"
                                                CornerRadius="5"
                                                Padding="8,6"
                                                HorizontalOptions="Center"
                                                VerticalOptions="Center"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MenuItemIngredientsViewModel}}, Path=SaveQuantityCommand}"
                                                CommandParameter="{Binding .}"/>
                                        <ImageButton 
                                                HeightRequest="20"
                                                WidthRequest="20"
                                                Source="delete.png"
                                                CornerRadius="5"
                                                Padding="8,6"
                                                HorizontalOptions="Center"
                                                VerticalOptions="Center"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.RemoveIngredientCommand}"
                                                CommandParameter="{Binding .}"/>
                                    </HorizontalStackLayout>
                                    <BoxView Grid.ColumnSpan="5"
                                                 HeightRequest="1"
                                                 BackgroundColor="{StaticResource Gray100}"
                                                 VerticalOptions="End"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                        <CollectionView.EmptyView>
                            <Label Text="NO INGREDIENTS FOUND"
                               TextColor="{StaticResource TextDisabled}"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                        </CollectionView.EmptyView>
                    </CollectionView>

                </Grid>
            </Border>

        </Grid>

    </Grid>

</ContentPage>