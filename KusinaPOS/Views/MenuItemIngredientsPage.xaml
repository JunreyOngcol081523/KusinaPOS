<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="KusinaPOS.Views.MenuItemIngredientsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviors="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
    xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
    xmlns:controls="clr-namespace:KusinaPOS.Views.Controls"
    xmlns:editors="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
    xmlns:syncfusion="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
    xmlns:viewmodel="clr-namespace:KusinaPOS.ViewModel"
    BackgroundColor="{StaticResource BackgroundDark}">


    <Grid
        Padding="20"
        RowDefinitions="Auto,*"
        RowSpacing="15">
        <syncfusion:SfBusyIndicator
            AnimationType="CircularMaterial"
            BackgroundColor="#80000000"
            InputTransparent="False"
            IsRunning="{Binding IsBusy}" />
        <!--  Top Header  -->
        <controls:AppHeaderView Grid.Row="0" BackgroundColor="Transparent" />

        <!--  Main Content  -->
        <Grid
            Grid.Row="1"
            ColumnDefinitions="*,*"
            ColumnSpacing="15">

            <!--  Left Side - Menu Items List  -->
            <Border
                Grid.Column="0"
                Padding="8"
                BackgroundColor="{StaticResource SurfaceDark}"
                Stroke="{StaticResource Gray200}"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="1">

                <Grid RowDefinitions="Auto,Auto,*,Auto" RowSpacing="15">

                    <CollectionView
                        Grid.Row="0"
                        ItemsLayout="HorizontalList"
                        ItemsSource="{Binding Categories}"
                        SelectionMode="None">

                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Button
                                    Margin="5,5,10,5"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MenuItemIngredientsViewModel}}, Path=SelectCategoryCommand}"
                                    CommandParameter="{Binding .}"
                                    HorizontalOptions="Fill"
                                    Text="{Binding Name}" />

                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>


                    <!--  Search Bar  -->
                    <Border
                        Grid.Row="1"
                        Padding="10"
                        BackgroundColor="{StaticResource Gray100}"
                        StrokeShape="RoundRectangle 5"
                        StrokeThickness="0">
                        <SearchBar
                            BackgroundColor="Transparent"
                            Placeholder="{Binding SelectedCategoryName, StringFormat='Search from: {0}'}"
                            PlaceholderColor="{StaticResource Gray500}"
                            Text="{Binding SearchText}"
                            TextColor="{StaticResource TextPrimary}" />

                    </Border>

                    <!--  Menu Items List  -->

                    <CollectionView
                        Grid.Row="2"
                        ItemsSource="{Binding FilteredMenuItems}"
                        SelectedItem="{Binding SelectedMenuItem}"
                        SelectionMode="Single">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Padding="0,0,0,8"
                                    BackgroundColor="Transparent"
                                    StrokeThickness="0">
                                    <Grid
                                        ColumnDefinitions="80,*"
                                        ColumnSpacing="15"
                                        Style="{StaticResource IngredientItemStyle}">

                                        <!--  Menu Image  -->
                                        <Border
                                            Grid.Column="0"
                                            HeightRequest="80"
                                            StrokeShape="RoundRectangle 8"
                                            Style="{StaticResource RoundedImageContainerStyle}"
                                            WidthRequest="80">
                                            <Image Aspect="AspectFill" Source="{Binding ImagePath, Converter={StaticResource ImageSourceConverter}}" />
                                        </Border>

                                        <!--  Menu Details  -->
                                        <VerticalStackLayout Grid.Column="1" Spacing="4">
                                            <Label
                                                FontSize="10"
                                                Text="Menu/Item:"
                                                TextColor="{StaticResource Gray500}" />
                                            <Label
                                                FontAttributes="Bold"
                                                FontSize="14"
                                                Text="{Binding Name}"
                                                TextColor="{StaticResource TextPrimary}" />
                                            <Label FontSize="12" TextColor="{StaticResource TextPrimary}">
                                                <Label.FormattedText>
                                                    <FormattedString>
                                                        <Span Text="Price: " />
                                                        <Span
                                                            FontAttributes="Bold"
                                                            Text="{Binding Price, StringFormat='{0:C2}'}"
                                                            TextColor="{StaticResource Primary}" />
                                                    </FormattedString>
                                                </Label.FormattedText>
                                            </Label>
                                            <Label
                                                Margin="0,4,0,0"
                                                FontSize="10"
                                                Text="Main Ingredients:"
                                                TextColor="{StaticResource Gray500}" />
                                            <Label
                                                FontSize="11"
                                                Text="{Binding IngredientsText}"
                                                TextColor="{StaticResource TextPrimary}" />

                                        </VerticalStackLayout>
                                    </Grid>

                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                </Grid>
            </Border>

            <!--  Right Side - Inventory Items  -->
            <Border
                Grid.Column="1"
                Padding="15"
                BackgroundColor="{StaticResource SurfaceDark}"
                Stroke="{StaticResource Gray200}"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="1">

                <Grid RowDefinitions="Auto,Auto,Auto,*,Auto" RowSpacing="15">

                    <!--  Title  -->
                    <Label
                        Grid.Row="0"
                        FontAttributes="Bold"
                        FontSize="18"
                        Text="{Binding SelectedMenuItemName, StringFormat='Ingredients for {0}'}"
                        TextColor="{StaticResource TextPrimary}" />

                    <!--  Search Bar with Add Button  -->
                    <Grid
                        Grid.Row="1"
                        ColumnDefinitions="*,Auto"
                        ColumnSpacing="10">
                        <Border
                            Grid.Column="0"
                            Padding="10"
                            BackgroundColor="{StaticResource Gray100}"
                            StrokeShape="RoundRectangle 5"
                            StrokeThickness="0">
                            <Grid ColumnDefinitions="Auto,*">
                                <Image
                                    Grid.Column="0"
                                    Margin="0,0,8,0"
                                    HeightRequest="16"
                                    Source="search_icon.png"
                                    VerticalOptions="Center"
                                    WidthRequest="16" />
                                <editors:SfAutocomplete
                                    Grid.Column="1"
                                    BackgroundColor="Transparent"
                                    DisplayMemberPath="Name"
                                    ItemsSource="{Binding InventoryItems}"
                                    Placeholder="Search"
                                    PlaceholderColor="{StaticResource Gray500}"
                                    SelectedItem="{Binding SelectedInventoryItem}"
                                    SelectedValuePath="Id"
                                    TextColor="{StaticResource TextPrimary}" />
                            </Grid>
                        </Border>
                        <Button
                            Grid.Column="1"
                            Padding="20,8"
                            BackgroundColor="{StaticResource Primary}"
                            Command="{Binding AddInventoryItemServingCommand}"
                            CornerRadius="5"
                            FontAttributes="Bold"
                            FontSize="12"
                            Text="ADD"
                            TextColor="White" />
                    </Grid>

                    <!--  Table Header  -->
                    <Grid
                        Grid.Row="2"
                        Padding="10,8"
                        BackgroundColor="{StaticResource Gray100}"
                        ColumnDefinitions="*,*,*,*">

                        <Label
                            Grid.Column="0"
                            FontAttributes="Bold"
                            FontSize="11"
                            HorizontalTextAlignment="Center"
                            Text="Name"
                            TextColor="{StaticResource White}" />
                        <Label
                            Grid.Column="1"
                            FontAttributes="Bold"
                            FontSize="11"
                            HorizontalTextAlignment="Center"
                            Text="Unit"
                            TextColor="{StaticResource White}" />

                        <Label
                            Grid.Column="2"
                            FontAttributes="Bold"
                            FontSize="11"
                            HorizontalTextAlignment="Center"
                            Text="Qty per Serving"
                            TextColor="{StaticResource White}" />
                        <Label
                            Grid.Column="3"
                            FontAttributes="Bold"
                            FontSize="11"
                            HorizontalTextAlignment="Center"
                            Text="Action"
                            TextColor="{StaticResource White}" />
                    </Grid>

                    <!--  Inventory Items List  -->

                    <CollectionView
                        Grid.Row="3"
                        ItemsSource="{Binding MenuItemIngredients}"
                        VerticalOptions="Fill">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid
                                    Padding="10,12"
                                    BackgroundColor="{StaticResource BackgroundDark}"
                                    ColumnDefinitions="*,*,*,*">

                                    <Label
                                        Grid.Column="0"
                                        FontSize="12"
                                        HorizontalTextAlignment="Center"
                                        Text="{Binding InventoryItemName}"
                                        TextColor="{StaticResource TextPrimary}"
                                        VerticalOptions="Center" />

                                    <Label
                                        Grid.Column="1"
                                        FontSize="12"
                                        HorizontalTextAlignment="Center"
                                        Text="{Binding UnitOfMeasurement}"
                                        TextColor="{StaticResource TextPrimary}"
                                        VerticalOptions="Center" />

                                    <Border
                                        Grid.Column="2"
                                        Padding="8,4"
                                        BackgroundColor="{StaticResource Gray100}"
                                        HorizontalOptions="Center"
                                        Stroke="{StaticResource Gray300}"
                                        StrokeShape="RoundRectangle 5"
                                        StrokeThickness="1"
                                        VerticalOptions="Center">
                                        <Entry
                                            x:Name="QtyPerServe"
                                            FontSize="12"
                                            HorizontalTextAlignment="Center"
                                            Keyboard="Numeric"
                                            Text="{Binding QuantityPerMenu, Mode=TwoWay, StringFormat='{0:N2}'}"
                                            TextColor="{StaticResource TextPrimary}" />
                                    </Border>

                                    <HorizontalStackLayout
                                        Grid.Column="3"
                                        HorizontalOptions="Center"
                                        Spacing="5">
                                        <ImageButton
                                            Padding="8,6"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MenuItemIngredientsViewModel}}, Path=SaveQuantityCommand}"
                                            CommandParameter="{Binding .}"
                                            CornerRadius="5"
                                            HeightRequest="20"
                                            HorizontalOptions="Center"
                                            Source="check.png"
                                            VerticalOptions="Center"
                                            WidthRequest="20" />
                                        <ImageButton
                                            Padding="8,6"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.RemoveIngredientCommand}"
                                            CommandParameter="{Binding .}"
                                            CornerRadius="5"
                                            HeightRequest="20"
                                            HorizontalOptions="Center"
                                            Source="delete.png"
                                            VerticalOptions="Center"
                                            WidthRequest="20" />
                                    </HorizontalStackLayout>
                                    <BoxView
                                        Grid.ColumnSpan="5"
                                        BackgroundColor="{StaticResource Gray100}"
                                        HeightRequest="1"
                                        VerticalOptions="End" />
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                        <CollectionView.EmptyView>
                            <Label
                                HorizontalOptions="Center"
                                Text="NO INGREDIENTS FOUND"
                                TextColor="{StaticResource TextDisabled}"
                                VerticalOptions="Center" />
                        </CollectionView.EmptyView>
                    </CollectionView>

                </Grid>
            </Border>

        </Grid>

    </Grid>

</ContentPage>