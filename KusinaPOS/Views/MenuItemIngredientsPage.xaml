<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             x:Class="KusinaPOS.Views.MenuItemIngredientsPage"
             xmlns:viewmodel="clr-namespace:KusinaPOS.ViewModel"
             xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
             BackgroundColor="{StaticResource BackgroundDark}">

    <Grid RowDefinitions="Auto,*" 
          Padding="20"
          RowSpacing="15">

        <!-- Header with Back Button -->
        <Grid Grid.Row="0" 
              ColumnDefinitions="Auto,*"
              ColumnSpacing="10">
            <ImageButton Grid.Column="0"
                        Source="arrowback.png"
                        BackgroundColor="Transparent"
                        WidthRequest="30"
                        HeightRequest="30"
                        Command="{Binding BackCommand}"/>
            <Label Grid.Column="1"
                   Text="Manage Menu Items Recipe"
                   TextColor="{StaticResource TextPrimary}"
                   FontSize="24"
                   FontAttributes="Bold"
                   VerticalOptions="Center"/>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1" 
              ColumnDefinitions="*,*"
              ColumnSpacing="15">

            <!-- Left Side - Menu Items List -->
            <Border Grid.Column="0"
                    BackgroundColor="{StaticResource SurfaceDark}"
                    Stroke="{StaticResource Gray200}"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 10"
                    Padding="15">

                <Grid RowDefinitions="Auto,Auto,*"
                      RowSpacing="15"
                      >
                    <CollectionView 
                                Grid.Row="0"
                                
                                ItemsSource="{Binding Categories}"
                                SelectionMode="None"
                                ItemsLayout="HorizontalList">

                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Button
                                     HorizontalOptions="Fill"
                                        WidthRequest="120"
                                    Text="{Binding Name}"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MenuItemIngredientsViewModel}},
                                                      Path=SelectCategoryCommand}"
                                    CommandParameter="{Binding .}" Margin="5,5,10,5"/>

                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>




                    <!-- Search Bar -->
                    <Border Grid.Row="1"
                            BackgroundColor="{StaticResource Gray100}"
                            StrokeThickness="0"
                            StrokeShape="RoundRectangle 5"
                            Padding="10">
                        <Grid ColumnDefinitions="Auto,*">
                            <Image Grid.Column="0"
                                   Source="search_icon.png"
                                   WidthRequest="16"
                                   HeightRequest="16"
                                   VerticalOptions="Center"
                                   Margin="0,0,8,0"/>
                            <SearchBar Grid.Column="1"
                                   Placeholder="{Binding SelectedCategoryName, StringFormat='Search from: {0}'}"
                                   PlaceholderColor="{StaticResource Gray500}"
                                   TextColor="{StaticResource TextPrimary}"
                                   BackgroundColor="Transparent"
                                   Text="{Binding SearchText}"/>
                        </Grid>
                    </Border>

                    <!-- Menu Items List -->
                    <ScrollView Grid.Row="2">
                        <CollectionView ItemsSource="{Binding FilteredMenuItems}"
                                       SelectionMode="Single"
                                       SelectedItem="{Binding SelectedMenuItem}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border BackgroundColor="Transparent"
                                            StrokeThickness="0"
                                            Padding="0,0,0,15">
                                        <Grid ColumnDefinitions="80,*"
                                              ColumnSpacing="15">

                                            <!-- Menu Image -->
                                            <Border Grid.Column="0"
                                                    Style="{StaticResource RoundedImageContainerStyle}"
                                                    StrokeShape="RoundRectangle 8"
                                                    WidthRequest="80"
                                                    HeightRequest="80">
                                                <Image Source="{Binding ImagePath, FallbackValue=placeholder_food.png}"
                                                       Aspect="AspectFill"
                                                       />
                                            </Border>

                                            <!-- Menu Details -->
                                            <VerticalStackLayout Grid.Column="1"
                                                                Spacing="4">
                                                <Label Text="Menu/Item:"
                                                       TextColor="{StaticResource Gray500}"
                                                       FontSize="10"/>
                                                <Label Text="{Binding Name}"
                                                       TextColor="{StaticResource TextPrimary}"
                                                       FontSize="14"
                                                       FontAttributes="Bold"/>
                                                <Label TextColor="{StaticResource TextPrimary}"
                                                       FontSize="12">
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="Price: "/>
                                                            <Span Text="{Binding Price, StringFormat='${0:F2}'}"
                                                                  TextColor="{StaticResource Primary}"
                                                                  FontAttributes="Bold"/>
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                </Label>
                                                <Label Text="Main Ingredients:"
                                                       TextColor="{StaticResource Gray500}"
                                                       FontSize="10"
                                                       Margin="0,4,0,0"/>
                                                <Label Text="{Binding IngredientsText}"
                                                       TextColor="{StaticResource TextPrimary}"
                                                       FontSize="11"/>
                                                <Label TextColor="{StaticResource TextPrimary}"
                                                       FontSize="11">
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="Quantity per serving: "/>
                                                            <Span Text="{Binding QuantityPerServing, StringFormat='{0:F3}'}"
                                                                  FontAttributes="Bold"/>
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                </Label>
                                            </VerticalStackLayout>
                                        </Grid>
                                        
                                        <!--when item clicked-->
                                        <Border.GestureRecognizers>
                                            <TapGestureRecognizer
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MenuItemIngredientsViewModel}},
                                                                  Path=SelectMenuItemCommand}"
                                                CommandParameter="{Binding .}"/>
                                        </Border.GestureRecognizers>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </ScrollView>

                </Grid>
            </Border>

            <!-- Right Side - Inventory Items -->
            <Border Grid.Column="1"
                    BackgroundColor="{StaticResource SurfaceDark}"
                    Stroke="{StaticResource Gray200}"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 10"
                    Padding="15">

                <Grid RowDefinitions="Auto,Auto,Auto,*"
                      RowSpacing="15">

                    <!-- Title -->
                    <Label Grid.Row="0"
                           Text="{Binding SelectedMenuItemName, StringFormat='Ingredients for {0}'}"
                           TextColor="{StaticResource TextPrimary}"
                           FontSize="18"
                           FontAttributes="Bold"/>

                    <!-- Search Bar with Add Button -->
                    <Grid Grid.Row="1" 
                          ColumnDefinitions="*,Auto"
                          ColumnSpacing="10">
                        <Border Grid.Column="0"
                                BackgroundColor="{StaticResource Gray100}"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 5"
                                Padding="10">
                            <Grid ColumnDefinitions="Auto,*">
                                <Image Grid.Column="0"
                                       Source="search_icon.png"
                                       WidthRequest="16"
                                       HeightRequest="16"
                                       VerticalOptions="Center"
                                       Margin="0,0,8,0"/>
                                <Entry Grid.Column="1"
                                       Placeholder="Search"
                                       PlaceholderColor="{StaticResource Gray500}"
                                       TextColor="{StaticResource TextPrimary}"
                                       BackgroundColor="Transparent"
                                       Text="{Binding InventorySearchText}"/>
                            </Grid>
                        </Border>
                        <Button Grid.Column="1"
                                Text="ADD"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="White"
                                FontSize="12"
                                FontAttributes="Bold"
                                CornerRadius="5"
                                Padding="20,8"
                                Command="{Binding AddInventoryItemCommand}"/>
                    </Grid>

                    <!-- Table Header -->
                    <Grid Grid.Row="2"
                          ColumnDefinitions="2*,*,*,*,1.5*"
                          Padding="10,8"
                          BackgroundColor="{StaticResource Gray100}">
                        <Label Grid.Column="0" 
                               Text="Name" 
                               TextColor="{StaticResource TextSecondary}" 
                               FontSize="11" 
                               FontAttributes="Bold"/>
                        <Label Grid.Column="1" 
                               Text="Unit" 
                               TextColor="{StaticResource TextSecondary}" 
                               FontSize="11" 
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"/>
                        <Label Grid.Column="2" 
                               Text="Quantity On Hand" 
                               TextColor="{StaticResource TextSecondary}" 
                               FontSize="11" 
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"/>
                        <Label Grid.Column="3" 
                               Text="Qty per Serving" 
                               TextColor="{StaticResource TextSecondary}" 
                               FontSize="11" 
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"/>
                        <Label Grid.Column="4" 
                               Text="Action" 
                               TextColor="{StaticResource TextSecondary}" 
                               FontSize="11" 
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"/>
                    </Grid>

                    <!-- Inventory Items List -->
                    <ScrollView Grid.Row="3">
                        <CollectionView ItemsSource="{Binding RecipeIngredients}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="2*,*,*,*,1.5*"
                                          Padding="10,12"
                                          BackgroundColor="{StaticResource BackgroundDark}">

                                        <Label Grid.Column="0" 
                                               Text="{Binding InventoryItemName}" 
                                               TextColor="{StaticResource TextPrimary}" 
                                               FontSize="12"
                                               VerticalOptions="Center"/>

                                        <Label Grid.Column="1" 
                                               Text="{Binding Unit}" 
                                               TextColor="{StaticResource TextPrimary}" 
                                               FontSize="12"
                                               VerticalOptions="Center"
                                               HorizontalTextAlignment="Center"/>

                                        <Label Grid.Column="2" 
                                               Text="{Binding QuantityOnHand, StringFormat='{0:F1}'}" 
                                               TextColor="{StaticResource TextPrimary}" 
                                               FontSize="12"
                                               VerticalOptions="Center"
                                               HorizontalTextAlignment="Center"/>

                                        <Border Grid.Column="3"
                                                BackgroundColor="{StaticResource Gray100}"
                                                StrokeThickness="1"
                                                Stroke="{StaticResource Gray300}"
                                                StrokeShape="RoundRectangle 5"
                                                Padding="8,4"
                                                HorizontalOptions="Center"
                                                VerticalOptions="Center">
                                            <Label Text="{Binding QuantityNeeded, StringFormat='{0:F3}'}"
                                                   TextColor="{StaticResource TextPrimary}"
                                                   FontSize="12"
                                                   HorizontalTextAlignment="Center"/>
                                        </Border>

                                        <Button Grid.Column="4"
                                                Text="REMOVE FROM MENU"
                                                BackgroundColor="{StaticResource Primary}"
                                                TextColor="White"
                                                FontSize="9"
                                                FontAttributes="Bold"
                                                CornerRadius="5"
                                                Padding="8,6"
                                                HorizontalOptions="Center"
                                                VerticalOptions="Center"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.RemoveIngredientCommand}"
                                                CommandParameter="{Binding .}"/>

                                        <BoxView Grid.ColumnSpan="5"
                                                 HeightRequest="1"
                                                 BackgroundColor="{StaticResource Gray100}"
                                                 VerticalOptions="End"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </ScrollView>

                </Grid>
            </Border>

        </Grid>

    </Grid>

</ContentPage>