<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="KusinaPOS.Views.POSTerminalPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:KusinaPOS.Views.Controls"
    xmlns:converters="clr-namespace:KusinaPOS.Converters"
    xmlns:editors="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
    xmlns:popup="clr-namespace:Syncfusion.Maui.Popup;assembly=Syncfusion.Maui.Popup"
    xmlns:sfButtons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
    xmlns:sfList="clr-namespace:Syncfusion.Maui.ListView;assembly=Syncfusion.Maui.ListView"
    xmlns:tabView="clr-namespace:Syncfusion.Maui.TabView;assembly=Syncfusion.Maui.TabView"
    xmlns:viewmodel="clr-namespace:KusinaPOS.ViewModel"
    BackgroundColor="{StaticResource BackgroundDark}">

    <ContentPage.Resources>
        <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
    </ContentPage.Resources>



    <Grid RowDefinitions="Auto,*">
        <!--  Top Header  -->
        <controls:AppHeaderView Grid.Row="0" BackgroundColor="Transparent" />
        <!--  BODY  -->
        <Grid
            Grid.Row="1"
            Padding="5"
            ColumnDefinitions="Auto,*,380">

            <!--  CATEGORY SIDEBAR - REGULAR BUTTON VERSION  -->
            <CollectionView
                Grid.Column="0"
                Margin="0,10,0,0"
                BackgroundColor="{StaticResource SurfaceDark}"
                ItemsSource="{Binding MenuCategories}"
                SelectionMode="None">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="2,2,2,0"
                            Padding="0"
                            BackgroundColor="Transparent"
                            HeightRequest="110"
                            Rotation="270"
                            StrokeThickness="0"
                            WidthRequest="110">

                            <Button
                                Padding="2,2"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:POSTerminalViewModel}}, Path=SelectCategoryCommand}"
                                CommandParameter="{Binding .}"
                                CornerRadius="8"
                                FontSize="12"
                                HeightRequest="100"
                                LineBreakMode="WordWrap"
                                Text="{Binding Name}"
                                WidthRequest="100">

                                <!--  Triggers for styling based on IsSelected  -->
                                <Button.Triggers>
                                    <DataTrigger
                                        Binding="{Binding IsSelected}"
                                        TargetType="Button"
                                        Value="True">
                                        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
                                        <Setter Property="TextColor" Value="{StaticResource White}" />
                                    </DataTrigger>
                                    <DataTrigger
                                        Binding="{Binding IsSelected}"
                                        TargetType="Button"
                                        Value="False">
                                        <Setter Property="BackgroundColor" Value="{StaticResource Gray200}" />
                                        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
                                    </DataTrigger>
                                </Button.Triggers>
                            </Button>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

            <!--  MENU & PRODUCTS  -->
            <Grid
                Grid.Column="1"
                Padding="8"
                RowDefinitions="Auto,*">
                <Grid
                    Grid.Row="0"
                    BackgroundColor="#80000000"
                    IsVisible="{Binding IsLoading}">
                    <ActivityIndicator
                        HeightRequest="60"
                        HorizontalOptions="Center"
                        IsRunning="{Binding IsLoading}"
                        IsVisible="{Binding IsLoading}"
                        VerticalOptions="Center"
                        WidthRequest="60" />
                </Grid>
                <CollectionView
                    Grid.Row="1"
                    ItemsSource="{Binding FilteredMenuItems}"
                    SelectedItem="{Binding SelectedMenuItem}"
                    SelectionMode="None">
                    <!--  Adaptive grid  -->
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout
                            HorizontalItemSpacing="5"
                            Orientation="Vertical"
                            Span="{OnIdiom Phone=1,
                                           Tablet=2,
                                           Desktop=3}"
                            VerticalItemSpacing="5" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="3"
                                Padding="0"
                                Style="{StaticResource CardBorder}">
                                <VerticalStackLayout Spacing="0">
                                    <!--  PRODUCT IMAGE  -->

                                    <Image
                                        Aspect="AspectFill"
                                        HeightRequest="100"
                                        HorizontalOptions="Fill"
                                        Source="{Binding ImagePath, Converter={StaticResource ImageSourceConverter}}"
                                        VerticalOptions="Start"
                                        WidthRequest="120" />

                                    <!--  TEXT AREA  -->
                                    <VerticalStackLayout Padding="5" Spacing="3">
                                        <!--  PRODUCT NAME  -->
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="12"
                                            LineBreakMode="TailTruncation"
                                            MaxLines="2"
                                            Text="{Binding Name}"
                                            TextColor="{StaticResource TextPrimary}" />

                                        <!--  PRICE  -->
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="15"
                                            Text="{Binding Price, StringFormat='₱{0:F2}'}"
                                            TextColor="{StaticResource TextSecondary}" />

                                        <!--  QTY AND ADD BUTTON ROW  -->
                                        <Grid
                                            Margin="0,4,0,0"
                                            ColumnDefinitions="*,Auto"
                                            ColumnSpacing="5">

                                            <!--  NUMERIC ENTRY  -->
                                            <editors:SfNumericEntry
                                                Grid.Column="0"
                                                BackgroundColor="{StaticResource Gray200}"
                                                CustomFormat="0"
                                                HeightRequest="36"
                                                HorizontalOptions="Fill"
                                                Maximum="999"
                                                Minimum="1"
                                                Stroke="Transparent"
                                                TextColor="{StaticResource TextPrimary}"
                                                UpDownButtonColor="{StaticResource TextOnAccent}"
                                                UpDownPlacementMode="Inline"
                                                VerticalOptions="Center"
                                                Value="{Binding Quantity}" />

                                            <!--  ADD BUTTON  -->
                                            <Button
                                                Grid.Column="1"
                                                Padding="16,0"
                                                BackgroundColor="{StaticResource Gray200}"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:POSTerminalViewModel}}, Path=AddToOrderCommand}"
                                                CommandParameter="{Binding .}"
                                                CornerRadius="6"
                                                FontSize="12"
                                                HeightRequest="36"
                                                ImageSource="addicon.png"
                                                TextColor="White"
                                                VerticalOptions="Center" />
                                        </Grid>
                                    </VerticalStackLayout>
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </Grid>


            <!--  CURRENT ORDER PANEL  -->
            <Border
                Grid.Column="2"
                Padding="5"
                BackgroundColor="{StaticResource SurfaceDark}"
                Stroke="{StaticResource Gray300}"
                StrokeThickness="1">

                <Grid RowDefinitions="Auto,*,Auto,Auto" RowSpacing="5">

                    <Label
                        Grid.Row="0"
                        FontAttributes="Bold"
                        FontSize="15"
                        Text="Current Order"
                        TextColor="{StaticResource TextPrimary}" />

                    <sfList:SfListView
                        Grid.Row="1"
                        ItemsSource="{Binding OrderItems}"
                        SelectionMode="None">
                        <sfList:SfListView.ItemTemplate>
                            <DataTemplate>
                                <Grid
                                    Padding="0,8"
                                    ColumnDefinitions="*,60,Auto,Auto"
                                    ColumnSpacing="8">

                                    <VerticalStackLayout Grid.Column="0">
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="14"
                                            Text="{Binding Name}"
                                            TextColor="{StaticResource TextPrimary}" />
                                        <Label
                                            FontSize="12"
                                            Text="{Binding Price, StringFormat='₱{0:F2}'}"
                                            TextColor="{StaticResource TextSecondary}" />
                                    </VerticalStackLayout>

                                    <Label
                                        Grid.Column="1"
                                        FontAttributes="Bold"
                                        FontSize="14"
                                        HorizontalTextAlignment="Center"
                                        Text="{Binding Quantity, StringFormat='x{0}'}"
                                        TextColor="{StaticResource TextPrimary}"
                                        VerticalTextAlignment="Center" />

                                    <Button
                                        Grid.Column="2"
                                        BackgroundColor="{StaticResource Gray200}"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:POSTerminalViewModel}}, Path=DecreaseOrderItemQuantityCommand}"
                                        CommandParameter="{Binding .}"
                                        CornerRadius="6"
                                        FontAttributes="Bold"
                                        FontSize="Medium"
                                        HeightRequest="36"
                                        Text="-"
                                        TextColor="{StaticResource TextPrimary}"
                                        WidthRequest="36" />

                                    <Button
                                        Grid.Column="3"
                                        BackgroundColor="{StaticResource Primary}"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:POSTerminalViewModel}}, Path=IncreaseOrderItemQuantityCommand}"
                                        CommandParameter="{Binding .}"
                                        CornerRadius="6"
                                        FontAttributes="Bold"
                                        FontSize="Medium"
                                        HeightRequest="36"
                                        Text="+"
                                        TextColor="{StaticResource White}"
                                        WidthRequest="36" />
                                </Grid>
                            </DataTemplate>
                        </sfList:SfListView.ItemTemplate>
                    </sfList:SfListView>

                    <Grid
                        Grid.Row="2"
                        Padding="5,10"
                        ColumnDefinitions="*,Auto">
                        <Label
                            FontSize="14"
                            Text="Subtotal"
                            TextColor="{StaticResource TextSecondary}"
                            VerticalTextAlignment="Center" />
                        <Label
                            Grid.Column="1"
                            FontAttributes="Bold"
                            FontSize="20"
                            Text="{Binding SubtotalAmount, StringFormat='₱{0:N2}'}"
                            TextColor="{StaticResource TextPrimary}" />
                    </Grid>

                    <Button
                        Grid.Row="3"
                        BackgroundColor="{StaticResource Primary}"
                        Command="{Binding CompleteOrderCommand}"
                        CornerRadius="12"
                        FontAttributes="Bold"
                        FontSize="18"
                        HeightRequest="60"
                        Text="COMPLETE ORDER"
                        TextColor="{StaticResource White}" />

                </Grid>
            </Border>

        </Grid>
        <popup:SfPopup
            x:Name="completeOrderPopup"
            Grid.RowSpan="2"
            HeaderTitle="Complete Order"
            HeightRequest="650"
            IsOpen="{Binding IsCompleteOrderPopupOpen}"
            ShowCloseButton="True"
            ShowFooter="False"
            StaysOpen="True"
            WidthRequest="450">
            <popup:SfPopup.PopupStyle>
                <popup:PopupStyle
                    HeaderBackground="{StaticResource SurfaceDark}"
                    HeaderTextColor="{StaticResource TextPrimary}"
                    MessageBackground="{StaticResource SurfaceDark}"
                    Stroke="{StaticResource Gray300}" />
            </popup:SfPopup.PopupStyle>
            <popup:SfPopup.ContentTemplate>
                <DataTemplate>
                    <Grid Padding="10" BackgroundColor="{StaticResource SurfaceDark}">
                        <ScrollView>
                            <tabView:SfTabView x:Name="paymentTabView" IndicatorPlacement="Top">

                                <!--#region CASH-->
                                <tabView:SfTabItem
                                    BackgroundColor="{StaticResource CardBackground}"
                                    Header="Cash"
                                    TextColor="{StaticResource TextPrimary}">
                                    <tabView:SfTabItem.Content>
                                        <VerticalStackLayout Padding="20" Spacing="15">

                                            <Grid ColumnDefinitions="*,Auto">
                                                <Label Text="Subtotal:" TextColor="{StaticResource TextSecondary}" />
                                                <Label
                                                    Grid.Column="1"
                                                    FontAttributes="Bold"
                                                    Text="{Binding SubtotalAmount, StringFormat='₱{0:N2}'}" />
                                            </Grid>

                                            <Grid ColumnDefinitions="*,Auto">
                                                <Label Text="Discounted:" TextColor="{StaticResource TextSecondary}" />
                                                <Label
                                                    Grid.Column="1"
                                                    Text="{Binding DiscountedAmount, StringFormat='₱{0:N2}'}"
                                                    TextColor="{StaticResource TextSecondary}" />
                                            </Grid>

                                            <Grid ColumnDefinitions="*,Auto">
                                                <Label Text="VAT (12%):" TextColor="{StaticResource TextSecondary}" />
                                                <Label Grid.Column="1" Text="{Binding VATAmount, StringFormat='₱{0:N2}'}" />
                                            </Grid>

                                            <BoxView
                                                Margin="0,10"
                                                HeightRequest="1"
                                                Color="{StaticResource Gray300}" />

                                            <Grid ColumnDefinitions="*,Auto">
                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="20"
                                                    Text="Total Amount:" />
                                                <Label
                                                    Grid.Column="1"
                                                    FontAttributes="Bold"
                                                    FontSize="20"
                                                    Text="{Binding TotalPayableAmount, StringFormat='₱{0:N2}'}"
                                                    TextColor="{StaticResource Primary}" />
                                            </Grid>

                                            <VerticalStackLayout Margin="0,20,0,0" Spacing="5">
                                                <Label FontAttributes="Bold" Text="Cash Tendered:" />
                                                <Label
                                                    FontSize="20"
                                                    HorizontalTextAlignment="Center"
                                                    Text="{Binding CashTenderedAmount, StringFormat='₱{0:N2}'}"
                                                    TextColor="{StaticResource TextPrimary}" />
                                            </VerticalStackLayout>
                                            <!--  Compact Horizontal Number Pad  -->
                                            <VerticalStackLayout Margin="0,10,0,0" Spacing="5">

                                                <!--  Row 1  -->
                                                <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                                                    <Button
                                                        Padding="0"
                                                        BackgroundColor="{StaticResource BackgroundDark}"
                                                        Command="{Binding NumberPadCommand}"
                                                        CommandParameter="1"
                                                        FontAttributes="Bold"
                                                        FontSize="12"
                                                        HeightRequest="35"
                                                        Text="1"
                                                        WidthRequest="35" />

                                                    <Button
                                                        Padding="0"
                                                        BackgroundColor="{StaticResource BackgroundDark}"
                                                        Command="{Binding NumberPadCommand}"
                                                        CommandParameter="2"
                                                        FontAttributes="Bold"
                                                        FontSize="12"
                                                        HeightRequest="35"
                                                        Text="2"
                                                        WidthRequest="35" />

                                                    <Button
                                                        Padding="0"
                                                        BackgroundColor="{StaticResource BackgroundDark}"
                                                        Command="{Binding NumberPadCommand}"
                                                        CommandParameter="3"
                                                        FontAttributes="Bold"
                                                        FontSize="12"
                                                        HeightRequest="35"
                                                        Text="3"
                                                        WidthRequest="35" />

                                                    <Button
                                                        Padding="0"
                                                        BackgroundColor="{StaticResource BackgroundDark}"
                                                        Command="{Binding NumberPadCommand}"
                                                        CommandParameter="4"
                                                        FontAttributes="Bold"
                                                        FontSize="12"
                                                        HeightRequest="35"
                                                        Text="4"
                                                        WidthRequest="35" />

                                                    <Button
                                                        Padding="0"
                                                        BackgroundColor="{StaticResource BackgroundDark}"
                                                        Command="{Binding NumberPadCommand}"
                                                        CommandParameter="5"
                                                        FontAttributes="Bold"
                                                        FontSize="12"
                                                        HeightRequest="35"
                                                        Text="5"
                                                        WidthRequest="35" />

                                                    <Button
                                                        Padding="0"
                                                        BackgroundColor="{StaticResource BackgroundDark}"
                                                        Command="{Binding NumberPadCommand}"
                                                        CommandParameter="6"
                                                        FontAttributes="Bold"
                                                        FontSize="12"
                                                        HeightRequest="35"
                                                        Text="6"
                                                        WidthRequest="35" />
                                                </HorizontalStackLayout>

                                                <!--  Row 2  -->
                                                <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                                                    <Button
                                                        Padding="0"
                                                        BackgroundColor="{StaticResource BackgroundDark}"
                                                        Command="{Binding NumberPadCommand}"
                                                        CommandParameter="7"
                                                        FontAttributes="Bold"
                                                        FontSize="12"
                                                        HeightRequest="35"
                                                        Text="7"
                                                        WidthRequest="35" />

                                                    <Button
                                                        Padding="0"
                                                        BackgroundColor="{StaticResource BackgroundDark}"
                                                        Command="{Binding NumberPadCommand}"
                                                        CommandParameter="8"
                                                        FontAttributes="Bold"
                                                        FontSize="12"
                                                        HeightRequest="35"
                                                        Text="8"
                                                        WidthRequest="35" />

                                                    <Button
                                                        Padding="0"
                                                        BackgroundColor="{StaticResource BackgroundDark}"
                                                        Command="{Binding NumberPadCommand}"
                                                        CommandParameter="9"
                                                        FontAttributes="Bold"
                                                        FontSize="12"
                                                        HeightRequest="35"
                                                        Text="9"
                                                        WidthRequest="35" />

                                                    <Button
                                                        Padding="0"
                                                        BackgroundColor="{StaticResource BackgroundDark}"
                                                        Command="{Binding NumberPadCommand}"
                                                        CommandParameter="0"
                                                        FontAttributes="Bold"
                                                        FontSize="12"
                                                        HeightRequest="35"
                                                        Text="0"
                                                        WidthRequest="35" />

                                                    <Button
                                                        Padding="0"
                                                        BackgroundColor="#dc3545"
                                                        Command="{Binding BackspaceCommand}"
                                                        FontAttributes="Bold"
                                                        FontSize="12"
                                                        HeightRequest="35"
                                                        Text="⌫"
                                                        TextColor="White"
                                                        WidthRequest="50" />
                                                </HorizontalStackLayout>

                                            </VerticalStackLayout>


                                            <Grid ColumnDefinitions="*,Auto">
                                                <Label FontSize="18" Text="Change:" />
                                                <Label
                                                    Grid.Column="1"
                                                    FontAttributes="Bold"
                                                    FontSize="18"
                                                    Text="{Binding ChangeAmount, StringFormat='₱{0:N2}'}"
                                                    TextColor="#28a745" />
                                            </Grid>

                                            <Button
                                                Margin="0,20,0,0"
                                                BackgroundColor="{StaticResource Primary}"
                                                Command="{Binding ConfirmPaymentCommand}"
                                                HeightRequest="50"
                                                Text="CONFIRM CASH PAYMENT" />
                                        </VerticalStackLayout>
                                    </tabView:SfTabItem.Content>
                                </tabView:SfTabItem>
                                <!--#endregion-->

                                <!--#region GCASH-->
                                <tabView:SfTabItem
                                    BackgroundColor="{StaticResource CardBackground}"
                                    Header="GCash"
                                    TextColor="{StaticResource TextPrimary}">
                                    <tabView:SfTabItem.Content>
                                        <ScrollView>
                                            <VerticalStackLayout Padding="20" Spacing="15">

                                                <VerticalStackLayout Margin="0,0,0,10" Spacing="8">
                                                    <Grid ColumnDefinitions="*,Auto">
                                                        <Label Text="Subtotal:" TextColor="{StaticResource TextSecondary}" />
                                                        <Label
                                                            Grid.Column="1"
                                                            FontAttributes="Bold"
                                                            Text="{Binding SubtotalAmount, StringFormat='₱{0:N2}'}"
                                                            TextColor="{StaticResource TextPrimary}" />
                                                    </Grid>

                                                    <Grid ColumnDefinitions="*,Auto">
                                                        <Label Text="Discounted:" TextColor="{StaticResource TextSecondary}" />
                                                        <Label
                                                            Grid.Column="1"
                                                            Text="{Binding DiscountedAmount, StringFormat='₱{0:N2}'}"
                                                            TextColor="{StaticResource TextSecondary}" />
                                                    </Grid>

                                                    <Grid ColumnDefinitions="*,Auto">
                                                        <Label Text="VAT (12%):" TextColor="{StaticResource TextSecondary}" />
                                                        <Label
                                                            Grid.Column="1"
                                                            Text="{Binding VATAmount, StringFormat='₱{0:N2}'}"
                                                            TextColor="{StaticResource TextPrimary}" />
                                                    </Grid>

                                                    <BoxView
                                                        Margin="0,5"
                                                        HeightRequest="1"
                                                        Color="{StaticResource Gray300}" />

                                                    <Grid ColumnDefinitions="*,Auto">
                                                        <Label
                                                            FontAttributes="Bold"
                                                            FontSize="18"
                                                            Text="Total Amount:"
                                                            TextColor="{StaticResource TextPrimary}" />
                                                        <Label
                                                            Grid.Column="1"
                                                            FontAttributes="Bold"
                                                            FontSize="20"
                                                            Text="{Binding TotalPayableAmount, StringFormat='₱{0:N2}'}"
                                                            TextColor="{StaticResource Primary}" />
                                                    </Grid>
                                                </VerticalStackLayout>

                                                <BoxView HeightRequest="1" Color="{StaticResource Gray300}" />

                                                <Label
                                                    Margin="0,10,0,0"
                                                    FontAttributes="Bold"
                                                    HorizontalOptions="Center"
                                                    Text="Scan to Pay via GCash"
                                                    TextColor="{StaticResource TextPrimary}" />

                                                <Border
                                                    Padding="5"
                                                    HorizontalOptions="Center"
                                                    Stroke="{StaticResource Gray300}"
                                                    StrokeThickness="1">
                                                    <Image
                                                        Aspect="AspectFit"
                                                        HeightRequest="200"
                                                        Source="{Binding GcashQrSource}"
                                                        WidthRequest="200" />
                                                </Border>

                                                <VerticalStackLayout
                                                    HorizontalOptions="Center"
                                                    Spacing="5"
                                                    WidthRequest="300">
                                                    <Label
                                                        FontAttributes="Bold"
                                                        Text="Reference Number:"
                                                        TextColor="{StaticResource TextPrimary}" />
                                                    <Entry
                                                        BackgroundColor="{StaticResource Gray200}"
                                                        FontSize="18"
                                                        HorizontalTextAlignment="Center"
                                                        Keyboard="Numeric"
                                                        MaxLength="13"
                                                        Placeholder="Enter 13-digit Ref #"
                                                        Text="{Binding GcashRefNumber}"
                                                        TextColor="{StaticResource TextPrimary}" />
                                                </VerticalStackLayout>

                                                <Button
                                                    BackgroundColor="#28a745"
                                                    Command="{Binding ConfirmGcashPaymentCommand}"
                                                    FontAttributes="Bold"
                                                    FontSize="16"
                                                    HeightRequest="55"
                                                    HorizontalOptions="Center"
                                                    Text="CONFIRM GCASH PAYMENT"
                                                    WidthRequest="300" />
                                            </VerticalStackLayout>
                                        </ScrollView>
                                    </tabView:SfTabItem.Content>
                                </tabView:SfTabItem>
                                <!--#endregion-->

                            </tabView:SfTabView>
                        </ScrollView>

                    </Grid>
                </DataTemplate>
            </popup:SfPopup.ContentTemplate>
        </popup:SfPopup>
    </Grid>
</ContentPage>
