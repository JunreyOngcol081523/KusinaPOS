<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="KusinaPOS.Views.POSTerminalPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:KusinaPOS.Views.Controls"
    xmlns:converters="clr-namespace:KusinaPOS.Converters"
    xmlns:editors="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
    xmlns:sfButtons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
    xmlns:sfList="clr-namespace:Syncfusion.Maui.ListView;assembly=Syncfusion.Maui.ListView"
    xmlns:viewmodel="clr-namespace:KusinaPOS.ViewModel"
    BackgroundColor="{StaticResource BackgroundDark}">

    <ContentPage.Resources>
        <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
    </ContentPage.Resources>



    <Grid RowDefinitions="Auto,*">
        <!--  Top Header  -->
        <controls:AppHeaderView Grid.Row="0" BackgroundColor="Transparent" />
        <!--  BODY  -->
        <Grid
            Grid.Row="1"
            Padding="5"
            ColumnDefinitions="Auto,*,380">

            <!--  CATEGORY SIDEBAR - REGULAR BUTTON VERSION  -->
            <CollectionView
                Grid.Column="0"
                Margin="0,10,0,0"
                BackgroundColor="{StaticResource SurfaceDark}"
                ItemsSource="{Binding MenuCategories}"
                SelectionMode="None">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="2,2,2,0"
                            Padding="0"
                            BackgroundColor="Transparent"
                            HeightRequest="110"
                            Rotation="270"
                            StrokeThickness="0"
                            WidthRequest="110">

                            <Button
                                Padding="2,2"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:POSTerminalViewModel}}, Path=SelectCategoryCommand}"
                                CommandParameter="{Binding .}"
                                CornerRadius="8"
                                FontSize="12"
                                HeightRequest="100"
                                LineBreakMode="WordWrap"
                                Text="{Binding Name}"
                                WidthRequest="100">

                                <!--  Triggers for styling based on IsSelected  -->
                                <Button.Triggers>
                                    <DataTrigger
                                        Binding="{Binding IsSelected}"
                                        TargetType="Button"
                                        Value="True">
                                        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
                                        <Setter Property="TextColor" Value="{StaticResource White}" />
                                    </DataTrigger>
                                    <DataTrigger
                                        Binding="{Binding IsSelected}"
                                        TargetType="Button"
                                        Value="False">
                                        <Setter Property="BackgroundColor" Value="{StaticResource Gray200}" />
                                        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
                                    </DataTrigger>
                                </Button.Triggers>
                            </Button>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

            <!--  MENU & PRODUCTS  -->
            <Grid
                Grid.Column="1"
                Padding="8"
                RowDefinitions="Auto,*">
                <Grid
                    Grid.Row="0"
                    BackgroundColor="#80000000"
                    IsVisible="{Binding IsLoading}">
                    <ActivityIndicator
                        HeightRequest="60"
                        HorizontalOptions="Center"
                        IsRunning="{Binding IsLoading}"
                        IsVisible="{Binding IsLoading}"
                        VerticalOptions="Center"
                        WidthRequest="60" />
                </Grid>
                <CollectionView
                    Grid.Row="1"
                    ItemsSource="{Binding FilteredMenuItems}"
                    SelectedItem="{Binding SelectedMenuItem}"
                    SelectionMode="None">
                    <!--  Adaptive grid  -->
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout
                            HorizontalItemSpacing="5"
                            Orientation="Vertical"
                            Span="{OnIdiom Phone=1,
                                           Tablet=2,
                                           Desktop=3}"
                            VerticalItemSpacing="5" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="3"
                                Padding="0"
                                Style="{StaticResource CardBorder}">
                                <VerticalStackLayout Spacing="0">
                                    <!--  PRODUCT IMAGE  -->

                                    <Image
                                        Aspect="AspectFill"
                                        HeightRequest="100"
                                        HorizontalOptions="Fill"
                                        Source="{Binding ImagePath, Converter={StaticResource ImageSourceConverter}}"
                                        VerticalOptions="Start"
                                        WidthRequest="120" />

                                    <!--  TEXT AREA  -->
                                    <VerticalStackLayout Padding="5" Spacing="3">
                                        <!--  PRODUCT NAME  -->
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="12"
                                            LineBreakMode="TailTruncation"
                                            MaxLines="2"
                                            Text="{Binding Name}"
                                            TextColor="{StaticResource TextPrimary}" />

                                        <!--  PRICE  -->
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="15"
                                            Text="{Binding Price, StringFormat='₱{0:F2}'}"
                                            TextColor="{StaticResource TextSecondary}" />

                                        <!--  QTY AND ADD BUTTON ROW  -->
                                        <Grid
                                            Margin="0,4,0,0"
                                            ColumnDefinitions="*,Auto"
                                            ColumnSpacing="5">

                                            <!--  NUMERIC ENTRY  -->
                                            <editors:SfNumericEntry
                                                Grid.Column="0"
                                                BackgroundColor="{StaticResource Gray200}"
                                                CustomFormat="0"
                                                HeightRequest="36"
                                                HorizontalOptions="Fill"
                                                Maximum="999"
                                                Minimum="1"
                                                Stroke="Transparent"
                                                TextColor="{StaticResource TextPrimary}"
                                                UpDownButtonColor="{StaticResource TextOnAccent}"
                                                UpDownPlacementMode="Inline"
                                                VerticalOptions="Center"
                                                Value="{Binding Quantity}" />

                                            <!--  ADD BUTTON  -->
                                            <Button
                                                Grid.Column="1"
                                                Padding="16,0"
                                                BackgroundColor="{StaticResource Gray200}"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:POSTerminalViewModel}}, Path=AddToOrderCommand}"
                                                CommandParameter="{Binding .}"
                                                CornerRadius="6"
                                                FontSize="12"
                                                HeightRequest="36"
                                                ImageSource="addicon.png"
                                                TextColor="White"
                                                VerticalOptions="Center" />
                                        </Grid>
                                    </VerticalStackLayout>
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </Grid>


            <!--  CURRENT ORDER PANEL  -->
            <Border
                Grid.Column="2"
                Padding="5"
                BackgroundColor="{StaticResource SurfaceDark}"
                Stroke="{StaticResource Gray300}"
                StrokeThickness="1">

                <Grid RowDefinitions="Auto,*,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" RowSpacing="5">

                    <Label
                        Grid.Row="0"
                        FontAttributes="Bold"
                        FontSize="15"
                        Text="Current Order"
                        TextColor="{StaticResource TextPrimary}" />


                    <!--  ORDER ITEMS  -->
                    <sfList:SfListView
                        Grid.Row="1"
                        ItemsSource="{Binding OrderItems}"
                        SelectionMode="None">

                        <sfList:SfListView.ItemTemplate>
                            <DataTemplate>
                                <Grid
                                    Padding="0,8"
                                    ColumnDefinitions="*,60,Auto,Auto"
                                    ColumnSpacing="8">

                                    <!--  ITEM INFO  -->
                                    <VerticalStackLayout Grid.Column="0">
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="14"
                                            Text="{Binding Name}"
                                            TextColor="{StaticResource TextPrimary}" />
                                        <Label
                                            FontSize="12"
                                            Text="{Binding Price, StringFormat='₱{0:F2}'}"
                                            TextColor="{StaticResource TextSecondary}" />
                                    </VerticalStackLayout>

                                    <!--  QUANTITY  -->
                                    <Label
                                        Grid.Column="1"
                                        FontAttributes="Bold"
                                        FontSize="14"
                                        HorizontalTextAlignment="Center"
                                        Text="{Binding Quantity, StringFormat='x{0}'}"
                                        TextColor="{StaticResource TextPrimary}"
                                        VerticalTextAlignment="Center" />

                                    <!--  DECREASE BUTTON  -->
                                    <Button
                                        Grid.Column="2"
                                        BackgroundColor="{StaticResource Gray200}"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:POSTerminalViewModel}}, Path=DecreaseOrderItemQuantityCommand}"
                                        CommandParameter="{Binding .}"
                                        CornerRadius="6"
                                        FontAttributes="Bold"
                                        FontSize="Medium"
                                        HeightRequest="36"
                                        Text="-"
                                        TextColor="{StaticResource TextPrimary}"
                                        WidthRequest="36" />

                                    <!--  INCREASE BUTTON  -->
                                    <Button
                                        Grid.Column="3"
                                        BackgroundColor="{StaticResource Primary}"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:POSTerminalViewModel}}, Path=IncreaseOrderItemQuantityCommand}"
                                        CommandParameter="{Binding .}"
                                        CornerRadius="6"
                                        FontAttributes="Bold"
                                        FontSize="Medium"
                                        HeightRequest="36"
                                        Text="+"
                                        TextColor="{StaticResource White}"
                                        WidthRequest="36" />

                                </Grid>
                            </DataTemplate>
                        </sfList:SfListView.ItemTemplate>

                    </sfList:SfListView>

                    <!--  SUBTOTAL  -->
                    <Grid Grid.Row="2" ColumnDefinitions="*,Auto">

                        <Label Text="Subtotal" TextColor="{StaticResource TextSecondary}" />
                        <Label
                            Grid.Column="1"
                            Text="{Binding SubtotalAmount}"
                            TextColor="{StaticResource TextPrimary}" />
                    </Grid>

                    <!--  DISCOUNTED AMOUNT  -->
                    <Grid Grid.Row="3" ColumnDefinitions="*,Auto">
                        <Label
                            Text="Discounted Amount"
                            TextColor="{StaticResource TextSecondary}"
                            VerticalTextAlignment="Center" />
                        <Label
                            Grid.Column="1"
                            Text="{Binding DiscountedAmount}"
                            TextColor="{StaticResource TextPrimary}"
                            VerticalTextAlignment="Center" />
                    </Grid>

                    <!--  VAT %  -->
                    <Grid Grid.Row="4" ColumnDefinitions="*,Auto">
                        <Label
                            Text="VAT %"
                            TextColor="{StaticResource TextSecondary}"
                            VerticalTextAlignment="Center" />
                        <Label
                            Grid.Column="1"
                            Text="{Binding VATAmount}"
                            TextColor="{StaticResource TextPrimary}"
                            VerticalTextAlignment="Center" />
                    </Grid>

                    <!--  TOTAL PAYABLE  -->
                    <Grid Grid.Row="5" ColumnDefinitions="*,Auto">
                        <Label
                            FontAttributes="Bold"
                            Text="Total Payable"
                            TextColor="{StaticResource TextSecondary}"
                            VerticalTextAlignment="Center" />
                        <Label
                            Grid.Column="1"
                            FontAttributes="Bold"
                            Text="{Binding TotalPayableAmount}"
                            TextColor="{StaticResource TextPrimary}"
                            VerticalTextAlignment="Center" />
                    </Grid>

                    <!--  CASH TENDERED  -->
                    <Grid Grid.Row="6" ColumnDefinitions="*,Auto">
                        <Label
                            Text="Cash Tendered ₱"
                            TextColor="{StaticResource TextSecondary}"
                            VerticalTextAlignment="Center" />
                        <Label
                            Grid.Column="1"
                            FontAttributes="Bold"
                            Text="{Binding CashTenderedAmount}"
                            TextColor="{StaticResource TextPrimary}"
                            VerticalTextAlignment="Center" />
                    </Grid>

                    <!--  CHANGE  -->
                    <Grid Grid.Row="7" ColumnDefinitions="*,Auto">
                        <Label
                            Text="Change"
                            TextColor="{StaticResource TextSecondary}"
                            VerticalTextAlignment="Center" />
                        <Label
                            Grid.Column="1"
                            FontAttributes="Bold"
                            Text="{Binding ChangeAmount}"
                            TextColor="{StaticResource TextPrimary}"
                            VerticalTextAlignment="Center" />
                    </Grid>

                    <!--  NUMERIC KEYPAD  -->
                    <Border Grid.Row="8">

                        <Grid ColumnDefinitions="*,*,*,*,*,*,*,*,*,*,*" ColumnSpacing="1">

                            <Button
                                Grid.Column="0"
                                BackgroundColor="{StaticResource Gray300}"
                                Command="{Binding NumberPadCommand}"
                                CommandParameter="1"
                                FontAttributes="Bold"
                                FontSize="8"
                                Text="1"
                                TextColor="{StaticResource TextPrimary}" />

                            <Button
                                Grid.Column="1"
                                BackgroundColor="{StaticResource Gray300}"
                                Command="{Binding NumberPadCommand}"
                                CommandParameter="2"
                                FontAttributes="Bold"
                                FontSize="8"
                                Text="2"
                                TextColor="{StaticResource TextPrimary}" />

                            <Button
                                Grid.Column="2"
                                BackgroundColor="{StaticResource Gray300}"
                                Command="{Binding NumberPadCommand}"
                                CommandParameter="3"
                                FontAttributes="Bold"
                                FontSize="8"
                                Text="3"
                                TextColor="{StaticResource TextPrimary}" />

                            <Button
                                Grid.Column="3"
                                BackgroundColor="{StaticResource Gray300}"
                                Command="{Binding NumberPadCommand}"
                                CommandParameter="4"
                                FontAttributes="Bold"
                                FontSize="8"
                                Text="4"
                                TextColor="{StaticResource TextPrimary}" />

                            <Button
                                Grid.Column="4"
                                BackgroundColor="{StaticResource Gray300}"
                                Command="{Binding NumberPadCommand}"
                                CommandParameter="5"
                                FontAttributes="Bold"
                                FontSize="8"
                                Text="5"
                                TextColor="{StaticResource TextPrimary}" />

                            <Button
                                Grid.Column="5"
                                BackgroundColor="{StaticResource Gray300}"
                                Command="{Binding NumberPadCommand}"
                                CommandParameter="6"
                                FontAttributes="Bold"
                                FontSize="8"
                                Text="6"
                                TextColor="{StaticResource TextPrimary}" />

                            <Button
                                Grid.Column="6"
                                BackgroundColor="{StaticResource Gray300}"
                                Command="{Binding NumberPadCommand}"
                                CommandParameter="7"
                                FontAttributes="Bold"
                                FontSize="8"
                                Text="7"
                                TextColor="{StaticResource TextPrimary}" />

                            <Button
                                Grid.Column="7"
                                BackgroundColor="{StaticResource Gray300}"
                                Command="{Binding NumberPadCommand}"
                                CommandParameter="8"
                                FontAttributes="Bold"
                                FontSize="8"
                                Text="8"
                                TextColor="{StaticResource TextPrimary}" />

                            <Button
                                Grid.Column="8"
                                BackgroundColor="{StaticResource Gray300}"
                                Command="{Binding NumberPadCommand}"
                                CommandParameter="9"
                                FontAttributes="Bold"
                                FontSize="8"
                                Text="9"
                                TextColor="{StaticResource TextPrimary}" />

                            <Button
                                Grid.Column="9"
                                BackgroundColor="{StaticResource Gray300}"
                                Command="{Binding NumberPadCommand}"
                                CommandParameter="0"
                                FontAttributes="Bold"
                                FontSize="8"
                                Text="0"
                                TextColor="{StaticResource TextPrimary}" />
                            <!--  BACKSPACE BUTTON  -->
                            <Button
                                Grid.Column="10"
                                BackgroundColor="{StaticResource Error}"
                                Command="{Binding BackspaceCommand}"
                                FontAttributes="Bold"
                                FontSize="8"
                                Text="~"
                                TextColor="{StaticResource White}" />
                        </Grid>
                    </Border>

                    <!--  COMPLETE  -->
                    <Button
                        Grid.Row="9"
                        BackgroundColor="{StaticResource Primary}"
                        Command="{Binding CompleteOrderCommand}"
                        CornerRadius="12"
                        Text="COMPLETE ORDER"
                        TextColor="{StaticResource White}" />

                </Grid>
            </Border>

        </Grid>
    </Grid>
</ContentPage>
