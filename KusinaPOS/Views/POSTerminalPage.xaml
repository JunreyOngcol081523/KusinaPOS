<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sfList="clr-namespace:Syncfusion.Maui.ListView;assembly=Syncfusion.Maui.ListView"
             xmlns:sfButtons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
             x:Class="KusinaPOS.Views.POSTerminalPage"
             xmlns:viewmodel="clr-namespace:KusinaPOS.ViewModel"
             xmlns:converters="clr-namespace:KusinaPOS.Converters"
             BackgroundColor="{StaticResource BackgroundDark}">
    
    <ContentPage.Resources>
        <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
    </ContentPage.Resources>
    <Grid RowDefinitions="Auto,*">

        <!-- TOP BAR -->
        <Grid Grid.Row="0"
              HeightRequest="60"
              Padding="20,0"
              BackgroundColor="{StaticResource SurfaceDark}"
              ColumnDefinitions="Auto,*,Auto">

            <Label Text="POS Terminal 1"
                   VerticalOptions="Center"
                   FontAttributes="Bold"
                   TextColor="{StaticResource TextPrimary}" />

            <Label Grid.Column="1"
                   Text="Date / Time"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   TextColor="{StaticResource TextSecondary}" />

            <Label Grid.Column="2"
                   Text="Cashier"
                   VerticalOptions="Center"
                   TextColor="{StaticResource TextPrimary}" />
        </Grid>

        <!-- BODY -->
        <Grid Grid.Row="1"
              ColumnDefinitions="Auto,*,380">

            <!-- CATEGORY SIDEBAR - REGULAR BUTTON VERSION -->
            <CollectionView Grid.Column="0"
                ItemsSource="{Binding MenuCategories}"
                SelectionMode="None"
                BackgroundColor="{StaticResource SurfaceDark}"
                Margin="0,10,0,0">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Button 
                            Text="{Binding Name}"
                            HeightRequest="100"
                            WidthRequest="120"
                            Margin="5,5,5,15"
                            CornerRadius="8"
                            FontSize="12"
                            Rotation="270"
                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:POSTerminalViewModel}}, Path=SelectCategoryCommand}"
                            CommandParameter="{Binding .}">

                            <!-- Triggers for styling based on IsSelected -->
                            <Button.Triggers>
                                <DataTrigger TargetType="Button"
                                           Binding="{Binding IsSelected}"
                                           Value="True">
                                    <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
                                    <Setter Property="TextColor" Value="{StaticResource White}" />
                                </DataTrigger>
                                <DataTrigger TargetType="Button"
                                               Binding="{Binding IsSelected}"
                                               Value="False">
                                    <Setter Property="BackgroundColor" Value="{StaticResource Gray200}" />
                                    <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
                                </DataTrigger>
                            </Button.Triggers>

                        </Button>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

            <!-- MENU GRID -->
            <Grid Grid.Column="1"
                  Padding="15">

                <sfList:SfListView SelectionMode="None"
                                    ItemSpacing="12">

                    <sfList:SfListView.ItemsLayout>
                        <sfList:GridLayout SpanCount="4" />
                    </sfList:SfListView.ItemsLayout>

                    <sfList:SfListView.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="10"
                                    Stroke="{StaticResource Gray300}"
                                    StrokeThickness="1"
                                    BackgroundColor="{StaticResource CardDark}"
                                    StrokeShape="RoundRectangle 10">

                                <VerticalStackLayout Spacing="6">
                                    <Image HeightRequest="90"
                                           Aspect="AspectFill" />

                                    <Label Text="Product Name"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource TextPrimary}"
                                           LineBreakMode="TailTruncation" />

                                    <Label Text="₱0.00"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource Primary}" />
                                </VerticalStackLayout>

                            </Border>
                        </DataTemplate>
                    </sfList:SfListView.ItemTemplate>

                </sfList:SfListView>

            </Grid>

            <!-- CURRENT ORDER PANEL -->
            <Border Grid.Column="2"
                    Padding="15"
                    BackgroundColor="{StaticResource SurfaceDark}"
                    Stroke="{StaticResource Gray300}"
                    StrokeThickness="1">

                <Grid RowDefinitions="Auto,*,Auto,Auto,Auto"
                      RowSpacing="12">

                    <Label Text="Current Order"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource TextPrimary}" />

                    <!-- ORDER ITEMS -->
                    <sfList:SfListView Grid.Row="1"
                                       SelectionMode="None">

                        <sfList:SfListView.ItemTemplate>
                            <DataTemplate>

                                <Grid ColumnDefinitions="*,Auto,Auto"
                                      Padding="0,8">

                                    <VerticalStackLayout>
                                        <Label Text="1x Item Name"
                                               TextColor="{StaticResource TextPrimary}" />
                                        <Label Text="₱0.00"
                                               FontSize="12"
                                               TextColor="{StaticResource TextSecondary}" />
                                    </VerticalStackLayout>

                                    <sfButtons:SfButton Grid.Column="1"
                                                        Text="-"
                                                        WidthRequest="36"
                                                        HeightRequest="36"
                                                        BackgroundColor="{StaticResource Gray200}"
                                                        TextColor="{StaticResource TextPrimary}" />

                                    <sfButtons:SfButton Grid.Column="2"
                                                        Text="+"
                                                        WidthRequest="36"
                                                        HeightRequest="36"
                                                        BackgroundColor="{StaticResource Gray200}"
                                                        TextColor="{StaticResource TextPrimary}" />

                                </Grid>

                            </DataTemplate>
                        </sfList:SfListView.ItemTemplate>

                    </sfList:SfListView>

                    <!-- SUBTOTAL -->
                    <Grid Grid.Row="2"
                          ColumnDefinitions="*,Auto">
                        <Label Text="Subtotal"
                               TextColor="{StaticResource TextSecondary}" />
                        <Label Grid.Column="1"
                               Text="₱0.00"
                               TextColor="{StaticResource TextPrimary}" />
                    </Grid>

                    <!-- CASH -->
                    <Grid Grid.Row="3"
                          ColumnDefinitions="*,Auto">
                        <Label Text="Cash Tendered"
                               TextColor="{StaticResource TextSecondary}" />
                        <Label Grid.Column="1"
                               Text="₱0.00"
                               FontAttributes="Bold"
                               TextColor="{StaticResource TextPrimary}" />
                    </Grid>

                    <!-- COMPLETE -->
                    <sfButtons:SfButton Grid.Row="4"
                                        Text="COMPLETE ORDER"
                                        HeightRequest="55"
                                        CornerRadius="12"
                                        BackgroundColor="{StaticResource Primary}"
                                        TextColor="{StaticResource White}" />

                </Grid>
            </Border>

        </Grid>
    </Grid>
</ContentPage>