<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="KusinaPOS.Views.POSTerminalPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:KusinaPOS.Views.Controls"
    xmlns:converters="clr-namespace:KusinaPOS.Converters"
    xmlns:editors="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
    xmlns:sfButtons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
    xmlns:sfList="clr-namespace:Syncfusion.Maui.ListView;assembly=Syncfusion.Maui.ListView"
    xmlns:popup="clr-namespace:Syncfusion.Maui.Popup;assembly=Syncfusion.Maui.Popup"
    xmlns:tabView="clr-namespace:Syncfusion.Maui.TabView;assembly=Syncfusion.Maui.TabView"
    xmlns:viewmodel="clr-namespace:KusinaPOS.ViewModel"
    BackgroundColor="{StaticResource BackgroundDark}">

    <ContentPage.Resources>
        <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
    </ContentPage.Resources>



    <Grid RowDefinitions="Auto,*">
        <!--  Top Header  -->
        <controls:AppHeaderView Grid.Row="0" BackgroundColor="Transparent" />
        <!--  BODY  -->
        <Grid
            Grid.Row="1"
            Padding="5"
            ColumnDefinitions="Auto,*,380">

            <!--  CATEGORY SIDEBAR - REGULAR BUTTON VERSION  -->
            <CollectionView
                Grid.Column="0"
                Margin="0,10,0,0"
                BackgroundColor="{StaticResource SurfaceDark}"
                ItemsSource="{Binding MenuCategories}"
                SelectionMode="None">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="2,2,2,0"
                            Padding="0"
                            BackgroundColor="Transparent"
                            HeightRequest="110"
                            Rotation="270"
                            StrokeThickness="0"
                            WidthRequest="110">

                            <Button
                                Padding="2,2"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:POSTerminalViewModel}}, Path=SelectCategoryCommand}"
                                CommandParameter="{Binding .}"
                                CornerRadius="8"
                                FontSize="12"
                                HeightRequest="100"
                                LineBreakMode="WordWrap"
                                Text="{Binding Name}"
                                WidthRequest="100">

                                <!--  Triggers for styling based on IsSelected  -->
                                <Button.Triggers>
                                    <DataTrigger
                                        Binding="{Binding IsSelected}"
                                        TargetType="Button"
                                        Value="True">
                                        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
                                        <Setter Property="TextColor" Value="{StaticResource White}" />
                                    </DataTrigger>
                                    <DataTrigger
                                        Binding="{Binding IsSelected}"
                                        TargetType="Button"
                                        Value="False">
                                        <Setter Property="BackgroundColor" Value="{StaticResource Gray200}" />
                                        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
                                    </DataTrigger>
                                </Button.Triggers>
                            </Button>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

            <!--  MENU & PRODUCTS  -->
            <Grid
                Grid.Column="1"
                Padding="8"
                RowDefinitions="Auto,*">
                <Grid
                    Grid.Row="0"
                    BackgroundColor="#80000000"
                    IsVisible="{Binding IsLoading}">
                    <ActivityIndicator
                        HeightRequest="60"
                        HorizontalOptions="Center"
                        IsRunning="{Binding IsLoading}"
                        IsVisible="{Binding IsLoading}"
                        VerticalOptions="Center"
                        WidthRequest="60" />
                </Grid>
                <CollectionView
                    Grid.Row="1"
                    ItemsSource="{Binding FilteredMenuItems}"
                    SelectedItem="{Binding SelectedMenuItem}"
                    SelectionMode="None">
                    <!--  Adaptive grid  -->
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout
                            HorizontalItemSpacing="5"
                            Orientation="Vertical"
                            Span="{OnIdiom Phone=1,
                                           Tablet=2,
                                           Desktop=3}"
                            VerticalItemSpacing="5" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="3"
                                Padding="0"
                                Style="{StaticResource CardBorder}">
                                <VerticalStackLayout Spacing="0">
                                    <!--  PRODUCT IMAGE  -->

                                    <Image
                                        Aspect="AspectFill"
                                        HeightRequest="100"
                                        HorizontalOptions="Fill"
                                        Source="{Binding ImagePath, Converter={StaticResource ImageSourceConverter}}"
                                        VerticalOptions="Start"
                                        WidthRequest="120" />

                                    <!--  TEXT AREA  -->
                                    <VerticalStackLayout Padding="5" Spacing="3">
                                        <!--  PRODUCT NAME  -->
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="12"
                                            LineBreakMode="TailTruncation"
                                            MaxLines="2"
                                            Text="{Binding Name}"
                                            TextColor="{StaticResource TextPrimary}" />

                                        <!--  PRICE  -->
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="15"
                                            Text="{Binding Price, StringFormat='₱{0:F2}'}"
                                            TextColor="{StaticResource TextSecondary}" />

                                        <!--  QTY AND ADD BUTTON ROW  -->
                                        <Grid
                                            Margin="0,4,0,0"
                                            ColumnDefinitions="*,Auto"
                                            ColumnSpacing="5">

                                            <!--  NUMERIC ENTRY  -->
                                            <editors:SfNumericEntry
                                                Grid.Column="0"
                                                BackgroundColor="{StaticResource Gray200}"
                                                CustomFormat="0"
                                                HeightRequest="36"
                                                HorizontalOptions="Fill"
                                                Maximum="999"
                                                Minimum="1"
                                                Stroke="Transparent"
                                                TextColor="{StaticResource TextPrimary}"
                                                UpDownButtonColor="{StaticResource TextOnAccent}"
                                                UpDownPlacementMode="Inline"
                                                VerticalOptions="Center"
                                                Value="{Binding Quantity}" />

                                            <!--  ADD BUTTON  -->
                                            <Button
                                                Grid.Column="1"
                                                Padding="16,0"
                                                BackgroundColor="{StaticResource Gray200}"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:POSTerminalViewModel}}, Path=AddToOrderCommand}"
                                                CommandParameter="{Binding .}"
                                                CornerRadius="6"
                                                FontSize="12"
                                                HeightRequest="36"
                                                ImageSource="addicon.png"
                                                TextColor="White"
                                                VerticalOptions="Center" />
                                        </Grid>
                                    </VerticalStackLayout>
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </Grid>


            <!--  CURRENT ORDER PANEL  -->
            <Border
    Grid.Column="2"
    Padding="5"
    BackgroundColor="{StaticResource SurfaceDark}"
    Stroke="{StaticResource Gray300}"
    StrokeThickness="1">

                <Grid RowDefinitions="Auto,*,Auto,Auto" RowSpacing="5">

                    <Label
            Grid.Row="0"
            FontAttributes="Bold"
            FontSize="15"
            Text="Current Order"
            TextColor="{StaticResource TextPrimary}" />

                    <sfList:SfListView
            Grid.Row="1"
            ItemsSource="{Binding OrderItems}"
            SelectionMode="None">
                        <sfList:SfListView.ItemTemplate>
                            <DataTemplate>
                                <Grid
                        Padding="0,8"
                        ColumnDefinitions="*,60,Auto,Auto"
                        ColumnSpacing="8">

                                    <VerticalStackLayout Grid.Column="0">
                                        <Label
                                FontAttributes="Bold"
                                FontSize="14"
                                Text="{Binding Name}"
                                TextColor="{StaticResource TextPrimary}" />
                                        <Label
                                FontSize="12"
                                Text="{Binding Price, StringFormat='₱{0:F2}'}"
                                TextColor="{StaticResource TextSecondary}" />
                                    </VerticalStackLayout>

                                    <Label
                            Grid.Column="1"
                            FontAttributes="Bold"
                            FontSize="14"
                            HorizontalTextAlignment="Center"
                            Text="{Binding Quantity, StringFormat='x{0}'}"
                            TextColor="{StaticResource TextPrimary}"
                            VerticalTextAlignment="Center" />

                                    <Button
                            Grid.Column="2"
                            BackgroundColor="{StaticResource Gray200}"
                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:POSTerminalViewModel}}, Path=DecreaseOrderItemQuantityCommand}"
                            CommandParameter="{Binding .}"
                            CornerRadius="6"
                            FontAttributes="Bold"
                            FontSize="Medium"
                            HeightRequest="36"
                            Text="-"
                            TextColor="{StaticResource TextPrimary}"
                            WidthRequest="36" />

                                    <Button
                            Grid.Column="3"
                            BackgroundColor="{StaticResource Primary}"
                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:POSTerminalViewModel}}, Path=IncreaseOrderItemQuantityCommand}"
                            CommandParameter="{Binding .}"
                            CornerRadius="6"
                            FontAttributes="Bold"
                            FontSize="Medium"
                            HeightRequest="36"
                            Text="+"
                            TextColor="{StaticResource White}"
                            WidthRequest="36" />
                                </Grid>
                            </DataTemplate>
                        </sfList:SfListView.ItemTemplate>
                    </sfList:SfListView>

                    <Grid Grid.Row="2" ColumnDefinitions="*,Auto" Padding="5,10">
                        <Label Text="Subtotal" FontSize="14" TextColor="{StaticResource TextSecondary}" VerticalTextAlignment="Center" />
                        <Label
                Grid.Column="1"
                FontSize="20"
                FontAttributes="Bold"
                Text="{Binding SubtotalAmount, StringFormat='₱{0:N2}'}"
                TextColor="{StaticResource TextPrimary}" />
                    </Grid>

                    <Button
            Grid.Row="3"
            BackgroundColor="{StaticResource Primary}"
            Command="{Binding CompleteOrderCommand}"
            CornerRadius="12"
            HeightRequest="60"
            FontSize="18"
            FontAttributes="Bold"
            Text="COMPLETE ORDER"
            TextColor="{StaticResource White}" />

                </Grid>
            </Border>

        </Grid>
        <popup:SfPopup x:Name="completeOrderPopup"
               IsOpen="{Binding IsCompleteOrderPopupOpen}"     
               HeaderTitle="Complete Order"
               WidthRequest="450"
               HeightRequest="600"
               ShowFooter="False"
               Grid.RowSpan="2"
               StaysOpen="True">
            <popup:SfPopup.PopupStyle>
                <popup:PopupStyle 
        HeaderBackground="{StaticResource SurfaceDark}"
        MessageBackground="{StaticResource SurfaceDark}"
        Stroke="{StaticResource Gray300}"
        HeaderTextColor="{StaticResource TextPrimary}" />
            </popup:SfPopup.PopupStyle>
            <popup:SfPopup.ContentTemplate>
                <DataTemplate>
                    <Grid BackgroundColor="{StaticResource SurfaceDark}" Padding="10">
                        <tabView:SfTabView x:Name="paymentTabView" 
                               IndicatorPlacement="Top">

                            <tabView:SfTabItem Header="Cash" BackgroundColor="{StaticResource CardBackground}" TextColor="{StaticResource TextPrimary}">
                                <tabView:SfTabItem.Content>
                                    <VerticalStackLayout Padding="20" Spacing="15">

                                        <Grid ColumnDefinitions="*,Auto">
                                            <Label Text="Subtotal:" TextColor="{StaticResource TextSecondary}"/>
                                            <Label Grid.Column="1" Text="{Binding SubtotalAmount, StringFormat='₱{0:N2}'}" FontAttributes="Bold"/>
                                        </Grid>

                                        <Grid ColumnDefinitions="*,Auto">
                                            <Label Text="Discounted:" TextColor="{StaticResource TextSecondary}"/>
                                            <Label Grid.Column="1" Text="{Binding DiscountedAmount, StringFormat='₱{0:N2}'}" TextColor="{StaticResource TextSecondary}"/>
                                        </Grid>

                                        <Grid ColumnDefinitions="*,Auto">
                                            <Label Text="VAT (12%):" TextColor="{StaticResource TextSecondary}"/>
                                            <Label Grid.Column="1" Text="{Binding VATAmount, StringFormat='₱{0:N2}'}"/>
                                        </Grid>

                                        <BoxView HeightRequest="1" Color="{StaticResource Gray300}" Margin="0,10"/>

                                        <Grid ColumnDefinitions="*,Auto">
                                            <Label Text="Total Amount:" FontSize="20" FontAttributes="Bold"/>
                                            <Label Grid.Column="1" Text="{Binding TotalPayableAmount, StringFormat='₱{0:N2}'}" FontSize="20" FontAttributes="Bold" TextColor="{StaticResource Primary}"/>
                                        </Grid>

                                        <VerticalStackLayout Spacing="5" Margin="0,20,0,0">
                                            <Label Text="Cash Tendered:" FontAttributes="Bold"/>
                                            <Entry Text="{Binding CashTenderedAmount}" 
                                       Keyboard="Numeric" 
                                       FontSize="24" 
                                       HorizontalTextAlignment="End"
                                       Placeholder="0.00"/>
                                        </VerticalStackLayout>

                                        <Grid ColumnDefinitions="*,Auto">
                                            <Label Text="Change:" FontSize="18"/>
                                            <Label Grid.Column="1" Text="{Binding ChangeAmount, StringFormat='₱{0:N2}'}" FontSize="18" TextColor="#28a745" FontAttributes="Bold"/>
                                        </Grid>

                                        <Button Text="CONFIRM CASH PAYMENT" 
                                    Margin="0,20,0,0"
                                    HeightRequest="50"
                                    BackgroundColor="{StaticResource Primary}"
                                    Command="{Binding ConfirmPaymentCommand}"/>
                                    </VerticalStackLayout>
                                </tabView:SfTabItem.Content>
                            </tabView:SfTabItem>

                            <tabView:SfTabItem Header="GCash" BackgroundColor="{StaticResource CardBackground}" TextColor="{StaticResource TextPrimary}">
                                <tabView:SfTabItem.Content>
                                    <ScrollView>
                                        <VerticalStackLayout Padding="20" Spacing="15">

                                            <VerticalStackLayout Spacing="8" Margin="0,0,0,10">
                                                <Grid ColumnDefinitions="*,Auto">
                                                    <Label Text="Subtotal:" TextColor="{StaticResource TextSecondary}"/>
                                                    <Label Grid.Column="1" Text="{Binding SubtotalAmount, StringFormat='₱{0:N2}'}" FontAttributes="Bold" TextColor="{StaticResource TextPrimary}"/>
                                                </Grid>

                                                <Grid ColumnDefinitions="*,Auto">
                                                    <Label Text="Discounted:" TextColor="{StaticResource TextSecondary}"/>
                                                    <Label Grid.Column="1" Text="{Binding DiscountedAmount, StringFormat='₱{0:N2}'}" TextColor="{StaticResource TextSecondary}"/>
                                                </Grid>

                                                <Grid ColumnDefinitions="*,Auto">
                                                    <Label Text="VAT (12%):" TextColor="{StaticResource TextSecondary}"/>
                                                    <Label Grid.Column="1" Text="{Binding VATAmount, StringFormat='₱{0:N2}'}" TextColor="{StaticResource TextPrimary}"/>
                                                </Grid>

                                                <BoxView HeightRequest="1" Color="{StaticResource Gray300}" Margin="0,5"/>

                                                <Grid ColumnDefinitions="*,Auto">
                                                    <Label Text="Total Amount:" FontSize="18" FontAttributes="Bold" TextColor="{StaticResource TextPrimary}"/>
                                                    <Label Grid.Column="1" Text="{Binding TotalPayableAmount, StringFormat='₱{0:N2}'}" FontSize="20" FontAttributes="Bold" TextColor="{StaticResource Primary}"/>
                                                </Grid>
                                            </VerticalStackLayout>

                                            <BoxView HeightRequest="1" Color="{StaticResource Gray300}" />

                                            <Label Text="Scan to Pay via GCash" HorizontalOptions="Center" FontAttributes="Bold" Margin="0,10,0,0" TextColor="{StaticResource TextPrimary}"/>

                                            <Border StrokeThickness="1" Stroke="{StaticResource Gray300}" Padding="5" HorizontalOptions="Center">
                                                <Image Source="gcash_qr_placeholder.png" 
                           HeightRequest="200" 
                           WidthRequest="200"
                           Aspect="AspectFit"/>
                                            </Border>

                                            <VerticalStackLayout Spacing="5" WidthRequest="300" HorizontalOptions="Center">
                                                <Label Text="Reference Number:" FontAttributes="Bold" TextColor="{StaticResource TextPrimary}"/>
                                                <Entry Placeholder="Enter 13-digit Ref #" 
                           Text="{Binding GcashRefNumber}"
                           Keyboard="Numeric"
                           MaxLength="13"
                           FontSize="18"
                           HorizontalTextAlignment="Center"
                           BackgroundColor="{StaticResource Gray200}"
                           TextColor="{StaticResource TextPrimary}"/>
                                            </VerticalStackLayout>

                                            <Button Text="CONFIRM GCASH PAYMENT" 
                        HeightRequest="55"
                        WidthRequest="300"
                        HorizontalOptions="Center"
                        BackgroundColor="#28a745"
                        FontSize="16"
                        FontAttributes="Bold"
                        Command="{Binding ConfirmGcashPaymentCommand}"/>
                                        </VerticalStackLayout>
                                    </ScrollView>
                                </tabView:SfTabItem.Content>
                            </tabView:SfTabItem>

                        </tabView:SfTabView>
                    </Grid>
                </DataTemplate>
            </popup:SfPopup.ContentTemplate>
        </popup:SfPopup>
    </Grid>
</ContentPage>
