<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="KusinaPOS.Views.ReportPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:chart="clr-namespace:Syncfusion.Maui.Charts;assembly=Syncfusion.Maui.Charts"
    xmlns:controls="clr-namespace:KusinaPOS.Views.Controls"
    xmlns:core="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
    xmlns:pager="clr-namespace:Syncfusion.Maui.DataGrid.DataPager;assembly=Syncfusion.Maui.DataGrid"
    xmlns:sfListView="clr-namespace:Syncfusion.Maui.ListView;assembly=Syncfusion.Maui.ListView"
    xmlns:sfexpander="clr-namespace:Syncfusion.Maui.Expander;assembly=Syncfusion.Maui.Expander"
    xmlns:sfpopup="clr-namespace:Syncfusion.Maui.Popup;assembly=Syncfusion.Maui.Popup"
    xmlns:syncfusion="clr-namespace:Syncfusion.Maui.DataGrid;assembly=Syncfusion.Maui.DataGrid"
    xmlns:tabView="clr-namespace:Syncfusion.Maui.TabView;assembly=Syncfusion.Maui.TabView"
    xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
    Title="ReportPage"
    BackgroundColor="{StaticResource BackgroundDark}">
    <Grid>
        <sfpopup:SfPopup
            x:Name="SaleItemsPopup"
            AnimationMode="Fade"
            BackgroundColor="Transparent"
            HeaderHeight="60"
            HeightRequest="300"
            HorizontalOptions="Center"
            IsOpen="{Binding IsOpenPopup}"
            ShowCloseButton="True"
            VerticalOptions="Center"
            WidthRequest="400">
            <sfpopup:SfPopup.HeaderTemplate>
                <DataTemplate>
                    <Label
                        FontAttributes="Bold"
                        FontSize="18"
                        HorizontalTextAlignment="Center"
                        Text="Sales Items"
                        TextColor="{StaticResource Gray100}"
                        VerticalTextAlignment="Center" />
                </DataTemplate>
            </sfpopup:SfPopup.HeaderTemplate>
            <sfpopup:SfPopup.ContentTemplate>

                <DataTemplate>
                    <Grid Padding="10" BackgroundColor="{StaticResource CardBackground}">
                        <syncfusion:SfDataGrid
                            x:Name="SaleItemsDataGrid"
                            AutoGenerateColumnsMode="None"
                            BackgroundColor="{StaticResource CardBackground}"
                            ItemsSource="{Binding SaleItems}"
                            RowHeight="50"
                            SelectionMode="None">
                            <syncfusion:SfDataGrid.EmptyView>
                                <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                    <Label
                                        FontFamily="MauiMaterialAssets.ttf"
                                        FontSize="20"
                                        Text="&#xE7A4;"
                                        TextColor="{StaticResource TextSecondary}" />
                                    <Label FontSize="14" Text="No records for Void/Refund Transaction" />
                                </StackLayout>
                            </syncfusion:SfDataGrid.EmptyView>
                            <!--  Columns  -->
                            <syncfusion:SfDataGrid.Columns>
                                <!--  Menu Item Name  -->
                                <syncfusion:DataGridTextColumn
                                    Width="150"
                                    HeaderText="Item Name"
                                    MappingName="MenuItemName" />

                                <!--  Quantity  -->
                                <syncfusion:DataGridTextColumn
                                    Width="80"
                                    HeaderText="Qty"
                                    MappingName="Quantity" />

                                <!--  Unit Price  -->
                                <syncfusion:DataGridTextColumn
                                    Width="80"
                                    Format="â‚±{0:N2}"
                                    HeaderText="Unit Price"
                                    MappingName="UnitPrice" />

                                <!--  Line Total  -->
                                <syncfusion:DataGridTextColumn
                                    Width="80"
                                    Format="â‚±{0:N2}"
                                    HeaderText="Line Total"
                                    MappingName="LineTotal" />
                            </syncfusion:SfDataGrid.Columns>
                        </syncfusion:SfDataGrid>
                    </Grid>
                </DataTemplate>
            </sfpopup:SfPopup.ContentTemplate>
        </sfpopup:SfPopup>
        <Grid Padding="16" RowDefinitions="Auto,*">
            <controls:AppHeaderView Grid.Row="0" BackgroundColor="Transparent" />
            <tabView:SfTabView
                x:Name="reportTabView"
                Grid.Row="1"
                ContentTransitionDuration="200"
                TabBarCornerRadius="24"
                TabBarPlacement="Bottom">
                <tabView:SfTabView.Items>
                    <!--#region sales report-->
                    <tabView:SfTabItem
                        BackgroundColor="{StaticResource CardBackground}"
                        FontSize="12"
                        Header="Sales"
                        ImagePosition="Left"
                        ImageSize="20"
                        ImageSource="sales.png"
                        TextColor="{StaticResource TextPrimary}">
                        <Grid
                            Padding="20"
                            RowDefinitions="Auto,*"
                            RowSpacing="20">

                            <!--  Header Section  -->
                            <VerticalStackLayout Grid.Row="0" Spacing="8">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="Large"
                                    Text="Sales Report"
                                    TextColor="{StaticResource TextPrimary}" />
                                <Label
                                    FontSize="Small"
                                    Text="Track sales performance and transaction history"
                                    TextColor="{StaticResource TextSecondary}" />
                            </VerticalStackLayout>

                            <!--  Main Content - 2 Columns  -->
                            <Grid
                                Grid.Row="1"
                                ColumnDefinitions="300,*"
                                ColumnSpacing="20">

                                <!--  UNIFIED FILTER CARD - SALES  -->
                                <ScrollView Grid.Column="0">
                                    <Border
                                        Padding="16"
                                        BackgroundColor="{StaticResource SurfaceDark}"
                                        Stroke="{StaticResource Gray200}"
                                        StrokeShape="RoundRectangle 12"
                                        StrokeThickness="1">
                                        <VerticalStackLayout Spacing="12">

                                            <!--  Header  -->
                                            <Label
                                                FontAttributes="Bold"
                                                FontSize="15"
                                                Text="Date Range Filter"
                                                TextColor="{StaticResource TextPrimary}" />

                                            <!--  Date Range Section  -->
                                            <VerticalStackLayout Spacing="10">

                                                <!--  From Date  -->
                                                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                                                    <Label
                                                        Grid.Column="0"
                                                        FontSize="12"
                                                        Text="From"
                                                        TextColor="{StaticResource TextSecondary}"
                                                        VerticalOptions="Center"
                                                        WidthRequest="40" />
                                                    <Border
                                                        Grid.Column="1"
                                                        Padding="8,4"
                                                        BackgroundColor="{StaticResource CardDark}"
                                                        Stroke="{StaticResource Gray200}"
                                                        StrokeShape="RoundRectangle 6"
                                                        StrokeThickness="1">
                                                        <DatePicker
                                                            BackgroundColor="Transparent"
                                                            Date="{Binding FromDate}"
                                                            FontSize="12"
                                                            TextColor="{StaticResource TextPrimary}" />
                                                    </Border>
                                                </Grid>

                                                <!--  To Date  -->
                                                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                                                    <Label
                                                        Grid.Column="0"
                                                        FontSize="12"
                                                        Text="To"
                                                        TextColor="{StaticResource TextSecondary}"
                                                        VerticalOptions="Center"
                                                        WidthRequest="40" />
                                                    <Border
                                                        Grid.Column="1"
                                                        Padding="8,4"
                                                        BackgroundColor="{StaticResource CardDark}"
                                                        Stroke="{StaticResource Gray200}"
                                                        StrokeShape="RoundRectangle 6"
                                                        StrokeThickness="1">
                                                        <DatePicker
                                                            BackgroundColor="Transparent"
                                                            Date="{Binding ToDate}"
                                                            FontSize="12"
                                                            TextColor="{StaticResource TextPrimary}" />
                                                    </Border>
                                                </Grid>
                                            </VerticalStackLayout>

                                            <!--  Divider  -->
                                            <BoxView
                                                HeightRequest="1"
                                                Opacity="0.5"
                                                Color="{StaticResource Gray200}" />

                                            <!--  Quick Filters  -->
                                            <VerticalStackLayout Spacing="8">
                                                <Label
                                                    FontSize="11"
                                                    Opacity="0.8"
                                                    Text="QUICK FILTERS"
                                                    TextColor="{StaticResource TextSecondary}" />

                                                <Grid
                                                    ColumnDefinitions="*,*,*"
                                                    ColumnSpacing="6"
                                                    RowDefinitions="Auto">

                                                    <Button
                                                        Grid.Column="0"
                                                        Padding="8,6"
                                                        BackgroundColor="{StaticResource CardDark}"
                                                        BorderColor="{StaticResource Gray200}"
                                                        BorderWidth="1"
                                                        Command="{Binding FilterTodayCommand}"
                                                        CornerRadius="6"
                                                        FontSize="12"
                                                        Text="Today"
                                                        TextColor="{StaticResource TextPrimary}" />

                                                    <Button
                                                        Grid.Column="1"
                                                        Padding="8,6"
                                                        BackgroundColor="{StaticResource CardDark}"
                                                        BorderColor="{StaticResource Gray200}"
                                                        BorderWidth="1"
                                                        Command="{Binding FilterWeekCommand}"
                                                        CornerRadius="6"
                                                        FontSize="12"
                                                        Text="Week"
                                                        TextColor="{StaticResource TextPrimary}" />

                                                    <Button
                                                        Grid.Column="2"
                                                        Padding="8,6"
                                                        BackgroundColor="{StaticResource CardDark}"
                                                        BorderColor="{StaticResource Gray200}"
                                                        BorderWidth="1"
                                                        Command="{Binding FilterMonthCommand}"
                                                        CornerRadius="6"
                                                        FontSize="12"
                                                        Text="Month"
                                                        TextColor="{StaticResource TextPrimary}" />
                                                </Grid>
                                            </VerticalStackLayout>

                                            <!--  Generate Button  -->
                                            <Button
                                                Padding="0,10"
                                                BackgroundColor="{StaticResource Primary}"
                                                Command="{Binding GenerateReportCommand}"
                                                CornerRadius="8"
                                                FontAttributes="Bold"
                                                FontSize="14"
                                                Text="Generate Report"
                                                TextColor="White" />
                                        </VerticalStackLayout>
                                    </Border>
                                </ScrollView>

                                <!--  Column 2: Sales Reports  -->
                                <Grid
                                    Grid.Column="1"
                                    RowDefinitions="Auto,*"
                                    RowSpacing="20">

                                    <!--  Summary Cards (KPIs) - Smaller and More Compact  -->
                                    <Grid
                                        Grid.Row="0"
                                        ColumnDefinitions="*,*,*,*"
                                        ColumnSpacing="15">

                                        <!--  Total Sales  -->
                                        <Border
                                            Grid.Column="0"
                                            Padding="15"
                                            BackgroundColor="{StaticResource SurfaceDark}"
                                            Stroke="{StaticResource Gray200}"
                                            StrokeShape="RoundRectangle 12"
                                            StrokeThickness="1">
                                            <VerticalStackLayout Spacing="5">
                                                <Label
                                                    FontSize="11"
                                                    Text="Total Sales"
                                                    TextColor="{StaticResource TextSecondary}" />
                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="18"
                                                    Text="{Binding TotalSales, StringFormat='â‚±{0:N2}', FallbackValue='â‚±0.00'}"
                                                    TextColor="{StaticResource Primary}" />
                                            </VerticalStackLayout>
                                        </Border>

                                        <!--  Total Transactions  -->
                                        <Border
                                            Grid.Column="1"
                                            Padding="15"
                                            BackgroundColor="{StaticResource SurfaceDark}"
                                            Stroke="{StaticResource Gray200}"
                                            StrokeShape="RoundRectangle 12"
                                            StrokeThickness="1">
                                            <VerticalStackLayout Spacing="5">
                                                <Label
                                                    FontSize="11"
                                                    Text="Transactions"
                                                    TextColor="{StaticResource TextSecondary}" />
                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="18"
                                                    Text="{Binding TotalTransactions, FallbackValue='0', StringFormat='{0} Completed'}"
                                                    TextColor="{StaticResource Primary}" />
                                            </VerticalStackLayout>
                                        </Border>

                                        <!--  Cash Refunded  -->
                                        <Border
                                            Grid.Column="2"
                                            Padding="15"
                                            BackgroundColor="{StaticResource SurfaceDark}"
                                            Stroke="{StaticResource Gray200}"
                                            StrokeShape="RoundRectangle 12"
                                            StrokeThickness="1">
                                            <VerticalStackLayout Spacing="5">
                                                <Label
                                                    FontSize="11"
                                                    Text="Cash Refunded"
                                                    TextColor="{StaticResource TextSecondary}" />
                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="18"
                                                    Text="{Binding CashRefunded, StringFormat='â‚±{0:N2}', FallbackValue='â‚±0.00'}"
                                                    TextColor="{StaticResource Primary}" />
                                            </VerticalStackLayout>
                                        </Border>

                                        <!--  Average Sale  -->
                                        <Border
                                            Grid.Column="3"
                                            Padding="15"
                                            BackgroundColor="{StaticResource SurfaceDark}"
                                            Stroke="{StaticResource Gray200}"
                                            StrokeShape="RoundRectangle 12"
                                            StrokeThickness="1">
                                            <VerticalStackLayout Spacing="5">
                                                <Label
                                                    FontSize="11"
                                                    Text="Average Sale"
                                                    TextColor="{StaticResource TextSecondary}" />
                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="18"
                                                    Text="{Binding AverageSale, StringFormat='â‚±{0:N2}', FallbackValue='â‚±0.00'}"
                                                    TextColor="{StaticResource Primary}" />
                                            </VerticalStackLayout>
                                        </Border>
                                    </Grid>

                                    <!--  Sales List Section - Takes Remaining Space  -->
                                    <Border
                                        Grid.Row="1"
                                        Padding="20"
                                        BackgroundColor="{StaticResource SurfaceDark}"
                                        Stroke="{StaticResource Gray200}"
                                        StrokeShape="RoundRectangle 12"
                                        StrokeThickness="1">
                                        <Grid RowDefinitions="Auto,*">
                                            <!--  Header  -->
                                            <Grid
                                                Grid.Row="0"
                                                Margin="0,0,0,15"
                                                ColumnDefinitions="*,Auto">
                                                <Label
                                                    Grid.Column="0"
                                                    FontAttributes="Bold"
                                                    FontSize="16"
                                                    Text="Transaction History"
                                                    TextColor="{StaticResource TextPrimary}"
                                                    VerticalOptions="Center" />
                                                <Label
                                                    Grid.Column="1"
                                                    FontAttributes="Italic"
                                                    FontSize="14"
                                                    Text="Export to Excel"
                                                    TextColor="{StaticResource TextSecondary}"
                                                    TextDecorations="Underline"
                                                    VerticalOptions="Center">
                                                    <Label.GestureRecognizers>
                                                        <TapGestureRecognizer Command="{Binding ExportToExcelCommand}" />
                                                    </Label.GestureRecognizers>
                                                </Label>
                                            </Grid>

                                            <!--  Transaction List  -->

                                            <CollectionView
                                                Grid.Row="1"
                                                EmptyView="No transactions found for selected period"
                                                ItemsSource="{Binding SalesTransactions}"
                                                SelectedItem="{Binding SelectedSaleTransaction}"
                                                SelectionMode="Single">
                                                <CollectionView.ItemTemplate>
                                                    <!--  In the CollectionView.ItemTemplate  -->
                                                    <DataTemplate>
                                                        <Border
                        BackgroundColor="{StaticResource CardDark}"
                        Margin="0,0,0,10"
                        Padding="12,10"
                        Stroke="{StaticResource Gray200}"
                        StrokeShape="RoundRectangle 8"
                        StrokeThickness="1">

                                                            <Grid
            ColumnDefinitions="*,Auto"
            RowDefinitions="Auto,Auto,Auto"
            RowSpacing="4">

                                                                <Label
                Grid.Row="0"
                Grid.Column="0"
                FontAttributes="Bold"
                FontSize="14"
                LineBreakMode="TailTruncation"
                Text="{Binding ReceiptNo}"
                TextColor="{StaticResource TextPrimary}" />

                                                                <Label
                Grid.Row="0"
                Grid.Column="1"
                Grid.RowSpan="2"
                FontAttributes="Bold"
                FontSize="18"
                HorizontalOptions="End"
                Text="{Binding TotalAmount, StringFormat='â‚±{0:N2}'}"
                TextColor="{StaticResource Primary}"
                VerticalOptions="Start" />

                                                                <HorizontalStackLayout
                Grid.Row="1"
                Grid.Column="0"
                Spacing="8">

                                                                    <Label
                    FontAttributes="Bold"
                    FontSize="12"
                    Text="{Binding PaymentMethod}"
                    TextColor="{StaticResource TextPrimary}"
                    VerticalOptions="Center" />

                                                                    <Label
                    FontSize="12"
                    Text="â€¢"
                    TextColor="{StaticResource TextSecondary}"
                    VerticalOptions="Center" />

                                                                    <Label
                    FontAttributes="Bold"
                    FontSize="11"
                    Text="{Binding Status}"
                    VerticalOptions="Center">
                                                                        <Label.Triggers>
                                                                            <DataTrigger Binding="{Binding Status}" TargetType="Label" Value="Completed">
                                                                                <Setter Property="TextColor" Value="{StaticResource Primary}" />
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Status}" TargetType="Label" Value="Voided">
                                                                                <Setter Property="TextColor" Value="#FF453A" />
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Status}" TargetType="Label" Value="Refund">
                                                                                <Setter Property="TextColor" Value="#FF9F0A" />
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Status}" TargetType="Label" Value="Refunded">
                                                                                <Setter Property="TextColor" Value="#FF9F0A" />
                                                                            </DataTrigger>
                                                                        </Label.Triggers>
                                                                    </Label>
                                                                </HorizontalStackLayout>

                                                                <Grid
                Grid.Row="2"
                Grid.ColumnSpan="2"
                ColumnDefinitions="Auto,*"
                Margin="0,2,0,0">

                                                                    <HorizontalStackLayout Grid.Column="0" Spacing="4">
                                                                        <Label
                        FontSize="11"
                        Text="Ref:"
                        TextColor="{StaticResource TextSecondary}" />
                                                                        <Label
                        FontSize="11"
                        FontAttributes="Italic"
                        Text="{Binding CashLessReference, TargetNullValue='N/A'}"
                        TextColor="{StaticResource TextSecondary}" />
                                                                    </HorizontalStackLayout>

                                                                    <Label
                    Grid.Column="1"
                    FontSize="11"
                    HorizontalOptions="End"
                    Text="{Binding SaleDate, StringFormat='{0:MMM dd, hh:mm tt}'}"
                    TextColor="{StaticResource TextSecondary}" />
                                                                </Grid>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </CollectionView.ItemTemplate>

                                                <!--  Empty View Styling  -->
                                                <CollectionView.EmptyViewTemplate>
                                                    <DataTemplate>
                                                        <VerticalStackLayout
                                                            Padding="40"
                                                            HorizontalOptions="Center"
                                                            VerticalOptions="Center">
                                                            <Label
                                                                Margin="0,0,0,15"
                                                                FontSize="35"
                                                                HorizontalOptions="Center"
                                                                Text="ðŸ“Š" />
                                                            <Label
                                                                FontSize="12"
                                                                HorizontalOptions="Center"
                                                                Text="No transactions found"
                                                                TextColor="{StaticResource TextSecondary}" />
                                                            <Label
                                                                Margin="0,5,0,0"
                                                                FontSize="12"
                                                                HorizontalOptions="Center"
                                                                Text="Try adjusting your date range"
                                                                TextColor="{StaticResource TextSecondary}" />
                                                        </VerticalStackLayout>
                                                    </DataTemplate>
                                                </CollectionView.EmptyViewTemplate>
                                            </CollectionView>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Grid>
                        </Grid>
                    </tabView:SfTabItem>
                    <!--#endregion-->
                    <!--#region menu items reports-->
                    <tabView:SfTabItem
                        BackgroundColor="{StaticResource CardBackground}"
                        FontSize="12"
                        Header="Menu Items"
                        ImagePosition="Left"
                        ImageSize="20"
                        ImageSource="fast_moving.png"
                        TextColor="{StaticResource TextPrimary}">

                        <Grid
                            Padding="20"
                            RowDefinitions="Auto,*"
                            RowSpacing="20">

                            <!--  Header  -->
                            <VerticalStackLayout Grid.Row="0" Spacing="8">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="Large"
                                    Text="Menu Items Report"
                                    TextColor="{StaticResource TextPrimary}" />
                                <Label
                                    FontSize="Small"
                                    Text="Track menu item sales and performance"
                                    TextColor="{StaticResource TextSecondary}" />
                            </VerticalStackLayout>

                            <!--  Main Content: 2 Columns  -->
                            <Grid
                                Grid.Row="1"
                                ColumnDefinitions="300,*"
                                ColumnSpacing="20">

                                <!--  UNIFIED FILTER CARD - MENU ITEMS (with Category)  -->
                                <ScrollView Grid.Column="0">
                                    <Border
                                        Padding="16"
                                        BackgroundColor="{StaticResource SurfaceDark}"
                                        Stroke="{StaticResource Gray200}"
                                        StrokeShape="RoundRectangle 12"
                                        StrokeThickness="1">
                                        <VerticalStackLayout Spacing="12">

                                            <!--  Header  -->
                                            <Label
                                                FontAttributes="Bold"
                                                FontSize="15"
                                                Text="Date Range Filter"
                                                TextColor="{StaticResource TextPrimary}" />

                                            <!--  Date Range Section  -->
                                            <VerticalStackLayout Spacing="10">

                                                <!--  From Date  -->
                                                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                                                    <Label
                                                        Grid.Column="0"
                                                        FontSize="12"
                                                        Text="From"
                                                        TextColor="{StaticResource TextSecondary}"
                                                        VerticalOptions="Center"
                                                        WidthRequest="40" />
                                                    <Border
                                                        Grid.Column="1"
                                                        Padding="8,4"
                                                        BackgroundColor="{StaticResource CardDark}"
                                                        Stroke="{StaticResource Gray200}"
                                                        StrokeShape="RoundRectangle 6"
                                                        StrokeThickness="1">
                                                        <DatePicker
                                                            BackgroundColor="Transparent"
                                                            Date="{Binding FromDate}"
                                                            FontSize="12"
                                                            TextColor="{StaticResource TextPrimary}" />
                                                    </Border>
                                                </Grid>

                                                <!--  To Date  -->
                                                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                                                    <Label
                                                        Grid.Column="0"
                                                        FontSize="12"
                                                        Text="To"
                                                        TextColor="{StaticResource TextSecondary}"
                                                        VerticalOptions="Center"
                                                        WidthRequest="40" />
                                                    <Border
                                                        Grid.Column="1"
                                                        Padding="8,4"
                                                        BackgroundColor="{StaticResource CardDark}"
                                                        Stroke="{StaticResource Gray200}"
                                                        StrokeShape="RoundRectangle 6"
                                                        StrokeThickness="1">
                                                        <DatePicker
                                                            BackgroundColor="Transparent"
                                                            Date="{Binding ToDate}"
                                                            FontSize="12"
                                                            TextColor="{StaticResource TextPrimary}" />
                                                    </Border>
                                                </Grid>
                                            </VerticalStackLayout>

                                            <!--  Category Picker (ONLY IN MENU ITEMS TAB)  -->
                                            <VerticalStackLayout Spacing="8">
                                                <Label
                                                    FontSize="12"
                                                    Text="Category"
                                                    TextColor="{StaticResource TextSecondary}" />
                                                <Border
                                                    Padding="8,4"
                                                    BackgroundColor="{StaticResource CardDark}"
                                                    Stroke="{StaticResource Gray200}"
                                                    StrokeShape="RoundRectangle 6"
                                                    StrokeThickness="1">
                                                    <Picker
                                                        Title="All Categories"
                                                        BackgroundColor="Transparent"
                                                        FontSize="12"
                                                        ItemsSource="{Binding Categories}"
                                                        SelectedItem="{Binding SelectedCategory}"
                                                        TextColor="{StaticResource TextPrimary}" />
                                                </Border>
                                            </VerticalStackLayout>

                                            <!--  Divider  -->
                                            <BoxView
                                                HeightRequest="1"
                                                Opacity="0.5"
                                                Color="{StaticResource Gray200}" />

                                            <!--  Quick Filters  -->
                                            <VerticalStackLayout Spacing="8">
                                                <Label
                                                    FontSize="11"
                                                    Opacity="0.8"
                                                    Text="QUICK FILTERS"
                                                    TextColor="{StaticResource TextSecondary}" />

                                                <Grid
                                                    ColumnDefinitions="*,*,*"
                                                    ColumnSpacing="6"
                                                    RowDefinitions="Auto">

                                                    <Button
                                                        Grid.Column="0"
                                                        Padding="8,6"
                                                        BackgroundColor="{StaticResource CardDark}"
                                                        BorderColor="{StaticResource Gray200}"
                                                        BorderWidth="1"
                                                        Command="{Binding FilterMenuTodayCommand}"
                                                        CornerRadius="6"
                                                        FontSize="12"
                                                        Text="Today"
                                                        TextColor="{StaticResource TextPrimary}" />

                                                    <Button
                                                        Grid.Column="1"
                                                        Padding="8,6"
                                                        BackgroundColor="{StaticResource CardDark}"
                                                        BorderColor="{StaticResource Gray200}"
                                                        BorderWidth="1"
                                                        Command="{Binding FilterMenuWeekCommand}"
                                                        CornerRadius="6"
                                                        FontSize="12"
                                                        Text="Week"
                                                        TextColor="{StaticResource TextPrimary}" />

                                                    <Button
                                                        Grid.Column="2"
                                                        Padding="8,6"
                                                        BackgroundColor="{StaticResource CardDark}"
                                                        BorderColor="{StaticResource Gray200}"
                                                        BorderWidth="1"
                                                        Command="{Binding FilterMenuMonthCommand}"
                                                        CornerRadius="6"
                                                        FontSize="12"
                                                        Text="Month"
                                                        TextColor="{StaticResource TextPrimary}" />
                                                </Grid>
                                            </VerticalStackLayout>

                                            <!--  Generate Button  -->
                                            <Button
                                                Padding="0,10"
                                                BackgroundColor="{StaticResource Primary}"
                                                Command="{Binding GenerateMenuReportCommand}"
                                                CornerRadius="8"
                                                FontAttributes="Bold"
                                                FontSize="14"
                                                Text="Generate Report"
                                                TextColor="White" />

                                            <!--  Export Link  -->
                                            <Label
                                                FontSize="12"
                                                HorizontalOptions="Center"
                                                Text="Export to Excel"
                                                TextColor="{StaticResource TextSecondary}"
                                                TextDecorations="Underline">
                                                <Label.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding MenuReportExportToExcelCommand}" />
                                                </Label.GestureRecognizers>
                                            </Label>
                                        </VerticalStackLayout>
                                    </Border>
                                </ScrollView>

                                <!--  Column 2: Menu Items Report + Charts  -->
                                <Grid Grid.Column="1">
                                    <core:SfBusyIndicator
                                        x:Name="busyIndicator"
                                        Title="Loading..."
                                        AnimationType="CircularMaterial"
                                        IsRunning="{Binding IsBusy}"
                                        TextColor="White" />
                                    <!--  Tab View for Menu Items  -->
                                    <tabView:SfTabView
                                        HorizontalOptions="Fill"
                                        TabWidthMode="Default"
                                        VerticalOptions="Fill">

                                        <!--  Tab 1: Top 5 Income-Generating Menu Items  -->
                                        <tabView:SfTabItem Header="Top Income-Generating Menu" TextColor="{StaticResource TextPrimary}">
                                            <tabView:SfTabItem.Content>
                                                <chart:SfCartesianChart Margin="10">
                                                    <chart:SfCartesianChart.XAxes>
                                                        <chart:CategoryAxis>
                                                            <chart:CategoryAxis.LabelStyle>
                                                                <chart:ChartAxisLabelStyle
                                                                    FontSize="14"
                                                                    LabelFormat="C2"
                                                                    TextColor="{StaticResource TextPrimary}" />
                                                            </chart:CategoryAxis.LabelStyle>
                                                        </chart:CategoryAxis>
                                                    </chart:SfCartesianChart.XAxes>
                                                    <chart:SfCartesianChart.YAxes>
                                                        <chart:NumericalAxis>
                                                            <chart:NumericalAxis.LabelStyle>
                                                                <chart:ChartAxisLabelStyle
                                                                    FontSize="14"
                                                                    LabelFormat="C2"
                                                                    TextColor="{StaticResource TextSecondary}" />
                                                            </chart:NumericalAxis.LabelStyle>
                                                        </chart:NumericalAxis>
                                                    </chart:SfCartesianChart.YAxes>
                                                    <chart:ColumnSeries
                                                        ItemsSource="{Binding TopIncomeGeneratingMenu}"
                                                        ShowDataLabels="True"
                                                        XBindingPath="MenuItemName"
                                                        YBindingPath="TotalSales" />
                                                </chart:SfCartesianChart>
                                            </tabView:SfTabItem.Content>
                                        </tabView:SfTabItem>

                                        <!--  Tab 2: Top 5 Menu Items by Sold Quantity  -->
                                        <tabView:SfTabItem Header="Top Menu By Sold Qty" TextColor="{StaticResource TextPrimary}">
                                            <tabView:SfTabItem.Content>
                                                <chart:SfCartesianChart Margin="10" IsTransposed="false">
                                                    <!--  Optional: Custom DataLabel Template  -->
                                                    <chart:SfCartesianChart.Resources>
                                                        <DataTemplate x:Key="labelTemplate">
                                                            <HorizontalStackLayout Spacing="5" VerticalOptions="Center">
                                                                <Image
                                                                    HeightRequest="15"
                                                                    Source="arr.png"
                                                                    WidthRequest="15" />
                                                                <Label
                                                                    FontSize="12"
                                                                    Text="{Binding Item.Values}"
                                                                    VerticalOptions="Center" />
                                                            </HorizontalStackLayout>
                                                        </DataTemplate>
                                                    </chart:SfCartesianChart.Resources>
                                                    <!--  Axes  -->
                                                    <chart:SfCartesianChart.XAxes>
                                                        <chart:CategoryAxis LabelRotation="0">
                                                            <chart:CategoryAxis.LabelStyle>
                                                                <chart:ChartAxisLabelStyle FontSize="14" TextColor="{StaticResource TextPrimary}" />
                                                            </chart:CategoryAxis.LabelStyle>
                                                        </chart:CategoryAxis>
                                                    </chart:SfCartesianChart.XAxes>
                                                    <chart:SfCartesianChart.YAxes>
                                                        <chart:NumericalAxis>
                                                            <chart:NumericalAxis.LabelStyle>
                                                                <chart:ChartAxisLabelStyle
                                                                    FontSize="14"
                                                                    LabelFormat="N0"
                                                                    TextColor="{StaticResource TextSecondary}" />
                                                            </chart:NumericalAxis.LabelStyle>
                                                        </chart:NumericalAxis>
                                                    </chart:SfCartesianChart.YAxes>
                                                    <!--  ColumnSeries  -->
                                                    <chart:ColumnSeries
                                                        ItemsSource="{Binding TopMenuItemsBySoldQty}"
                                                        ShowDataLabels="True"
                                                        XBindingPath="MenuItemName"
                                                        YBindingPath="QuantitySold">
                                                        <chart:ColumnSeries.DataLabelSettings>
                                                            <!--  Show numeric label outside the bar  -->
                                                            <chart:CartesianDataLabelSettings BarAlignment="Middle" LabelPlacement="Outer" />
                                                        </chart:ColumnSeries.DataLabelSettings>
                                                    </chart:ColumnSeries>
                                                </chart:SfCartesianChart>
                                            </tabView:SfTabItem.Content>
                                        </tabView:SfTabItem>

                                        <!--  Tab 3: Menu Items DataGrid  -->
                                        <tabView:SfTabItem Header="Menu Items Table" TextColor="{StaticResource TextPrimary}">
                                            <tabView:SfTabItem.Content>
                                                <Grid Padding="0" RowDefinitions="*,Auto">

                                                    <syncfusion:SfDataGrid
                                                        Grid.Row="0"
                                                        AutoGenerateColumnsMode="None"
                                                        ColumnWidthMode="Fill"
                                                        HeightRequest="35"
                                                        HorizontalOptions="Fill"
                                                        ItemsSource="{Binding Source={x:Reference dataPager}, Path=PagedSource}"
                                                        SelectionMode="None"
                                                        VerticalOptions="Fill">
                                                        <syncfusion:SfDataGrid.Columns>
                                                            <syncfusion:DataGridTextColumn HeaderText="Item Name" MappingName="MenuItemName" />
                                                            <syncfusion:DataGridTextColumn HeaderText="Category" MappingName="Category" />
                                                            <syncfusion:DataGridTextColumn HeaderText="Qty Sold" MappingName="QuantitySold" />
                                                            <syncfusion:DataGridTextColumn
                                                                Format="C2"
                                                                HeaderText="Total Sales"
                                                                MappingName="TotalSales" />
                                                        </syncfusion:SfDataGrid.Columns>
                                                    </syncfusion:SfDataGrid>
                                                    <pager:SfDataPager
                                                        x:Name="dataPager"
                                                        Grid.Row="1"
                                                        Margin="0,8,0,8"
                                                        BackgroundColor="{StaticResource CardBackground}"
                                                        HorizontalOptions="Center"
                                                        NumericButtonCount="5"
                                                        PageSize="5"
                                                        Source="{Binding MenuItemsReport}" />
                                                </Grid>
                                            </tabView:SfTabItem.Content>
                                        </tabView:SfTabItem>
                                    </tabView:SfTabView>
                                </Grid>
                            </Grid>
                        </Grid>
                    </tabView:SfTabItem>

                    <!--#endregion-->
                    <!--#region inventory and expenses reports-->
                    <tabView:SfTabItem
                        BackgroundColor="{StaticResource CardBackground}"
                        FontSize="12"
                        Header="Inventory"
                        ImagePosition="Left"
                        ImageSize="20"
                        ImageSource="inventory_check.png"
                        TextColor="{StaticResource TextPrimary}">

                        <Grid
                            Padding="20"
                            RowDefinitions="Auto, Auto, *"
                            RowSpacing="15">

                            <Border
                                Grid.Row="0"
                                Padding="12,8"
                                BackgroundColor="{StaticResource SurfaceDark}"
                                Stroke="{StaticResource Gray200}"
                                StrokeShape="RoundRectangle 8">
                                <Grid ColumnDefinitions="Auto, *, Auto, Auto" ColumnSpacing="15">

                                    <VerticalStackLayout Grid.Column="0" VerticalOptions="Center">
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="16"
                                            Text="Expenses &amp; Inventory"
                                            TextColor="{StaticResource TextPrimary}" />
                                        <Label
                                            FontSize="11"
                                            Text="Track costs &amp; waste"
                                            TextColor="{StaticResource TextSecondary}" />
                                    </VerticalStackLayout>

                                    <HorizontalStackLayout
                                        Grid.Column="1"
                                        Spacing="10"
                                        VerticalOptions="Center">

                                        <Border
                                            Padding="8,0"
                                            BackgroundColor="{StaticResource CardDark}"
                                            HeightRequest="35"
                                            StrokeShape="RoundRectangle 4">
                                            <HorizontalStackLayout Spacing="5" VerticalOptions="Center">
                                                <Label
                                                    FontSize="11"
                                                    Text="From:"
                                                    TextColor="{StaticResource TextSecondary}"
                                                    VerticalOptions="Center" />
                                                <DatePicker
                                                    BackgroundColor="Transparent"
                                                    Date="{Binding FromDate}"
                                                    FontSize="12"
                                                    TextColor="{StaticResource TextPrimary}" />
                                            </HorizontalStackLayout>
                                        </Border>

                                        <Border
                                            Padding="8,0"
                                            BackgroundColor="{StaticResource CardDark}"
                                            HeightRequest="35"
                                            StrokeShape="RoundRectangle 4">
                                            <HorizontalStackLayout Spacing="5" VerticalOptions="Center">
                                                <Label
                                                    FontSize="11"
                                                    Text="To:"
                                                    TextColor="{StaticResource TextSecondary}"
                                                    VerticalOptions="Center" />
                                                <DatePicker
                                                    BackgroundColor="Transparent"
                                                    Date="{Binding ToDate}"
                                                    FontSize="12"
                                                    TextColor="{StaticResource TextPrimary}" />
                                            </HorizontalStackLayout>
                                        </Border>

                                        <Button
                                            Padding="10,0"
                                            BackgroundColor="{StaticResource CardDark}"
                                            BorderColor="{StaticResource Gray200}"
                                            BorderWidth="1"
                                            Command="{Binding FilterExpensesTodayCommand}"
                                            CornerRadius="4"
                                            FontSize="11"
                                            HeightRequest="35"
                                            Text="Today"
                                            TextColor="{StaticResource TextPrimary}" />

                                        <Button
                                            Padding="10,0"
                                            BackgroundColor="{StaticResource CardDark}"
                                            BorderColor="{StaticResource Gray200}"
                                            BorderWidth="1"
                                            Command="{Binding FilterExpensesWeekCommand}"
                                            CornerRadius="4"
                                            FontSize="11"
                                            HeightRequest="35"
                                            Text="Week"
                                            TextColor="{StaticResource TextPrimary}" />

                                        <Button
                                            Padding="10,0"
                                            BackgroundColor="{StaticResource CardDark}"
                                            BorderColor="{StaticResource Gray200}"
                                            BorderWidth="1"
                                            Command="{Binding FilterExpensesMonthCommand}"
                                            CornerRadius="4"
                                            FontSize="11"
                                            HeightRequest="35"
                                            Text="Month"
                                            TextColor="{StaticResource TextPrimary}" />

                                        <Button
                                            Margin="10,0,0,0"
                                            Padding="15,0"
                                            BackgroundColor="{StaticResource Primary}"
                                            Command="{Binding GenerateExpensesReportCommand}"
                                            CornerRadius="6"
                                            FontAttributes="Bold"
                                            FontSize="12"
                                            HeightRequest="35"
                                            Text="Generate"
                                            TextColor="White" />
                                    </HorizontalStackLayout>

                                    <ImageButton
                                        Grid.Column="3"
                                        Command="{Binding ExportInventoryToExcelCommand}"
                                        HeightRequest="30"
                                        Source="export_excel.png"
                                        WidthRequest="30" />
                                </Grid>
                            </Border>

                            <Grid
                                Grid.Row="1"
                                ColumnDefinitions="*,*,*"
                                ColumnSpacing="15">
                                <Border
                                    Grid.Column="0"
                                    Padding="15"
                                    BackgroundColor="{StaticResource SurfaceDark}"
                                    Stroke="{StaticResource Gray200}"
                                    StrokeShape="RoundRectangle 12">
                                    <VerticalStackLayout Spacing="5">
                                        <Label
                                            FontSize="11"
                                            Text="TOTAL EXPENSES"
                                            TextColor="{StaticResource TextSecondary}" />
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="20"
                                            Text="{Binding TotalInventoryExpense, StringFormat='â‚±{0:N2}'}"
                                            TextColor="{StaticResource TextPrimary}" />
                                    </VerticalStackLayout>
                                </Border>
                                <Border
                                    Grid.Column="1"
                                    Padding="15"
                                    BackgroundColor="{StaticResource SurfaceDark}"
                                    Stroke="{StaticResource Gray200}"
                                    StrokeShape="RoundRectangle 12">
                                    <VerticalStackLayout Spacing="5">
                                        <Label
                                            FontSize="11"
                                            Text="TOTAL WASTE VALUE"
                                            TextColor="{StaticResource TextSecondary}" />
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="20"
                                            Text="{Binding TotalValueOfWasteItems, StringFormat='â‚±{0:N2}'}"
                                            TextColor="#D32F2F" />
                                    </VerticalStackLayout>
                                </Border>
                                <Border
                                    Grid.Column="2"
                                    Padding="15"
                                    BackgroundColor="{StaticResource SurfaceDark}"
                                    Stroke="{StaticResource Gray200}"
                                    StrokeShape="RoundRectangle 12">
                                    <VerticalStackLayout Spacing="5">
                                        <Label
                                            FontSize="11"
                                            Text="CRITICAL STOCK ITEMS"
                                            TextColor="{StaticResource TextSecondary}" />
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="20"
                                            Text="{Binding LowStockItems.Count, StringFormat='{0} Items'}"
                                            TextColor="#F57C00" />
                                    </VerticalStackLayout>
                                </Border>
                            </Grid>

                            <tabView:SfTabView
                                Grid.Row="2"
                                IndicatorPlacement="Fill"
                                TabBarHeight="40"
                                TabBarPlacement="Top">

                                <tabView:SfTabItem
                                    FontSize="14"
                                    Header="Analytics Charts"
                                    TextColor="{StaticResource TextPrimary}">
                                    <Grid
                                        Padding="0,15,0,0"
                                        ColumnDefinitions="6*, 4*"
                                        ColumnSpacing="15">

                                        <Border
                                            Grid.Column="0"
                                            Padding="10"
                                            BackgroundColor="{StaticResource SurfaceDark}"
                                            Stroke="{StaticResource Gray200}"
                                            StrokeShape="RoundRectangle 12">
                                            <Grid RowDefinitions="Auto, *">
                                                <Label
                                                    Grid.Row="0"
                                                    Margin="0,0,0,5"
                                                    FontAttributes="Bold"
                                                    FontSize="14"
                                                    Text="Expenses Trend"
                                                    TextColor="{StaticResource TextPrimary}" />
                                                <chart:SfCartesianChart Grid.Row="1">
                                                    <chart:SfCartesianChart.XAxes>
                                                        <chart:CategoryAxis ShowMajorGridLines="False">
                                                            <chart:CategoryAxis.LabelStyle>
                                                                <chart:ChartAxisLabelStyle FontSize="11" TextColor="{StaticResource TextSecondary}" />
                                                            </chart:CategoryAxis.LabelStyle>
                                                        </chart:CategoryAxis>
                                                    </chart:SfCartesianChart.XAxes>
                                                    <chart:SfCartesianChart.YAxes>
                                                        <chart:NumericalAxis ShowMajorGridLines="True">
                                                            <chart:NumericalAxis.LabelStyle>
                                                                <chart:ChartAxisLabelStyle
                                                                    FontSize="11"
                                                                    LabelFormat="C0"
                                                                    TextColor="{StaticResource TextSecondary}" />
                                                            </chart:NumericalAxis.LabelStyle>
                                                        </chart:NumericalAxis>
                                                    </chart:SfCartesianChart.YAxes>
                                                    <chart:ColumnSeries
                                                        Fill="{StaticResource Primary}"
                                                        ItemsSource="{Binding TrendData}"
                                                        ShowDataLabels="True"
                                                        XBindingPath="DateLabel"
                                                        YBindingPath="Amount">
                                                        <chart:ColumnSeries.DataLabelSettings>
                                                            <chart:CartesianDataLabelSettings LabelPlacement="Outer" />
                                                        </chart:ColumnSeries.DataLabelSettings>
                                                    </chart:ColumnSeries>
                                                </chart:SfCartesianChart>
                                            </Grid>
                                        </Border>

                                        <Border
                                            Grid.Column="1"
                                            Padding="10"
                                            BackgroundColor="{StaticResource SurfaceDark}"
                                            Stroke="{StaticResource Gray200}"
                                            StrokeShape="RoundRectangle 12">
                                            <Grid RowDefinitions="Auto, *">
                                                <Label
                                                    Grid.Row="0"
                                                    Margin="0,0,0,5"
                                                    FontAttributes="Bold"
                                                    FontSize="14"
                                                    Text="Stock Movement Distribution"
                                                    TextColor="{StaticResource TextPrimary}" />
                                                <chart:SfCircularChart Grid.Row="1">
                                                    <chart:PieSeries
                                                        ItemsSource="{Binding PieChartStockMovement}"
                                                        Radius="0.8"
                                                        ShowDataLabels="True"
                                                        XBindingPath="Reason"
                                                        YBindingPath="QuantityChange">
                                                        <chart:PieSeries.DataLabelSettings>
                                                            <chart:CircularDataLabelSettings LabelPosition="Outside" SmartLabelAlignment="Shift" />
                                                        </chart:PieSeries.DataLabelSettings>
                                                    </chart:PieSeries>
                                                    <chart:SfCircularChart.Legend>
                                                        <chart:ChartLegend Placement="Bottom" />
                                                    </chart:SfCircularChart.Legend>
                                                </chart:SfCircularChart>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </tabView:SfTabItem>

                                <tabView:SfTabItem
                                    FontSize="14"
                                    Header="Transaction Records"
                                    TextColor="{StaticResource TextPrimary}">
                                    <Grid
                                        Padding="0,15,0,0"
                                        ColumnDefinitions="7*, 3*"
                                        ColumnSpacing="15">

                                        <Border
                                            Grid.Column="0"
                                            Padding="10"
                                            BackgroundColor="{StaticResource SurfaceDark}"
                                            Stroke="{StaticResource Gray200}"
                                            StrokeShape="RoundRectangle 12">
                                            <Grid RowDefinitions="Auto, *">
                                                <Label
                                                    Grid.Row="0"
                                                    Margin="5,0,0,10"
                                                    FontAttributes="Bold"
                                                    FontSize="15"
                                                    Text="Recent Transactions"
                                                    TextColor="{StaticResource TextPrimary}" />
                                                <sfListView:SfListView
                                                    Grid.Row="1"
                                                    ItemSpacing="5"
                                                    ItemsSource="{Binding InventoryHistory}"
                                                    SelectionMode="None">
                                                    <sfListView:SfListView.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border
                                                                Margin="0,0,0,5"
                                                                Padding="10,8"
                                                                BackgroundColor="{StaticResource CardDark}"
                                                                StrokeThickness="0">
                                                                <Border.StrokeShape>
                                                                    <RoundRectangle CornerRadius="6" />
                                                                </Border.StrokeShape>
                                                                <Grid
                                                                    ColumnDefinitions="Auto, *, Auto"
                                                                    RowDefinitions="Auto, Auto"
                                                                    RowSpacing="2">
                                                                    <Border
                                                                        Grid.RowSpan="2"
                                                                        Grid.Column="0"
                                                                        Margin="0,0,10,0"
                                                                        Padding="8,4"
                                                                        BackgroundColor="{StaticResource SurfaceDark}"
                                                                        StrokeThickness="0"
                                                                        VerticalOptions="Center">
                                                                        <Border.StrokeShape>
                                                                            <RoundRectangle CornerRadius="4" />
                                                                        </Border.StrokeShape>
                                                                        <Label
                                                                            FontAttributes="Bold"
                                                                            FontSize="11"
                                                                            HorizontalTextAlignment="Center"
                                                                            Text="{Binding TransactionDate, StringFormat='{0:MMM dd}'}"
                                                                            TextColor="{StaticResource TextSecondary}" />
                                                                    </Border>
                                                                    <Label
                                                                        Grid.Row="0"
                                                                        Grid.Column="1"
                                                                        FontAttributes="Bold"
                                                                        FontSize="13"
                                                                        LineBreakMode="TailTruncation"
                                                                        Text="{Binding ItemName}"
                                                                        TextColor="{StaticResource TextPrimary}" />
                                                                    <Label
                                                                        Grid.Row="1"
                                                                        Grid.Column="1"
                                                                        FontSize="11"
                                                                        LineBreakMode="TailTruncation"
                                                                        TextColor="{StaticResource TextSecondary}">
                                                                        <Label.FormattedText>
                                                                            <FormattedString>
                                                                                <Span Text="{Binding Reason}" />
                                                                                <Span Text=" (" />
                                                                                <Span FontSize="10" Text="{Binding Remarks}" />
                                                                                <Span Text=")" />
                                                                            </FormattedString>
                                                                        </Label.FormattedText>
                                                                    </Label>
                                                                    <Label
                                                                        Grid.Row="0"
                                                                        Grid.Column="2"
                                                                        FontAttributes="Bold"
                                                                        FontSize="13"
                                                                        HorizontalOptions="End"
                                                                        Text="{Binding TransactionValue, StringFormat='â‚±{0:N2}'}"
                                                                        TextColor="{StaticResource TextPrimary}" />
                                                                    <Label
                                                                        Grid.Row="1"
                                                                        Grid.Column="2"
                                                                        FontSize="11"
                                                                        HorizontalOptions="End"
                                                                        TextColor="{StaticResource TextSecondary}">
                                                                        <Label.FormattedText>
                                                                            <FormattedString>
                                                                                <Span Text="{Binding QuantityChange}" />
                                                                                <Span Text=" " />
                                                                                <Span Text="{Binding Unit}" />
                                                                            </FormattedString>
                                                                        </Label.FormattedText>
                                                                    </Label>
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </sfListView:SfListView.ItemTemplate>
                                                </sfListView:SfListView>
                                            </Grid>
                                        </Border>

                                        <Border
                                            Grid.Column="1"
                                            Padding="10"
                                            BackgroundColor="{StaticResource SurfaceDark}"
                                            Stroke="{StaticResource Gray200}"
                                            StrokeShape="RoundRectangle 12">
                                            <Grid RowDefinitions="Auto, *">
                                                <Label
                                                    Grid.Row="0"
                                                    Margin="0,0,0,10"
                                                    FontAttributes="Bold"
                                                    FontSize="14"
                                                    Text="Low Stock Alerts"
                                                    TextColor="#D32F2F" />
                                                <sfListView:SfListView
                                                    Grid.Row="1"
                                                    ItemSize="35"
                                                    ItemsSource="{Binding LowStockItems}"
                                                    SelectionMode="None">
                                                    <sfListView:SfListView.ItemsLayout>
                                                        <sfListView:GridLayout SpanCount="2" />
                                                    </sfListView:SfListView.ItemsLayout>
                                                    <sfListView:SfListView.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border
                                                                Margin="2"
                                                                Padding="8,0"
                                                                BackgroundColor="{StaticResource CardDark}"
                                                                StrokeThickness="0">
                                                                <Border.StrokeShape>
                                                                    <RoundRectangle CornerRadius="4" />
                                                                </Border.StrokeShape>
                                                                <Label
                                                                    FontSize="11"
                                                                    LineBreakMode="TailTruncation"
                                                                    VerticalOptions="Center">
                                                                    <Label.FormattedText>
                                                                        <FormattedString>
                                                                            <Span Text="{Binding Name}" TextColor="{StaticResource TextPrimary}" />
                                                                            <Span Text=" (" TextColor="#D32F2F" />
                                                                            <Span
                                                                                FontAttributes="Bold"
                                                                                Text="{Binding QuantityOnHand}"
                                                                                TextColor="#D32F2F" />
                                                                            <Span Text=")" TextColor="#D32F2F" />
                                                                        </FormattedString>
                                                                    </Label.FormattedText>
                                                                </Label>
                                                            </Border>
                                                        </DataTemplate>
                                                    </sfListView:SfListView.ItemTemplate>
                                                </sfListView:SfListView>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </tabView:SfTabItem>
                            </tabView:SfTabView>
                        </Grid>
                    </tabView:SfTabItem>
                    <!--#endregion-->
                </tabView:SfTabView.Items>
            </tabView:SfTabView>
        </Grid>
    </Grid>
</ContentPage>