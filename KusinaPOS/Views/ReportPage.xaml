<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="KusinaPOS.Views.ReportPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:chart="clr-namespace:Syncfusion.Maui.Charts;assembly=Syncfusion.Maui.Charts"
    xmlns:core="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
    xmlns:pager="clr-namespace:Syncfusion.Maui.DataGrid.DataPager;assembly=Syncfusion.Maui.DataGrid"
    xmlns:sfListView="clr-namespace:Syncfusion.Maui.ListView;assembly=Syncfusion.Maui.ListView"
    xmlns:sfexpander="clr-namespace:Syncfusion.Maui.Expander;assembly=Syncfusion.Maui.Expander"
    xmlns:sfpopup="clr-namespace:Syncfusion.Maui.Popup;assembly=Syncfusion.Maui.Popup"
    xmlns:syncfusion="clr-namespace:Syncfusion.Maui.DataGrid;assembly=Syncfusion.Maui.DataGrid"
    xmlns:tabView="clr-namespace:Syncfusion.Maui.TabView;assembly=Syncfusion.Maui.TabView"
    Title="ReportPage"
    BackgroundColor="{StaticResource CardBackground}">
    <Grid>
        <sfpopup:SfPopup
            x:Name="SaleItemsPopup"
            AnimationMode="Fade"
            BackgroundColor="Transparent"
            HeaderHeight="60"
            HeightRequest="300"
            HorizontalOptions="Center"
            IsOpen="{Binding IsOpenPopup}"
            ShowCloseButton="True"
            VerticalOptions="Center"
            WidthRequest="400">
            <sfpopup:SfPopup.HeaderTemplate>
                <DataTemplate>
                    <Label
                        FontAttributes="Bold"
                        FontSize="18"
                        HorizontalTextAlignment="Center"
                        Text="Sales Items"
                        TextColor="{StaticResource Gray100}"
                        VerticalTextAlignment="Center" />
                </DataTemplate>
            </sfpopup:SfPopup.HeaderTemplate>
            <sfpopup:SfPopup.ContentTemplate>

                <DataTemplate>
                    <Grid Padding="10" BackgroundColor="{StaticResource CardBackground}">
                        <syncfusion:SfDataGrid
                            x:Name="SaleItemsDataGrid"
                            AutoGenerateColumnsMode="None"
                            BackgroundColor="{StaticResource CardBackground}"
                            ItemsSource="{Binding SaleItems}"
                            RowHeight="50"
                            SelectionMode="None">
                            <syncfusion:SfDataGrid.EmptyView>
                                <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                    <Label
                                        FontFamily="MauiMaterialAssets.ttf"
                                        FontSize="20"
                                        Text="&#xE7A4;"
                                        TextColor="{StaticResource TextSecondary}" />
                                    <Label FontSize="14" Text="No records for Void/Refund Transaction" />
                                </StackLayout>
                            </syncfusion:SfDataGrid.EmptyView>
                            <!--  Columns  -->
                            <syncfusion:SfDataGrid.Columns>
                                <!--  Menu Item Name  -->
                                <syncfusion:DataGridTextColumn
                                    Width="150"
                                    HeaderText="Item Name"
                                    MappingName="MenuItemName" />

                                <!--  Quantity  -->
                                <syncfusion:DataGridTextColumn
                                    Width="80"
                                    HeaderText="Qty"
                                    MappingName="Quantity" />

                                <!--  Unit Price  -->
                                <syncfusion:DataGridTextColumn
                                    Width="80"
                                    Format="â‚±{0:N2}"
                                    HeaderText="Unit Price"
                                    MappingName="UnitPrice" />

                                <!--  Line Total  -->
                                <syncfusion:DataGridTextColumn
                                    Width="80"
                                    Format="â‚±{0:N2}"
                                    HeaderText="Line Total"
                                    MappingName="LineTotal" />
                            </syncfusion:SfDataGrid.Columns>
                        </syncfusion:SfDataGrid>

                    </Grid>
                </DataTemplate>
            </sfpopup:SfPopup.ContentTemplate>
        </sfpopup:SfPopup>
        <Grid Padding="16" RowDefinitions="Auto,*">
            <!--  Top Header  -->
            <!--#region header-->
            <Grid
                Grid.Row="0"
                Margin="0,0,0,8"
                ColumnDefinitions="Auto,*,Auto,Auto">
                <ImageButton
                    Grid.Column="0"
                    Margin="0,0,15,0"
                    BackgroundColor="Transparent"
                    Command="{Binding GoBackCommand}"
                    HeightRequest="10"
                    Source="arrowback.png"
                    WidthRequest="10" />
                <Label
                    Grid.Column="1"
                    FontAttributes="Bold"
                    FontSize="15"
                    Text="{Binding StoreName, StringFormat='Reports - {0}'}"
                    TextColor="{StaticResource TextPrimary}"
                    VerticalOptions="Center" />

                <Label
                    Grid.Column="2"
                    Margin="0,0,15,0"
                    FontSize="12"
                    Text="{Binding CurrentDateTime}"
                    TextColor="{StaticResource TextSecondary}"
                    VerticalOptions="Center" />

                <HorizontalStackLayout
                    Grid.Column="3"
                    Spacing="8"
                    VerticalOptions="Center">
                    <Label
                        FontSize="12"
                        Text="{Binding LoggedInUserName}"
                        TextColor="{StaticResource TextSecondary}"
                        VerticalOptions="Center" />
                    <Border
                        BackgroundColor="{StaticResource Primary}"
                        HeightRequest="30"
                        StrokeShape="RoundRectangle 15"
                        WidthRequest="30">
                        <Label
                            FontSize="16"
                            HorizontalOptions="Center"
                            Text="âš™"
                            TextColor="White"
                            VerticalOptions="Center" />
                    </Border>
                </HorizontalStackLayout>
            </Grid>

            <!--#endregion-->
            <tabView:SfTabView
                x:Name="reportTabView"
                Grid.Row="1"
                ContentTransitionDuration="200"
                TabBarCornerRadius="24"
                TabBarPlacement="Bottom">
                <tabView:SfTabView.Items>
                    <!--#region sales report-->
                    <tabView:SfTabItem
                        BackgroundColor="{StaticResource CardBackground}"
                        FontSize="12"
                        Header="Sales"
                        ImagePosition="Left"
                        ImageSize="20"
                        ImageSource="sales.png"
                        TextColor="{StaticResource TextPrimary}">
                        <Grid
                            Padding="20"
                            RowDefinitions="Auto,*"
                            RowSpacing="20">

                            <!--  Header Section  -->
                            <VerticalStackLayout Grid.Row="0" Spacing="8">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="Large"
                                    Text="Sales Report"
                                    TextColor="{StaticResource TextPrimary}" />
                                <Label
                                    FontSize="Small"
                                    Text="Track sales performance and transaction history"
                                    TextColor="{StaticResource TextSecondary}" />
                            </VerticalStackLayout>

                            <!--  Main Content - 2 Columns  -->
                            <Grid
                                Grid.Row="1"
                                ColumnDefinitions="300,*"
                                ColumnSpacing="20">

                                <!--  Column 1: Filter Form  -->
                                <ScrollView Grid.Column="0">
                                    <Border
                                        Padding="20"
                                        BackgroundColor="{StaticResource SurfaceDark}"
                                        Stroke="{StaticResource Gray200}"
                                        StrokeShape="RoundRectangle 12"
                                        StrokeThickness="1">
                                        <VerticalStackLayout Spacing="15">
                                            <Label
                                                FontAttributes="Bold"
                                                FontSize="16"
                                                Text="Filter by Date Range"
                                                TextColor="{StaticResource TextPrimary}" />

                                            <!--  From Date  -->
                                            <VerticalStackLayout Spacing="8">
                                                <Label
                                                    FontSize="12"
                                                    Text="From Date"
                                                    TextColor="{StaticResource TextSecondary}" />
                                                <Border
                                                    Padding="8,5"
                                                    BackgroundColor="{StaticResource CardDark}"
                                                    Stroke="{StaticResource Gray200}"
                                                    StrokeShape="RoundRectangle 8"
                                                    StrokeThickness="1">
                                                    <DatePicker
                                                        BackgroundColor="Transparent"
                                                        Date="{Binding FromDate}"
                                                        FontSize="12"
                                                        TextColor="{StaticResource TextPrimary}" />
                                                </Border>
                                            </VerticalStackLayout>

                                            <!--  To Date  -->
                                            <VerticalStackLayout Spacing="8">
                                                <Label
                                                    FontSize="12"
                                                    Text="To Date"
                                                    TextColor="{StaticResource TextSecondary}" />
                                                <Border
                                                    Padding="8,5"
                                                    BackgroundColor="{StaticResource CardDark}"
                                                    Stroke="{StaticResource Gray200}"
                                                    StrokeShape="RoundRectangle 8"
                                                    StrokeThickness="1">
                                                    <DatePicker
                                                        BackgroundColor="Transparent"
                                                        Date="{Binding ToDate}"
                                                        FontSize="12"
                                                        TextColor="{StaticResource TextPrimary}" />
                                                </Border>
                                            </VerticalStackLayout>

                                            <!--  Quick Filters  -->
                                            <VerticalStackLayout Spacing="5">
                                                <Label
                                                    FontSize="12"
                                                    Text="Quick Filters"
                                                    TextColor="{StaticResource TextSecondary}" />
                                                <Button
                                                    BackgroundColor="{StaticResource CardDark}"
                                                    BorderColor="{StaticResource Gray200}"
                                                    BorderWidth="1"
                                                    Command="{Binding FilterTodayCommand}"
                                                    CornerRadius="8"
                                                    FontSize="14"
                                                    Text="Today"
                                                    TextColor="{StaticResource TextPrimary}" />
                                                <Button
                                                    BackgroundColor="{StaticResource CardDark}"
                                                    BorderColor="{StaticResource Gray200}"
                                                    BorderWidth="1"
                                                    Command="{Binding FilterWeekCommand}"
                                                    CornerRadius="8"
                                                    FontSize="14"
                                                    Text="This Week"
                                                    TextColor="{StaticResource TextPrimary}" />
                                                <Button
                                                    BackgroundColor="{StaticResource CardDark}"
                                                    BorderColor="{StaticResource Gray200}"
                                                    BorderWidth="1"
                                                    Command="{Binding FilterMonthCommand}"
                                                    CornerRadius="8"
                                                    FontSize="14"
                                                    Text="This Month"
                                                    TextColor="{StaticResource TextPrimary}" />
                                            </VerticalStackLayout>

                                            <!--  Generate Button  -->
                                            <Button
                                                BackgroundColor="{StaticResource Primary}"
                                                Command="{Binding GenerateReportCommand}"
                                                CornerRadius="8"
                                                FontAttributes="Bold"
                                                FontSize="16"
                                                Text="Generate Report"
                                                TextColor="White" />
                                        </VerticalStackLayout>
                                    </Border>
                                </ScrollView>

                                <!--  Column 2: Sales Reports  -->
                                <Grid
                                    Grid.Column="1"
                                    RowDefinitions="Auto,*"
                                    RowSpacing="20">

                                    <!--  Summary Cards (KPIs) - Smaller and More Compact  -->
                                    <Grid
                                        Grid.Row="0"
                                        ColumnDefinitions="*,*,*,*"
                                        ColumnSpacing="15">

                                        <!--  Total Sales  -->
                                        <Border
                                            Grid.Column="0"
                                            Padding="15"
                                            BackgroundColor="{StaticResource SurfaceDark}"
                                            Stroke="{StaticResource Gray200}"
                                            StrokeShape="RoundRectangle 12"
                                            StrokeThickness="1">
                                            <VerticalStackLayout Spacing="5">
                                                <Label
                                                    FontSize="11"
                                                    Text="Total Sales"
                                                    TextColor="{StaticResource TextSecondary}" />
                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="18"
                                                    Text="{Binding TotalSales, StringFormat='â‚±{0:N2}', FallbackValue='â‚±0.00'}"
                                                    TextColor="{StaticResource Primary}" />
                                            </VerticalStackLayout>
                                        </Border>

                                        <!--  Total Transactions  -->
                                        <Border
                                            Grid.Column="1"
                                            Padding="15"
                                            BackgroundColor="{StaticResource SurfaceDark}"
                                            Stroke="{StaticResource Gray200}"
                                            StrokeShape="RoundRectangle 12"
                                            StrokeThickness="1">
                                            <VerticalStackLayout Spacing="5">
                                                <Label
                                                    FontSize="11"
                                                    Text="Transactions"
                                                    TextColor="{StaticResource TextSecondary}" />
                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="18"
                                                    Text="{Binding TotalTransactions, FallbackValue='0'}"
                                                    TextColor="{StaticResource Primary}" />
                                            </VerticalStackLayout>
                                        </Border>

                                        <!--  Cash Refunded  -->
                                        <Border
                                            Grid.Column="2"
                                            Padding="15"
                                            BackgroundColor="{StaticResource SurfaceDark}"
                                            Stroke="{StaticResource Gray200}"
                                            StrokeShape="RoundRectangle 12"
                                            StrokeThickness="1">
                                            <VerticalStackLayout Spacing="5">
                                                <Label
                                                    FontSize="11"
                                                    Text="Cash Refunded"
                                                    TextColor="{StaticResource TextSecondary}" />
                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="18"
                                                    Text="{Binding CashRefunded, StringFormat='â‚±{0:N2}', FallbackValue='â‚±0.00'}"
                                                    TextColor="{StaticResource Primary}" />
                                            </VerticalStackLayout>
                                        </Border>

                                        <!--  Average Sale  -->
                                        <Border
                                            Grid.Column="3"
                                            Padding="15"
                                            BackgroundColor="{StaticResource SurfaceDark}"
                                            Stroke="{StaticResource Gray200}"
                                            StrokeShape="RoundRectangle 12"
                                            StrokeThickness="1">
                                            <VerticalStackLayout Spacing="5">
                                                <Label
                                                    FontSize="11"
                                                    Text="Average Sale"
                                                    TextColor="{StaticResource TextSecondary}" />
                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="18"
                                                    Text="{Binding AverageSale, StringFormat='â‚±{0:N2}', FallbackValue='â‚±0.00'}"
                                                    TextColor="{StaticResource Primary}" />
                                            </VerticalStackLayout>
                                        </Border>
                                    </Grid>

                                    <!--  Sales List Section - Takes Remaining Space  -->
                                    <Border
                                        Grid.Row="1"
                                        Padding="20"
                                        BackgroundColor="{StaticResource SurfaceDark}"
                                        Stroke="{StaticResource Gray200}"
                                        StrokeShape="RoundRectangle 12"
                                        StrokeThickness="1">
                                        <Grid RowDefinitions="Auto,*">
                                            <!--  Header  -->
                                            <Grid
                                                Grid.Row="0"
                                                Margin="0,0,0,15"
                                                ColumnDefinitions="*,Auto">
                                                <Label
                                                    Grid.Column="0"
                                                    FontAttributes="Bold"
                                                    FontSize="16"
                                                    Text="Transaction History"
                                                    TextColor="{StaticResource TextPrimary}"
                                                    VerticalOptions="Center" />
                                                <Label
                                                    Grid.Column="1"
                                                    FontAttributes="Italic"
                                                    FontSize="14"
                                                    Text="Export to Excel"
                                                    TextColor="{StaticResource TextSecondary}"
                                                    TextDecorations="Underline"
                                                    VerticalOptions="Center">
                                                    <Label.GestureRecognizers>
                                                        <TapGestureRecognizer Command="{Binding ExportToExcelCommand}" />
                                                    </Label.GestureRecognizers>
                                                </Label>
                                            </Grid>

                                            <!--  Transaction List  -->

                                            <CollectionView
                                                Grid.Row="1"
                                                EmptyView="No transactions found for selected period"
                                                ItemsSource="{Binding SalesTransactions}"
                                                SelectedItem="{Binding SelectedSaleTransaction}"
                                                SelectionMode="Single">
                                                <CollectionView.ItemTemplate>
                                                    <!--  In the CollectionView.ItemTemplate  -->
                                                    <DataTemplate>
                                                        <Border
                                                            Margin="0,0,0,10"
                                                            Padding="12,8"
                                                            BackgroundColor="{StaticResource CardDark}"
                                                            Stroke="{StaticResource Gray200}"
                                                            StrokeShape="RoundRectangle 8"
                                                            StrokeThickness="1">

                                                            <Grid
                                                                ColumnDefinitions="*,Auto"
                                                                RowDefinitions="Auto,Auto"
                                                                RowSpacing="4">

                                                                <Label
                                                                    Grid.Row="0"
                                                                    Grid.Column="0"
                                                                    FontAttributes="Bold"
                                                                    FontSize="14"
                                                                    LineBreakMode="TailTruncation"
                                                                    Text="{Binding ReceiptNo}"
                                                                    TextColor="{StaticResource TextPrimary}" />

                                                                <Label
                                                                    Grid.Row="0"
                                                                    Grid.RowSpan="2"
                                                                    Grid.Column="1"
                                                                    FontAttributes="Bold"
                                                                    FontSize="16"
                                                                    HorizontalOptions="End"
                                                                    Text="{Binding TotalAmount, StringFormat='â‚±{0:N2}'}"
                                                                    TextColor="{StaticResource Primary}"
                                                                    VerticalOptions="Center" />

                                                                <HorizontalStackLayout
                                                                    Grid.Row="1"
                                                                    Grid.Column="0"
                                                                    Spacing="8">

                                                                    <Label
                                                                        FontAttributes="Bold"
                                                                        FontSize="11"
                                                                        Text="{Binding Status}"
                                                                        VerticalOptions="Center">
                                                                        <Label.Triggers>
                                                                            <DataTrigger
                                                                                Binding="{Binding Status}"
                                                                                TargetType="Label"
                                                                                Value="Completed">
                                                                                <Setter Property="TextColor" Value="{StaticResource Primary}" />
                                                                            </DataTrigger>

                                                                            <DataTrigger
                                                                                Binding="{Binding Status}"
                                                                                TargetType="Label"
                                                                                Value="Voided">
                                                                                <Setter Property="TextColor" Value="#FF453A" />
                                                                            </DataTrigger>

                                                                            <DataTrigger
                                                                                Binding="{Binding Status}"
                                                                                TargetType="Label"
                                                                                Value="Refund">
                                                                                <Setter Property="TextColor" Value="#FF9F0A" />
                                                                            </DataTrigger>
                                                                            <DataTrigger
                                                                                Binding="{Binding Status}"
                                                                                TargetType="Label"
                                                                                Value="Refunded">
                                                                                <Setter Property="TextColor" Value="#FF9F0A" />
                                                                            </DataTrigger>
                                                                        </Label.Triggers>
                                                                    </Label>

                                                                    <Label
                                                                        FontSize="11"
                                                                        Text="|"
                                                                        TextColor="{StaticResource TextSecondary}"
                                                                        VerticalOptions="Center" />

                                                                    <Label
                                                                        FontSize="11"
                                                                        Text="{Binding SaleDate, StringFormat='{0:MMM dd, hh:mm tt}'}"
                                                                        TextColor="{StaticResource TextSecondary}"
                                                                        VerticalOptions="Center" />

                                                                </HorizontalStackLayout>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </CollectionView.ItemTemplate>

                                                <!--  Empty View Styling  -->
                                                <CollectionView.EmptyViewTemplate>
                                                    <DataTemplate>
                                                        <VerticalStackLayout
                                                            Padding="40"
                                                            HorizontalOptions="Center"
                                                            VerticalOptions="Center">
                                                            <Label
                                                                Margin="0,0,0,15"
                                                                FontSize="35"
                                                                HorizontalOptions="Center"
                                                                Text="ðŸ“Š" />
                                                            <Label
                                                                FontSize="12"
                                                                HorizontalOptions="Center"
                                                                Text="No transactions found"
                                                                TextColor="{StaticResource TextSecondary}" />
                                                            <Label
                                                                Margin="0,5,0,0"
                                                                FontSize="12"
                                                                HorizontalOptions="Center"
                                                                Text="Try adjusting your date range"
                                                                TextColor="{StaticResource TextSecondary}" />
                                                        </VerticalStackLayout>
                                                    </DataTemplate>
                                                </CollectionView.EmptyViewTemplate>
                                            </CollectionView>
                                        </Grid>
                                    </Border>

                                </Grid>

                            </Grid>


                        </Grid>
                    </tabView:SfTabItem>
                    <!--#endregion-->
                    <!--#region menu items reports-->
                    <tabView:SfTabItem
                        BackgroundColor="{StaticResource CardBackground}"
                        FontSize="12"
                        Header="Menu Items"
                        ImagePosition="Left"
                        ImageSize="20"
                        ImageSource="fast_moving.png"
                        TextColor="{StaticResource TextPrimary}">

                        <Grid
                            Padding="20"
                            RowDefinitions="Auto,*"
                            RowSpacing="20">

                            <!--  Header  -->
                            <VerticalStackLayout Grid.Row="0" Spacing="8">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="Large"
                                    Text="Menu Items Report"
                                    TextColor="{StaticResource TextPrimary}" />
                                <Label
                                    FontSize="Small"
                                    Text="Track menu item sales and performance"
                                    TextColor="{StaticResource TextSecondary}" />
                            </VerticalStackLayout>

                            <!--  Main Content: 2 Columns  -->
                            <Grid
                                Grid.Row="1"
                                ColumnDefinitions="300,*"
                                ColumnSpacing="10">

                                <!--  Column 1: Filter Form  -->
                                <ScrollView Grid.Column="0">
                                    <Border Padding="12" Style="{StaticResource CardBorder}">

                                        <VerticalStackLayout Spacing="10">

                                            <!--  Header  -->
                                            <Label
                                                FontAttributes="Bold"
                                                FontSize="14"
                                                Text="Filters"
                                                TextColor="{StaticResource TextPrimary}" />

                                            <!--  Date Range (compact row)  -->
                                            <Grid ColumnDefinitions="*,*" ColumnSpacing="8">
                                                <DatePicker Date="{Binding FromDate}" />
                                                <DatePicker Grid.Column="1" Date="{Binding ToDate}" />
                                            </Grid>

                                            <!--  Category  -->
                                            <Picker
                                                Title="Category"
                                                ItemsSource="{Binding Categories}"
                                                SelectedItem="{Binding SelectedCategory}" />

                                            <!--  Quick Filters (compact buttons)  -->
                                            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="6">
                                                <Button
                                                    Padding="6"
                                                    BackgroundColor="{StaticResource CardDark}"
                                                    BorderColor="{StaticResource Gray200}"
                                                    BorderWidth="1"
                                                    Command="{Binding FilterMenuTodayCommand}"
                                                    CornerRadius="8"
                                                    FontSize="12"
                                                    Text="Today" />

                                                <Button
                                                    Grid.Column="1"
                                                    Padding="6"
                                                    BackgroundColor="{StaticResource CardDark}"
                                                    BorderColor="{StaticResource Gray200}"
                                                    BorderWidth="1"
                                                    Command="{Binding FilterMenuWeekCommand}"
                                                    CornerRadius="8"
                                                    FontSize="12"
                                                    Text="Week" />

                                                <Button
                                                    Grid.Column="2"
                                                    Padding="6"
                                                    BackgroundColor="{StaticResource CardDark}"
                                                    BorderColor="{StaticResource Gray200}"
                                                    BorderWidth="1"
                                                    Command="{Binding FilterMenuMonthCommand}"
                                                    CornerRadius="8"
                                                    FontSize="12"
                                                    Text="Month" />
                                            </Grid>

                                            <!--  Generate  -->
                                            <Button
                                                Padding="10"
                                                BackgroundColor="{StaticResource Primary}"
                                                Command="{Binding GenerateMenuReportCommand}"
                                                FontSize="13"
                                                Text="Generate"
                                                TextColor="White" />
                                            <Label
                                                FontSize="14"
                                                Text="Export to Excel"
                                                TextColor="{StaticResource TextSecondary}"
                                                TextDecorations="Underline">
                                                <Label.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding MenuReportExportToExcelCommand}" />
                                                </Label.GestureRecognizers>
                                            </Label>
                                        </VerticalStackLayout>
                                    </Border>
                                </ScrollView>


                                <!--  Column 2: Menu Items Report + Charts  -->
                                <Grid Grid.Column="1">
                                    <core:SfBusyIndicator
                                        x:Name="busyIndicator"
                                        Title="Loading..."
                                        AnimationType="CircularMaterial"
                                        IsRunning="{Binding IsBusy}"
                                        TextColor="White" />
                                    <!--  Tab View for Menu Items  -->
                                    <tabView:SfTabView
                                        HorizontalOptions="Fill"
                                        TabWidthMode="Default"
                                        VerticalOptions="Fill">

                                        <!--  Tab 1: Top 5 Income-Generating Menu Items  -->
                                        <tabView:SfTabItem Header="Top Income-Generating Menu" TextColor="{StaticResource TextPrimary}">
                                            <tabView:SfTabItem.Content>
                                                <chart:SfCartesianChart Margin="10">
                                                    <chart:SfCartesianChart.XAxes>
                                                        <chart:CategoryAxis>
                                                            <chart:CategoryAxis.LabelStyle>
                                                                <chart:ChartAxisLabelStyle
                                                                    FontSize="14"
                                                                    LabelFormat="C2"
                                                                    TextColor="{StaticResource TextPrimary}" />
                                                            </chart:CategoryAxis.LabelStyle>
                                                        </chart:CategoryAxis>
                                                    </chart:SfCartesianChart.XAxes>
                                                    <chart:SfCartesianChart.YAxes>
                                                        <chart:NumericalAxis>
                                                            <chart:NumericalAxis.LabelStyle>
                                                                <chart:ChartAxisLabelStyle
                                                                    FontSize="14"
                                                                    LabelFormat="C2"
                                                                    TextColor="{StaticResource TextSecondary}" />
                                                            </chart:NumericalAxis.LabelStyle>
                                                        </chart:NumericalAxis>
                                                    </chart:SfCartesianChart.YAxes>
                                                    <chart:ColumnSeries
                                                        ItemsSource="{Binding TopIncomeGeneratingMenu}"
                                                        ShowDataLabels="True"
                                                        XBindingPath="MenuItemName"
                                                        YBindingPath="TotalSales" />
                                                </chart:SfCartesianChart>
                                            </tabView:SfTabItem.Content>
                                        </tabView:SfTabItem>

                                        <!--  Tab 2: Top 5 Menu Items by Sold Quantity  -->
                                        <tabView:SfTabItem Header="Top Menu By Sold Qty" TextColor="{StaticResource TextPrimary}">
                                            <tabView:SfTabItem.Content>
                                                <chart:SfCartesianChart Margin="10" IsTransposed="false">
                                                    <!--  Optional: Custom DataLabel Template  -->
                                                    <chart:SfCartesianChart.Resources>
                                                        <DataTemplate x:Key="labelTemplate">
                                                            <HorizontalStackLayout Spacing="5" VerticalOptions="Center">
                                                                <Image
                                                                    HeightRequest="15"
                                                                    Source="arr.png"
                                                                    WidthRequest="15" />
                                                                <Label
                                                                    FontSize="12"
                                                                    Text="{Binding Item.Values}"
                                                                    VerticalOptions="Center" />
                                                            </HorizontalStackLayout>
                                                        </DataTemplate>
                                                    </chart:SfCartesianChart.Resources>
                                                    <!--  Axes  -->
                                                    <chart:SfCartesianChart.XAxes>
                                                        <chart:CategoryAxis LabelRotation="0">
                                                            <chart:CategoryAxis.LabelStyle>
                                                                <chart:ChartAxisLabelStyle FontSize="14" TextColor="{StaticResource TextPrimary}" />
                                                            </chart:CategoryAxis.LabelStyle>
                                                        </chart:CategoryAxis>
                                                    </chart:SfCartesianChart.XAxes>
                                                    <chart:SfCartesianChart.YAxes>
                                                        <chart:NumericalAxis>
                                                            <chart:NumericalAxis.LabelStyle>
                                                                <chart:ChartAxisLabelStyle
                                                                    FontSize="14"
                                                                    LabelFormat="N0"
                                                                    TextColor="{StaticResource TextSecondary}" />
                                                            </chart:NumericalAxis.LabelStyle>
                                                        </chart:NumericalAxis>
                                                    </chart:SfCartesianChart.YAxes>
                                                    <!--  ColumnSeries  -->
                                                    <chart:ColumnSeries
                                                        ItemsSource="{Binding TopMenuItemsBySoldQty}"
                                                        ShowDataLabels="True"
                                                        XBindingPath="MenuItemName"
                                                        YBindingPath="QuantitySold">
                                                        <chart:ColumnSeries.DataLabelSettings>
                                                            <!--  Show numeric label outside the bar  -->
                                                            <chart:CartesianDataLabelSettings BarAlignment="Middle" LabelPlacement="Outer" />
                                                        </chart:ColumnSeries.DataLabelSettings>
                                                    </chart:ColumnSeries>
                                                </chart:SfCartesianChart>
                                            </tabView:SfTabItem.Content>
                                        </tabView:SfTabItem>

                                        <!--  Tab 3: Menu Items DataGrid  -->
                                        <tabView:SfTabItem Header="Menu Items Table" TextColor="{StaticResource TextPrimary}">
                                            <tabView:SfTabItem.Content>
                                                <Grid Padding="0" RowDefinitions="*,Auto">

                                                    <syncfusion:SfDataGrid
                                                        Grid.Row="0"
                                                        AutoGenerateColumnsMode="None"
                                                        ColumnWidthMode="Fill"
                                                        HeightRequest="35"
                                                        HorizontalOptions="Fill"
                                                        ItemsSource="{Binding Source={x:Reference dataPager}, Path=PagedSource}"
                                                        SelectionMode="None"
                                                        VerticalOptions="Fill">
                                                        <syncfusion:SfDataGrid.Columns>
                                                            <syncfusion:DataGridTextColumn HeaderText="Item Name" MappingName="MenuItemName" />
                                                            <syncfusion:DataGridTextColumn HeaderText="Category" MappingName="Category" />
                                                            <syncfusion:DataGridTextColumn HeaderText="Qty Sold" MappingName="QuantitySold" />
                                                            <syncfusion:DataGridTextColumn
                                                                Format="C2"
                                                                HeaderText="Total Sales"
                                                                MappingName="TotalSales" />
                                                        </syncfusion:SfDataGrid.Columns>
                                                    </syncfusion:SfDataGrid>
                                                    <pager:SfDataPager
                                                        x:Name="dataPager"
                                                        Grid.Row="1"
                                                        Margin="0,8,0,8"
                                                        BackgroundColor="{StaticResource CardBackground}"
                                                        HorizontalOptions="Center"
                                                        NumericButtonCount="5"
                                                        PageSize="5"
                                                        Source="{Binding MenuItemsReport}" />
                                                </Grid>
                                            </tabView:SfTabItem.Content>
                                        </tabView:SfTabItem>

                                    </tabView:SfTabView>
                                </Grid>

                            </Grid>

                        </Grid>
                    </tabView:SfTabItem>

                    <!--#endregion-->
                    <!--#region inventory and expenses reports-->
                    <tabView:SfTabItem
                        BackgroundColor="{StaticResource CardBackground}"
                        FontSize="12"
                        Header="Inventory"
                        ImagePosition="Left"
                        ImageSize="20"
                        ImageSource="inventory_check.png"
                        TextColor="{StaticResource TextPrimary}">

                        <Grid
                            Padding="15"
                            RowDefinitions="Auto,*"
                            RowSpacing="15">

                            <VerticalStackLayout Grid.Row="0" Spacing="4">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="20"
                                    Text="Expenses Report"
                                    TextColor="{StaticResource TextPrimary}" />
                                <Label
                                    FontSize="12"
                                    Text="Track your inventory costs and supplier trends"
                                    TextColor="{StaticResource TextSecondary}" />
                            </VerticalStackLayout>

                            <Grid
                                Grid.Row="1"
                                ColumnDefinitions="280,*"
                                ColumnSpacing="15">

                                <Border
                                    Grid.Column="0"
                                    Padding="15"
                                    Style="{StaticResource CardBorder}"
                                    VerticalOptions="Fill">
                                    <ScrollView>
                                        <VerticalStackLayout Spacing="20">
                                            <VerticalStackLayout Spacing="10">
                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="14"
                                                    Text="Date Range"
                                                    TextColor="{StaticResource TextPrimary}" />

                                                <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                                                    <DatePicker Date="{Binding FromDate}" Format="MMM dd" />
                                                    <DatePicker
                                                        Grid.Column="1"
                                                        Date="{Binding ToDate}"
                                                        Format="MMM dd" />
                                                </Grid>

                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="14"
                                                    Text="Quick Select"
                                                    TextColor="{StaticResource TextPrimary}" />

                                                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="8">
                                                    <Button
                                                        Padding="0"
                                                        BackgroundColor="{StaticResource CardDark}"
                                                        BorderColor="{StaticResource Gray200}"
                                                        BorderWidth="1"
                                                        Command="{Binding FilterExpensesTodayCommand}"
                                                        CornerRadius="8"
                                                        FontSize="11"
                                                        HeightRequest="36"
                                                        Text="Today"
                                                        TextColor="{StaticResource TextPrimary}" />

                                                    <Button
                                                        Grid.Column="1"
                                                        Padding="0"
                                                        BackgroundColor="{StaticResource CardDark}"
                                                        BorderColor="{StaticResource Gray200}"
                                                        BorderWidth="1"
                                                        Command="{Binding FilterExpensesWeekCommand}"
                                                        CornerRadius="8"
                                                        FontSize="11"
                                                        HeightRequest="36"
                                                        Text="Week"
                                                        TextColor="{StaticResource TextPrimary}" />

                                                    <Button
                                                        Grid.Column="2"
                                                        Padding="0"
                                                        BackgroundColor="{StaticResource CardDark}"
                                                        BorderColor="{StaticResource Gray200}"
                                                        BorderWidth="1"
                                                        Command="{Binding FilterExpensesMonthCommand}"
                                                        CornerRadius="8"
                                                        FontSize="11"
                                                        HeightRequest="36"
                                                        Text="Month"
                                                        TextColor="{StaticResource TextPrimary}" />
                                                </Grid>
                                            </VerticalStackLayout>

                                            <BoxView HeightRequest="1" Color="{StaticResource Gray200}" />

                                            <VerticalStackLayout Spacing="15">
                                                <Button
                                                    BackgroundColor="{StaticResource Primary}"
                                                    Command="{Binding GenerateExpensesReportCommand}"
                                                    CornerRadius="8"
                                                    FontAttributes="Bold"
                                                    HeightRequest="44"
                                                    Text="Generate Report"
                                                    TextColor="White" />

                                                <Label
                                                    HorizontalOptions="Center"
                                                    Text="Export to Excel"
                                                    TextColor="{StaticResource TextSecondary}"
                                                    TextDecorations="Underline">
                                                    <Label.GestureRecognizers>
                                                        <TapGestureRecognizer Command="{Binding MenuReportExportToExcelCommand}" />
                                                    </Label.GestureRecognizers>
                                                </Label>
                                            </VerticalStackLayout>
                                        </VerticalStackLayout>
                                    </ScrollView>
                                </Border>

                                <Grid
                                    Grid.Column="1"
                                    RowDefinitions="Auto,*"
                                    RowSpacing="15">

                                    <Border
                                        Grid.Row="0"
                                        Padding="15"
                                        Style="{StaticResource CardBorder}">
                                        <Grid ColumnDefinitions="*,*,*" ColumnSpacing="20">
                                            <VerticalStackLayout Grid.Column="0" Spacing="2">
                                                <Label
                                                    FontSize="12"
                                                    Text="Total Period Cost"
                                                    TextColor="{StaticResource TextSecondary}" />
                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="24"
                                                    Text="{Binding TotalInventoryExpense, StringFormat='â‚±{0:N2}'}"
                                                    TextColor="{StaticResource TextPrimary}" />
                                            </VerticalStackLayout>
                                            <VerticalStackLayout
                                                Grid.Column="1"
                                                Margin="0,20,0,0"
                                                Spacing="10">

                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="16"
                                                    Text="Low Stock Alerts"
                                                    TextColor="{StaticResource TextPrimary}" />

                                                <CollectionView
                                                    HeightRequest="100"
                                                    ItemsSource="{Binding LowStockItems}"
                                                    SelectionMode="None">

                                                    <CollectionView.EmptyView>
                                                        <Label
                                                            HorizontalOptions="Center"
                                                            Text="No items are low on stock."
                                                            TextColor="{StaticResource TextSecondary}"
                                                            VerticalOptions="Center" />
                                                    </CollectionView.EmptyView>

                                                    <CollectionView.ItemTemplate>
                                                        <DataTemplate>
                                                            <Grid
                                                                Padding="0,6"
                                                                ColumnDefinitions="20, *"
                                                                RowDefinitions="Auto, 1">

                                                                <Label
                                                                    Grid.Column="0"
                                                                    FontFamily="MaterialAssets"
                                                                    FontSize="14"
                                                                    HorizontalOptions="Start"
                                                                    Text="&#xe701;"
                                                                    TextColor="#D32F2F"
                                                                    VerticalOptions="Center" />

                                                                <Label
                                                                    Grid.Column="1"
                                                                    FontSize="12"
                                                                    LineBreakMode="TailTruncation"
                                                                    VerticalOptions="Center">
                                                                    <Label.FormattedText>
                                                                        <FormattedString>
                                                                            <Span
                                                                                FontAttributes="Bold"
                                                                                Text="{Binding Name}"
                                                                                TextColor="{StaticResource TextPrimary}" />

                                                                            <Span Text=" - (" TextColor="{StaticResource TextSecondary}" />

                                                                            <Span
                                                                                FontAttributes="Bold"
                                                                                Text="{Binding QuantityOnHand, StringFormat='{0:N0}'}"
                                                                                TextColor="#D32F2F" />

                                                                            <Span Text="{Binding Unit, StringFormat=' {0})'}" TextColor="{StaticResource TextSecondary}" />
                                                                        </FormattedString>
                                                                    </Label.FormattedText>
                                                                </Label>

                                                                <BoxView
                                                                    Grid.Row="1"
                                                                    Grid.ColumnSpan="2"
                                                                    Margin="0,4,0,0"
                                                                    HeightRequest="1"
                                                                    Color="{AppThemeBinding Light=#E0E0E0,
                                                                                            Dark=#333333}" />
                                                            </Grid>
                                                        </DataTemplate>
                                                    </CollectionView.ItemTemplate>
                                                </CollectionView>
                                            </VerticalStackLayout>
                                            <VerticalStackLayout Grid.Column="2" Spacing="2">
                                                <Label
                                                    FontSize="12"
                                                    Text="Vs Last Month"
                                                    TextColor="{StaticResource TextSecondary}" />
                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="16"
                                                    Text="â–¼ 4.2%"
                                                    TextColor="#27ae60" />
                                            </VerticalStackLayout>
                                        </Grid>
                                    </Border>

                                    <Grid
                                        Grid.Row="1"
                                        ColumnDefinitions="*,*"
                                        ColumnSpacing="15">

                                        <Border
                                            Grid.Column="0"
                                            Padding="10"
                                            Style="{StaticResource CardBorder}">
                                            <Grid RowDefinitions="Auto,*">
                                                <Label
                                                    Grid.Row="0"
                                                    Margin="5,0,0,10"
                                                    FontAttributes="Bold"
                                                    FontSize="15"
                                                    Text="Monthly Cost Trend"
                                                    TextColor="{StaticResource TextPrimary}" />

                                                <chart:SfCartesianChart Grid.Row="1">

                                                    <chart:SfCartesianChart.XAxes>
                                                        <chart:CategoryAxis LabelPlacement="BetweenTicks" ShowMajorGridLines="False">
                                                            <chart:CategoryAxis.LabelStyle>
                                                                <chart:ChartAxisLabelStyle
                                                                    FontAttributes="Bold"
                                                                    FontSize="12"
                                                                    TextColor="{StaticResource TextSecondary}" />
                                                            </chart:CategoryAxis.LabelStyle>
                                                        </chart:CategoryAxis>
                                                    </chart:SfCartesianChart.XAxes>

                                                    <chart:SfCartesianChart.YAxes>
                                                        <chart:NumericalAxis Minimum="0" ShowMajorGridLines="True">
                                                            <chart:NumericalAxis.LabelStyle>
                                                                <chart:ChartAxisLabelStyle
                                                                    FontSize="11"
                                                                    LabelFormat="C0"
                                                                    TextColor="{StaticResource TextSecondary}" />
                                                            </chart:NumericalAxis.LabelStyle>
                                                        </chart:NumericalAxis>
                                                    </chart:SfCartesianChart.YAxes>

                                                    <chart:ColumnSeries
                                                        EnableTooltip="True"
                                                        Fill="{StaticResource Primary}"
                                                        ItemsSource="{Binding TrendData}"
                                                        ShowDataLabels="True"
                                                        XBindingPath="DateLabel"
                                                        YBindingPath="Amount">

                                                        <chart:ColumnSeries.DataLabelSettings>
                                                            <chart:CartesianDataLabelSettings BarAlignment="Top" LabelPlacement="Outer">
                                                                <chart:CartesianDataLabelSettings.LabelStyle>
                                                                    <chart:ChartDataLabelStyle
                                                                        FontSize="10"
                                                                        LabelFormat="C0"
                                                                        TextColor="{StaticResource TextSecondary}" />
                                                                </chart:CartesianDataLabelSettings.LabelStyle>
                                                            </chart:CartesianDataLabelSettings>
                                                        </chart:ColumnSeries.DataLabelSettings>

                                                    </chart:ColumnSeries>
                                                </chart:SfCartesianChart>
                                            </Grid>
                                        </Border>

                                        <Border
                                            Grid.Column="1"
                                            Padding="10"
                                            Style="{StaticResource CardBorder}">
                                            <Grid RowDefinitions="Auto,*">
                                                <Label
                                                    Grid.Row="0"
                                                    Margin="5,0,0,10"
                                                    FontAttributes="Bold"
                                                    FontSize="15"
                                                    Text="Recent Transactions"
                                                    TextColor="{StaticResource TextPrimary}" />

                                                <sfListView:SfListView
                                                    Grid.Row="1"
                                                    ItemSpacing="5"
                                                    ItemsSource="{Binding InventoryHistory}"
                                                    SelectionMode="None">
                                                    <sfListView:SfListView.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border
                                                                Margin="0,0,0,5"
                                                                Padding="10,8"
                                                                BackgroundColor="{AppThemeBinding Light=#F5F5F5,
                                                                                                  Dark=#2C2C2C}"
                                                                StrokeThickness="0">
                                                                <Border.StrokeShape>
                                                                    <RoundRectangle CornerRadius="6" />
                                                                </Border.StrokeShape>

                                                                <Grid
                                                                    ColumnDefinitions="Auto, *, Auto"
                                                                    RowDefinitions="Auto, Auto"
                                                                    RowSpacing="2">

                                                                    <Border
                                                                        Grid.RowSpan="2"
                                                                        Grid.Column="0"
                                                                        Margin="0,0,10,0"
                                                                        Padding="8,4"
                                                                        BackgroundColor="{StaticResource CardDark}"
                                                                        StrokeThickness="0"
                                                                        VerticalOptions="Center">
                                                                        <Border.StrokeShape>
                                                                            <RoundRectangle CornerRadius="4" />
                                                                        </Border.StrokeShape>
                                                                        <Label
                                                                            FontAttributes="Bold"
                                                                            FontSize="11"
                                                                            HorizontalTextAlignment="Center"
                                                                            Text="{Binding TransactionDate, StringFormat='{0:MMM dd}'}"
                                                                            TextColor="{StaticResource TextSecondary}" />
                                                                    </Border>

                                                                    <Label
                                                                        Grid.Row="0"
                                                                        Grid.Column="1"
                                                                        FontAttributes="Bold"
                                                                        FontSize="13"
                                                                        LineBreakMode="TailTruncation"
                                                                        Text="{Binding ItemName}"
                                                                        TextColor="{StaticResource TextPrimary}" />

                                                                    <Label
                                                                        Grid.Row="1"
                                                                        Grid.Column="1"
                                                                        FontSize="11"
                                                                        LineBreakMode="TailTruncation"
                                                                        Text="{Binding Remarks}"
                                                                        TextColor="{StaticResource TextSecondary}" />

                                                                    <Label
                                                                        Grid.Row="0"
                                                                        Grid.Column="2"
                                                                        FontAttributes="Bold"
                                                                        FontSize="13"
                                                                        HorizontalOptions="End"
                                                                        Text="{Binding TransactionValue, StringFormat='â‚±{0:N2}'}"
                                                                        TextColor="{StaticResource TextPrimary}" />

                                                                    <Label
                                                                        Grid.Row="1"
                                                                        Grid.Column="2"
                                                                        FontSize="11"
                                                                        HorizontalOptions="End"
                                                                        TextColor="{StaticResource TextSecondary}">
                                                                        <Label.FormattedText>
                                                                            <FormattedString>
                                                                                <Span Text="{Binding QuantityChange}" />
                                                                                <Span Text=" " />
                                                                                <Span Text="{Binding Unit}" />
                                                                            </FormattedString>
                                                                        </Label.FormattedText>
                                                                    </Label>
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </sfListView:SfListView.ItemTemplate>
                                                </sfListView:SfListView>
                                            </Grid>
                                        </Border>

                                    </Grid>
                                </Grid>
                            </Grid>
                        </Grid>
                    </tabView:SfTabItem>
                    <!--#endregion-->
                </tabView:SfTabView.Items>
            </tabView:SfTabView>



        </Grid>
    </Grid>
</ContentPage>