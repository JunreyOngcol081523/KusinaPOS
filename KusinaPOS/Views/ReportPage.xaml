<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KusinaPOS.Views.ReportPage"
             xmlns:tabView="clr-namespace:Syncfusion.Maui.TabView;assembly=Syncfusion.Maui.TabView"
             xmlns:sfpopup="clr-namespace:Syncfusion.Maui.Popup;assembly=Syncfusion.Maui.Popup"
             xmlns:sfListView="clr-namespace:Syncfusion.Maui.ListView;assembly=Syncfusion.Maui.ListView"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.DataGrid;assembly=Syncfusion.Maui.DataGrid"
             xmlns:pager="clr-namespace:Syncfusion.Maui.DataGrid.DataPager;assembly=Syncfusion.Maui.DataGrid"
             xmlns:sfexpander="clr-namespace:Syncfusion.Maui.Expander;assembly=Syncfusion.Maui.Expander"
             xmlns:chart="clr-namespace:Syncfusion.Maui.Charts;assembly=Syncfusion.Maui.Charts"
             xmlns:core="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             BackgroundColor="{StaticResource CardBackground}"
             Title="ReportPage">
    <Grid>
        <sfpopup:SfPopup x:Name="SaleItemsPopup"
                        AnimationMode="Fade" 
                        HeaderHeight="60"
                        HeightRequest="300"
                        WidthRequest="400"
                        ShowCloseButton="True"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                        IsOpen="{Binding IsOpenPopup}">
            <sfpopup:SfPopup.HeaderTemplate>
                <DataTemplate>
                    <Label Text="Sales Items" 
                               FontAttributes="Bold"
                               FontSize="18"
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"/>
                </DataTemplate>
            </sfpopup:SfPopup.HeaderTemplate>
            <sfpopup:SfPopup.ContentTemplate>

                <DataTemplate>
                    <Grid Padding="10">
                        <syncfusion:SfDataGrid x:Name="SaleItemsDataGrid"
                                AutoGenerateColumnsMode ="None"
                               ItemsSource="{Binding SaleItems}"
                               SelectionMode="None"
                               RowHeight="50">

                            <!-- Columns -->
                            <syncfusion:SfDataGrid.Columns>
                                <!-- Menu Item Name -->
                                <syncfusion:DataGridTextColumn   MappingName="MenuItemName"
                               HeaderText="Item Name"
                               Width="150" />

                                <!-- Quantity -->
                                <syncfusion:DataGridTextColumn   MappingName="Quantity"
                               HeaderText="Qty"
                               
                               Width="80" />

                                <!-- Unit Price -->
                                <syncfusion:DataGridTextColumn   MappingName="UnitPrice"
                               HeaderText="Unit Price"
                               Format="â‚±{0:N2}"
                               
                               Width="80" />

                                <!-- Line Total -->
                                <syncfusion:DataGridTextColumn   MappingName="LineTotal"
                               HeaderText="Line Total"
                               Format="â‚±{0:N2}"
                               
                               Width="80" />
                            </syncfusion:SfDataGrid.Columns>
                        </syncfusion:SfDataGrid>

                    </Grid>
                </DataTemplate>
            </sfpopup:SfPopup.ContentTemplate>
        </sfpopup:SfPopup>
        <Grid Padding="16" RowDefinitions="Auto,*">
            <!-- Top Header -->
            <!--#region header -->
            <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto,Auto" Margin="0,0,0,8">
                <ImageButton Grid.Column="0"
                    Margin="0,0,15,0"
                    WidthRequest="10"
                    HeightRequest="10"
                    Command="{Binding GoBackCommand}"
                    Source="arrowback.png"
                    BackgroundColor="Transparent">
                </ImageButton>
                <Label Grid.Column="1" 
                   Text="{Binding StoreName, StringFormat='Reports - {0}'}"
                   FontSize="15" 
                   FontAttributes="Bold"
                   TextColor="{StaticResource TextPrimary}"
                   VerticalOptions="Center" />

                <Label Grid.Column="2" 
                   Text="{Binding CurrentDateTime}" 
                   FontSize="12"
                   TextColor="{StaticResource TextSecondary}"
                   VerticalOptions="Center"
                   Margin="0,0,15,0" />

                <HorizontalStackLayout Grid.Column="3" Spacing="8" VerticalOptions="Center">
                    <Label Text="{Binding LoggedInUserName}" 
                       FontSize="12"
                       TextColor="{StaticResource TextSecondary}"
                       VerticalOptions="Center" />
                    <Border StrokeShape="RoundRectangle 15"
                        WidthRequest="30"
                        HeightRequest="30"
                        BackgroundColor="{StaticResource Primary}">
                        <Label Text="âš™" 
                           FontSize="16"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           TextColor="White" />
                    </Border>
                </HorizontalStackLayout>
            </Grid>

            <!--#endregion-->
            <tabView:SfTabView Grid.Row="1" 
                           x:Name="reportTabView"
                           ContentTransitionDuration ="200"
                           TabBarPlacement="Bottom"
                           TabBarCornerRadius="24">
                <tabView:SfTabView.Items>
                    <!--#region sales report -->
                    <tabView:SfTabItem Header="Sales" ImageSource="sales.png" 
                                   BackgroundColor="{StaticResource CardBackground}" 
                                   TextColor="{StaticResource TextPrimary}"
                                   FontSize="12"
                                   ImageSize="20"
                                   ImagePosition="Left" >
                        <Grid RowDefinitions="Auto,*" 
                          Padding="20"
                          RowSpacing="20">

                            <!-- Header Section -->
                            <VerticalStackLayout Grid.Row="0" Spacing="8">
                                <Label Text="Sales Report"
                                           TextColor="{StaticResource TextPrimary}"
                                           FontSize="Large"
                                           FontAttributes="Bold"/>
                                <Label Text="Track sales performance and transaction history"
                                           TextColor="{StaticResource TextSecondary}"
                                           FontSize="Small"/>
                            </VerticalStackLayout>

                            <!-- Main Content - 2 Columns -->
                            <Grid Grid.Row="1"
                              ColumnDefinitions="300,*"
                              ColumnSpacing="20">

                                <!-- Column 1: Filter Form -->
                                <ScrollView Grid.Column="0">
                                    <Border BackgroundColor="{StaticResource SurfaceDark}"
                                        StrokeShape="RoundRectangle 12"
                                        Stroke="{StaticResource Gray200}"
                                        StrokeThickness="1"
                                        Padding="20">
                                        <VerticalStackLayout Spacing="15">
                                            <Label Text="Filter by Date Range"
                                               TextColor="{StaticResource TextPrimary}"
                                               FontSize="16"
                                               FontAttributes="Bold"/>

                                            <!-- From Date -->
                                            <VerticalStackLayout Spacing="8">
                                                <Label Text="From Date"
                                                    TextColor="{StaticResource TextSecondary}"
                                                    FontSize="12"/>
                                                <Border BackgroundColor="{StaticResource CardDark}"
                                                    StrokeShape="RoundRectangle 8"
                                                    Stroke="{StaticResource Gray200}"
                                                    StrokeThickness="1"
                                                    Padding="8,5">
                                                    <DatePicker Date="{Binding FromDate}"
                                                            TextColor="{StaticResource TextPrimary}"
                                                            FontSize="12"
                                                            BackgroundColor="Transparent"/>
                                                </Border>
                                            </VerticalStackLayout>

                                            <!-- To Date -->
                                            <VerticalStackLayout Spacing="8">
                                                <Label Text="To Date"
                                                   TextColor="{StaticResource TextSecondary}"
                                                   FontSize="12"/>
                                                <Border BackgroundColor="{StaticResource CardDark}"
                                                    StrokeShape="RoundRectangle 8"
                                                    Stroke="{StaticResource Gray200}"
                                                    StrokeThickness="1"
                                                    Padding="8,5">
                                                    <DatePicker Date="{Binding ToDate}"
                                                            TextColor="{StaticResource TextPrimary}"
                                                            FontSize="12"
                                                            BackgroundColor="Transparent"/>
                                                </Border>
                                            </VerticalStackLayout>

                                            <!-- Quick Filters -->
                                            <VerticalStackLayout Spacing="5">
                                                <Label Text="Quick Filters"
                                                   TextColor="{StaticResource TextSecondary}"
                                                   FontSize="12"/>
                                                <Button Text="Today"
                                                    BackgroundColor="{StaticResource CardDark}"
                                                    TextColor="{StaticResource TextPrimary}"
                                                    BorderColor="{StaticResource Gray200}"
                                                    BorderWidth="1"
                                                    CornerRadius="8"
                                                    FontSize="14"
                                                    
                                                    Command="{Binding FilterTodayCommand}"/>
                                                <Button Text="This Week"
                                                    BackgroundColor="{StaticResource CardDark}"
                                                    TextColor="{StaticResource TextPrimary}"
                                                    BorderColor="{StaticResource Gray200}"
                                                    BorderWidth="1"
                                                    CornerRadius="8"
                                                    FontSize="14"
                                                    
                                                    Command="{Binding FilterWeekCommand}"/>
                                                <Button Text="This Month"
                                                    BackgroundColor="{StaticResource CardDark}"
                                                    TextColor="{StaticResource TextPrimary}"
                                                    BorderColor="{StaticResource Gray200}"
                                                    BorderWidth="1"
                                                    CornerRadius="8"
                                                    FontSize="14"
                                                    
                                                    Command="{Binding FilterMonthCommand}"/>
                                            </VerticalStackLayout>

                                            <!-- Generate Button -->
                                            <Button Text="Generate Report"
                                                BackgroundColor="{StaticResource Primary}"
                                                TextColor="White"
                                                FontSize="16"
                                                FontAttributes="Bold"
                                                CornerRadius="8"
                                                Command="{Binding GenerateReportCommand}"/>
                                        </VerticalStackLayout>
                                    </Border>
                                </ScrollView>

                                <!-- Column 2: Sales Reports -->
                                <Grid Grid.Column="1" RowDefinitions="Auto,*" RowSpacing="20">

                                    <!-- Summary Cards (KPIs) - Smaller and More Compact -->
                                    <Grid Grid.Row="0"
                                      ColumnDefinitions="*,*,*,*"
                                      ColumnSpacing="15">

                                        <!-- Total Sales -->
                                        <Border Grid.Column="0"
                                            BackgroundColor="{StaticResource SurfaceDark}"
                                            StrokeShape="RoundRectangle 12"
                                            Stroke="{StaticResource Gray200}"
                                            StrokeThickness="1"
                                            Padding="15">
                                            <VerticalStackLayout Spacing="5">
                                                <Label Text="Total Sales"
                                                   TextColor="{StaticResource TextSecondary}"
                                                   FontSize="11"/>
                                                <Label Text="{Binding TotalSales, StringFormat='â‚±{0:N2}', FallbackValue='â‚±0.00'}"
                                                   TextColor="{StaticResource Primary}"
                                                   FontSize="18"
                                                   FontAttributes="Bold"/>
                                            </VerticalStackLayout>
                                        </Border>

                                        <!-- Total Transactions -->
                                        <Border Grid.Column="1"
                                            BackgroundColor="{StaticResource SurfaceDark}"
                                            StrokeShape="RoundRectangle 12"
                                            Stroke="{StaticResource Gray200}"
                                            StrokeThickness="1"
                                            Padding="15">
                                            <VerticalStackLayout Spacing="5">
                                                <Label Text="Transactions"
                                                   TextColor="{StaticResource TextSecondary}"
                                                   FontSize="11"/>
                                                <Label Text="{Binding TotalTransactions, FallbackValue='0'}"
                                                   TextColor="{StaticResource Primary}"
                                                   FontSize="18"
                                                   FontAttributes="Bold"/>
                                            </VerticalStackLayout>
                                        </Border>

                                        <!-- Cash Collected -->
                                        <Border Grid.Column="2"
                                            BackgroundColor="{StaticResource SurfaceDark}"
                                            StrokeShape="RoundRectangle 12"
                                            Stroke="{StaticResource Gray200}"
                                            StrokeThickness="1"
                                            Padding="15">
                                            <VerticalStackLayout Spacing="5">
                                                <Label Text="Cash Collected"
                                                   TextColor="{StaticResource TextSecondary}"
                                                   FontSize="11"/>
                                                <Label Text="{Binding CashCollected, StringFormat='â‚±{0:N2}', FallbackValue='â‚±0.00'}"
                                                   TextColor="{StaticResource Primary}"
                                                   FontSize="18"
                                                   FontAttributes="Bold"/>
                                            </VerticalStackLayout>
                                        </Border>

                                        <!-- Average Sale -->
                                        <Border Grid.Column="3"
                                            BackgroundColor="{StaticResource SurfaceDark}"
                                            StrokeShape="RoundRectangle 12"
                                            Stroke="{StaticResource Gray200}"
                                            StrokeThickness="1"
                                            Padding="15">
                                            <VerticalStackLayout Spacing="5">
                                                <Label Text="Average Sale"
                                                   TextColor="{StaticResource TextSecondary}"
                                                   FontSize="11"/>
                                                <Label Text="{Binding AverageSale, StringFormat='â‚±{0:N2}', FallbackValue='â‚±0.00'}"
                                                   TextColor="{StaticResource Primary}"
                                                   FontSize="18"
                                                   FontAttributes="Bold"/>
                                            </VerticalStackLayout>
                                        </Border>
                                    </Grid>

                                    <!-- Sales List Section - Takes Remaining Space -->
                                    <Border Grid.Row="1"
                                        BackgroundColor="{StaticResource SurfaceDark}"
                                        StrokeShape="RoundRectangle 12"
                                        Stroke="{StaticResource Gray200}"
                                        StrokeThickness="1"
                                        Padding="20">
                                        <Grid RowDefinitions="Auto,*">
                                            <!-- Header -->
                                            <Grid Grid.Row="0" 
                                              ColumnDefinitions="*,Auto" 
                                              Margin="0,0,0,15">
                                                <Label Grid.Column="0"
                                                   Text="Transaction History"
                                                   TextColor="{StaticResource TextPrimary}"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   VerticalOptions="Center"/>
                                                <Label Grid.Column="1"
                                                   Text="Export to Excel"
                                                   TextColor="{StaticResource TextSecondary}"
                                                   FontSize="14"
                                                   TextDecorations="Underline"
                                                   FontAttributes="Italic"
                                                   VerticalOptions="Center">
                                                    <Label.GestureRecognizers>
                                                        <TapGestureRecognizer Command="{Binding ExportToExcelCommand}"/>
                                                    </Label.GestureRecognizers>
                                                </Label>
                                            </Grid>

                                            <!-- Transaction List -->

                                            <CollectionView  Grid.Row="1" ItemsSource="{Binding SalesTransactions}"
                                                         EmptyView="No transactions found for selected period"
                                                         SelectionMode="Single"
                                                         SelectedItem="{Binding SelectedSaleTransaction}">
                                                <CollectionView.ItemTemplate>
                                                    <!-- In the CollectionView.ItemTemplate -->
                                                    <DataTemplate>
                                                        <Border BackgroundColor="{StaticResource CardDark}"
                                                                StrokeShape="RoundRectangle 8"
                                                                Stroke="{StaticResource Gray200}"
                                                                StrokeThickness="1"
                                                                Padding="8"
                                                                Margin="0,0,0,10">
                                                            <Grid ColumnDefinitions="*,Auto"
                                                                  RowDefinitions="Auto,Auto"
                                                                  RowSpacing="8">

                                                                <!-- Receipt Number -->
                                                                <Label Grid.Column="0" Grid.Row="0"
                                                                       Text="{Binding ReceiptNo}"
                                                                       TextColor="{StaticResource TextPrimary}"
                                                                       FontSize="12"
                                                                       FontAttributes="Bold"/>

                                                                <!-- Total Amount -->
                                                                <Label Grid.Column="1" Grid.Row="0" Grid.RowSpan="2"
                                                                       Text="{Binding TotalAmount, StringFormat='â‚±{0:N2}'}"
                                                                       TextColor="{StaticResource Primary}"
                                                                       FontSize="15"
                                                                       FontAttributes="Bold"
                                                                       VerticalOptions="Center"
                                                                       HorizontalOptions="End"/>

                                                                <!-- Date & Time -->
                                                                <Label Grid.Column="0" Grid.Row="1"
                                                                       Text="{Binding SaleDate, StringFormat='{0:MMM dd, yyyy hh:mm tt}'}"
                                                                       TextColor="{StaticResource TextSecondary}"
                                                                       FontSize="10"/>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </CollectionView.ItemTemplate>

                                                <!-- Empty View Styling -->
                                                <CollectionView.EmptyViewTemplate>
                                                    <DataTemplate>
                                                        <VerticalStackLayout VerticalOptions="Center"
                                                                             HorizontalOptions="Center"
                                                                             Padding="40">
                                                            <Label Text="ðŸ“Š"
                                                                   FontSize="35"
                                                                   HorizontalOptions="Center"
                                                                   Margin="0,0,0,15"/>
                                                            <Label Text="No transactions found"
                                                                   TextColor="{StaticResource TextSecondary}"
                                                                   FontSize="12"
                                                                   HorizontalOptions="Center"/>
                                                            <Label Text="Try adjusting your date range"
                                                                   TextColor="{StaticResource TextSecondary}"
                                                                   FontSize="12"
                                                                   HorizontalOptions="Center"
                                                                   Margin="0,5,0,0"/>
                                                        </VerticalStackLayout>
                                                    </DataTemplate>
                                                </CollectionView.EmptyViewTemplate>
                                            </CollectionView>
                                        </Grid>
                                    </Border>

                                </Grid>

                            </Grid>


                        </Grid>
                    </tabView:SfTabItem>
                    <!--#endregion-->
                    <!--#region menu items reports -->
                    <tabView:SfTabItem Header="Menu Items" ImageSource="fast_moving.png" 
                                       BackgroundColor="{StaticResource CardBackground}" 
                                       TextColor="{StaticResource TextPrimary}"
                                       FontSize="12"
                                       ImageSize="20"
                                       ImagePosition="Left">

                        <Grid RowDefinitions="Auto,*" Padding="20" RowSpacing="20">

                            <!-- Header -->
                            <VerticalStackLayout Grid.Row="0" Spacing="8">
                                <Label Text="Menu Items Report"
                   TextColor="{StaticResource TextPrimary}"
                   FontSize="Large"
                   FontAttributes="Bold"/>
                                <Label Text="Track menu item sales and performance"
                   TextColor="{StaticResource TextSecondary}"
                   FontSize="Small"/>
                            </VerticalStackLayout>

                            <!-- Main Content: 2 Columns -->
                            <Grid Grid.Row="1" ColumnDefinitions="300,*" ColumnSpacing="10">

                                <!-- Column 1: Filter Form -->
                                <ScrollView Grid.Column="0">
                                    <Border Style="{StaticResource CardBorder}"
                                            Padding="12">

                                        <VerticalStackLayout Spacing="10">

                                            <!-- Header -->
                                            <Label Text="Filters"
                                                   FontSize="14"
                                                   FontAttributes="Bold"
                                                   TextColor="{StaticResource TextPrimary}" />

                                            <!-- Date Range (compact row) -->
                                            <Grid ColumnDefinitions="*,*"
                                                    ColumnSpacing="8">
                                                <DatePicker Date="{Binding FromDate}" />
                                                <DatePicker Grid.Column="1"
                                                            Date="{Binding ToDate}" />
                                            </Grid>

                                            <!-- Category -->
                                            <Picker Title="Category"
                                                    ItemsSource="{Binding Categories}"
                                                    SelectedItem="{Binding SelectedCategory}" />

                                            <!-- Quick Filters (compact buttons) -->
                                            <Grid ColumnDefinitions="*,*,*"
                                                    ColumnSpacing="6">
                                                <Button Text="Today"
                                                        FontSize="12"
                                                        Padding="6"
                                                        Command="{Binding FilterMenuTodayCommand}" />

                                                <Button Text="Week"
                                                        Grid.Column="1"
                                                        FontSize="12"
                                                        Padding="6"
                                                        Command="{Binding FilterMenuWeekCommand}" />

                                                <Button Text="Month"
                                                        Grid.Column="2"
                                                        FontSize="12"
                                                        Padding="6"
                                                        Command="{Binding FilterMenuMonthCommand}" />
                                            </Grid>

                                            <!-- Generate -->
                                            <Button Text="Generate"
                                                    FontSize="13"
                                                    Padding="10"
                                                    BackgroundColor="{StaticResource Primary}"
                                                    TextColor="White"
                                                    Command="{Binding GenerateMenuReportCommand}" />
                                            <Label Text="Export to Excel"
                                                   TextColor="{StaticResource TextSecondary}"
                                                   FontSize="14" TextDecorations="Underline">
                                                <Label.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding ExportMenuReportCommand}" />
                                                </Label.GestureRecognizers>
                                            </Label>
                                        </VerticalStackLayout>
                                    </Border>
                                </ScrollView>


                                <!-- Column 2: Menu Items Report + Charts -->
                                <Grid Grid.Column="1" >
                                    <core:SfBusyIndicator x:Name="busyIndicator"
                                                          IsRunning="{Binding IsBusy}"
                                                          AnimationType="CircularMaterial" 
                                                          Title="Loading..."
                                                          TextColor="White"/>
                                    <!-- Tab View for Menu Items -->
                                    <tabView:SfTabView TabWidthMode="Default" VerticalOptions="Fill" HorizontalOptions="Fill">

                                        <!-- Tab 1: Top 5 Income-Generating Menu Items -->
                                        <tabView:SfTabItem Header="Top Income-Generating Menu" TextColor="{StaticResource TextPrimary}" >
                                            <tabView:SfTabItem.Content>
                                                <chart:SfCartesianChart Margin="10">
                                                    <chart:SfCartesianChart.XAxes>
                                                        <chart:CategoryAxis>
                                                            <chart:CategoryAxis.LabelStyle>
                                                                <chart:ChartAxisLabelStyle TextColor="{StaticResource TextPrimary}" 
                                                               FontSize="14" 
                                                               LabelFormat="N2"/>
                                                            </chart:CategoryAxis.LabelStyle>
                                                        </chart:CategoryAxis>
                                                    </chart:SfCartesianChart.XAxes>
                                                    <chart:SfCartesianChart.YAxes>
                                                        <chart:NumericalAxis>
                                                            <chart:NumericalAxis.LabelStyle>
                                                                <chart:ChartAxisLabelStyle TextColor="{StaticResource TextSecondary}" 
                                                               FontSize="14"
                                                               LabelFormat="N2"/>
                                                            </chart:NumericalAxis.LabelStyle>
                                                        </chart:NumericalAxis>
                                                    </chart:SfCartesianChart.YAxes>
                                                    <chart:ColumnSeries XBindingPath="MenuItemName"
                                                                        ItemsSource="{Binding Top5MenuItems}"
                                                                        YBindingPath="TotalSales"
                                                                        ShowDataLabels="True"/>
                                                </chart:SfCartesianChart>
                                            </tabView:SfTabItem.Content>
                                        </tabView:SfTabItem>

                                        <!-- Tab 2: Top 5 Menu Items by Sold Quantity -->
                                        <tabView:SfTabItem Header="Top 5 Sold Menu" TextColor="{StaticResource TextPrimary}" >
                                            <tabView:SfTabItem.Content>
                                                <chart:SfCartesianChart IsTransposed="false" Margin="10">
                                                    <!-- Optional: Custom DataLabel Template -->
                                                    <chart:SfCartesianChart.Resources>
                                                        <DataTemplate x:Key="labelTemplate">
                                                            <HorizontalStackLayout Spacing="5" VerticalOptions="Center">
                                                                <Image Source="arr.png" WidthRequest="15" HeightRequest="15"/>
                                                                <Label Text="{Binding Item.Values}" VerticalOptions="Center" FontSize="12"/>
                                                            </HorizontalStackLayout>
                                                        </DataTemplate>
                                                    </chart:SfCartesianChart.Resources>
                                                    <!-- Axes -->
                                                    <chart:SfCartesianChart.XAxes>
                                                        <chart:CategoryAxis LabelRotation="0">
                                                            <chart:CategoryAxis.LabelStyle>
                                                                <chart:ChartAxisLabelStyle TextColor="{StaticResource TextPrimary}" FontSize="14"/>
                                                            </chart:CategoryAxis.LabelStyle>
                                                        </chart:CategoryAxis>
                                                    </chart:SfCartesianChart.XAxes>
                                                    <chart:SfCartesianChart.YAxes>
                                                        <chart:NumericalAxis>
                                                            <chart:NumericalAxis.LabelStyle>
                                                                <chart:ChartAxisLabelStyle TextColor="{StaticResource TextSecondary}" 
                                                               FontSize="14"
                                                               LabelFormat="N0"/>
                                                            </chart:NumericalAxis.LabelStyle>
                                                        </chart:NumericalAxis>
                                                    </chart:SfCartesianChart.YAxes>
                                                    <!-- ColumnSeries -->
                                                    <chart:ColumnSeries ItemsSource="{Binding AllMenuItemsByCategory}"
                                            XBindingPath="MenuItemName"
                                            YBindingPath="QuantitySold"
                                            ShowDataLabels="True"
                                            LabelTemplate="{StaticResource labelTemplate}">
                                                        <chart:ColumnSeries.DataLabelSettings>
                                                            <!-- Show numeric label outside the bar -->
                                                            <chart:CartesianDataLabelSettings LabelPlacement="Outer"
                                                                  BarAlignment="Middle"/>
                                                        </chart:ColumnSeries.DataLabelSettings>
                                                    </chart:ColumnSeries>
                                                </chart:SfCartesianChart>
                                            </tabView:SfTabItem.Content>
                                        </tabView:SfTabItem>

                                        <!-- Tab 3: Menu Items DataGrid -->
                                        <tabView:SfTabItem Header="Menu Items Table" TextColor="{StaticResource TextPrimary}" >
                                            <tabView:SfTabItem.Content>
                                                <Grid RowDefinitions="*,Auto" Padding="0">

                                                    <syncfusion:SfDataGrid Grid.Row="0"
                                                                           ItemsSource="{Binding Source={x:Reference dataPager}, Path=PagedSource }"  
                                                                           AutoGenerateColumnsMode="None"
                                                                           ColumnWidthMode="Fill"
                                                                           HorizontalOptions="Fill"
                                                                           VerticalOptions="Fill"
                                                                           SelectionMode="None"
                                                                           HeightRequest="35"
                                                                           >
                                                        <syncfusion:SfDataGrid.Columns>
                                                            <syncfusion:DataGridTextColumn
                                                                        MappingName="MenuItemName"
                                                                        HeaderText="Item Name"/>
                                                            <syncfusion:DataGridTextColumn
                                                                        MappingName="Category"
                                                                        HeaderText="Category"/>
                                                            <syncfusion:DataGridTextColumn
                                                                        MappingName="QuantitySold"
                                                                        HeaderText="Qty Sold"/>
                                                            <syncfusion:DataGridTextColumn
                                                                        MappingName="TotalSales"
                                                                        HeaderText="Total Sales"
                                                                        Format="â‚±{0:N2}"/>
                                                        </syncfusion:SfDataGrid.Columns>
                                                    </syncfusion:SfDataGrid>
                                                    <pager:SfDataPager Grid.Row="1"
                                                                       x:Name="dataPager"
                                                                       PageSize="5"
                                                                       NumericButtonCount="5"
                                                                       Source="{Binding MenuItemsReport}"
                                                                       BackgroundColor="{StaticResource CardBackground}"
                                                                       HorizontalOptions="Center"
                                                                       Margin="0,8,0,8"
                                                                       />
                                                </Grid>
                                            </tabView:SfTabItem.Content>
                                        </tabView:SfTabItem>

                                    </tabView:SfTabView>
                                </Grid>

                            </Grid>

                        </Grid>
                    </tabView:SfTabItem>

                    <!--#endregion-->
                    <tabView:SfTabItem Header="Inventory" ImageSource="inventory_check.png" 
                                   BackgroundColor="{StaticResource CardBackground}"   
                                   TextColor="{StaticResource TextPrimary}"
                                   FontSize="12"
                                   ImageSize="20"
                                   ImagePosition="Left" >

                    </tabView:SfTabItem>
                </tabView:SfTabView.Items>
            </tabView:SfTabView>



        </Grid>
    </Grid>
</ContentPage>