<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KusinaPOS.Views.AboutView">
    <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="20">

                <Border Stroke="{StaticResource BorderColor}"
                    StrokeThickness="1"
                    BackgroundColor="{StaticResource SurfaceDark}"
                    Padding="30"
                    StrokeShape="RoundRectangle 24">
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="0,20" Radius="40" Opacity="0.4" />
                    </Border.Shadow>

                    <VerticalStackLayout Spacing="30">

                        <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                            <Label Text="STREAMLINE YOUR KITCHEN"
                               TextColor="{StaticResource PrimaryColor}"
                               FontSize="11"
                               FontAttributes="Bold"
                               CharacterSpacing="2"
                               HorizontalTextAlignment="Center" />
                            <Label Text="About KusinaPOS"
                               TextColor="{StaticResource TextPrimary}"
                               FontSize="32"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center" />
                            <BoxView HeightRequest="1" 
                                 Color="{StaticResource BorderColor}" 
                                 Margin="0,20,0,0" />
                        </VerticalStackLayout>

                        <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="*" RowSpacing="40">

                            <VerticalStackLayout Grid.Row="0" Spacing="25">
                                <Label LineHeight="1.6">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="KusinaPOS " FontAttributes="Bold" TextColor="{StaticResource PrimaryDark}" />
                                            <Span Text="is a modern, easy-to-use Point of Sale (POS) system designed specifically for restaurants, food stalls, cafés, and small to medium food businesses. It helps streamline daily operations by simplifying order management, sales tracking, and inventory control — all in one reliable system." 
                                              TextColor="{StaticResource TextPrimary}" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>

                                <Label Text="Built with efficiency and usability in mind, KusinaPOS empowers business owners to focus more on serving great food and customers, while the system handles the numbers behind the scenes."
                                   TextColor="{StaticResource TextSecondary}"
                                   FontSize="14" />

                                <VerticalStackLayout Spacing="15">
                                    <HorizontalStackLayout Spacing="10">
                                        <Label Text="&#xf06d;" FontFamily="FontAwesome" TextColor="{StaticResource PrimaryColor}" FontSize="18"/>
                                        <Label Text="Key Features" TextColor="{StaticResource PrimaryColor}" FontSize="20" FontAttributes="Bold" />
                                    </HorizontalStackLayout>

                                <FlexLayout Wrap="Wrap" JustifyContent="SpaceBetween">

                                    <Border WidthRequest="160" Margin="0,5" Padding="12" BackgroundColor="{StaticResource Gray100}" StrokeShape="RoundRectangle 12" Stroke="{StaticResource BorderColor}">
                                            <HorizontalStackLayout Spacing="10">
                                                <Label Text="&#xf058;" FontFamily="FontAwesome" TextColor="{StaticResource PrimaryColor}" />
                                                <Label Text="Fast Transactions" FontSize="12" TextColor="{StaticResource TextPrimary}" VerticalOptions="Center"/>
                                            </HorizontalStackLayout>
                                        </Border>

                                        <Border WidthRequest="160" Margin="0,5" Padding="12" BackgroundColor="{StaticResource Gray100}" StrokeShape="RoundRectangle 12" Stroke="{StaticResource BorderColor}">
                                            <HorizontalStackLayout Spacing="10">
                                                <Label Text="&#xf058;" FontFamily="FontAwesome" TextColor="{StaticResource PrimaryColor}" />
                                                <Label Text="Menu Management" FontSize="12" TextColor="{StaticResource TextPrimary}" VerticalOptions="Center"/>
                                            </HorizontalStackLayout>
                                        </Border>

                                        <Border WidthRequest="160" Margin="0,5" Padding="12" BackgroundColor="{StaticResource Gray100}" StrokeShape="RoundRectangle 12" Stroke="{StaticResource BorderColor}">
                                            <HorizontalStackLayout Spacing="10">
                                                <Label Text="&#xf058;" FontFamily="FontAwesome" TextColor="{StaticResource PrimaryColor}" />
                                                <Label Text="Inventory Tracking" FontSize="12" TextColor="{StaticResource TextPrimary}" VerticalOptions="Center"/>
                                            </HorizontalStackLayout>
                                        </Border>

                                        <Border WidthRequest="160" Margin="0,5" Padding="12" BackgroundColor="{StaticResource Gray100}" StrokeShape="RoundRectangle 12" Stroke="{StaticResource BorderColor}">
                                            <HorizontalStackLayout Spacing="10">
                                                <Label Text="&#xf058;" FontFamily="FontAwesome" TextColor="{StaticResource PrimaryColor}" />
                                                <Label Text="Offline Support" FontSize="12" TextColor="{StaticResource TextPrimary}" VerticalOptions="Center"/>
                                            </HorizontalStackLayout>
                                        </Border>
                                    </FlexLayout>

                                    <Label Text="KusinaPOS is continuously improved based on real-world restaurant workflows to ensure accuracy, speed, and ease of use."
                                       TextColor="{StaticResource TextSecondary}"
                                       FontSize="12"
                                       FontAttributes="Italic" />
                                </VerticalStackLayout>
                            </VerticalStackLayout>

                            <Border Grid.Row="1"
                                Stroke="{StaticResource PrimaryColor}"
                                StrokeThickness="1"
                                BackgroundColor="{StaticResource CardDark}"
                                Padding="25"
                                StrokeShape="RoundRectangle 20">
                                <VerticalStackLayout Spacing="15">
                                    <Label Text="JUNREY B. ONGCOL" TextColor="{StaticResource PrimaryColor}" FontSize="20" FontAttributes="Bold" />
                                    <Label Text="Software Developer" TextColor="{StaticResource TextSecondary}" FontSize="14" Margin="0,-10,0,0"/>

                                    <HorizontalStackLayout Spacing="10">
                                        <Label Text="&#xf0e0;" FontFamily="FontAwesome" TextColor="{StaticResource PrimaryColor}" />
                                        <Label Text="junreyongcol@gmail.com" TextColor="{StaticResource TextPrimary}" FontSize="13" />
                                    </HorizontalStackLayout>

                                    <Grid ColumnDefinitions="*, *" RowDefinitions="Auto, Auto" ColumnSpacing="8" RowSpacing="8">
                                        <Button Grid.Row="0" Grid.Column="0" Text="Website" BackgroundColor="{StaticResource Gray100}" TextColor="White" FontSize="11" CornerRadius="8" />
                                        <Button Grid.Row="0" Grid.Column="1" Text="GitHub" BackgroundColor="{StaticResource Gray100}" TextColor="White" FontSize="11" CornerRadius="8" />
                                        <Button Grid.Row="1" Grid.Column="0" Text="LinkedIn" BackgroundColor="{StaticResource Gray100}" TextColor="White" FontSize="11" CornerRadius="8" />
                                        <Button Grid.Row="1" Grid.Column="1" Text="Facebook" BackgroundColor="{StaticResource Gray100}" TextColor="White" FontSize="11" CornerRadius="8" />
                                    </Grid>

                                    <BoxView HeightRequest="1" Color="{StaticResource BorderColor}" />

                                    <Label Text="KusinaPOS is independently developed with a strong focus on practical business needs, system reliability, and future scalability."
                                       TextColor="{StaticResource TextSecondary}"
                                       FontSize="13"
                                       LineHeight="1.5" />
                                </VerticalStackLayout>
                            </Border>
                        </Grid>
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>
    </ContentView>
